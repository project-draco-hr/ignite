{
  GridLocalEventListener discoLsnr=new DiscoveryListener();
  getSpiContext().addLocalEventListener(discoLsnr);
  Pinger pinger=null;
  if (isPingerStart()) {
    pinger=new Pinger();
    pinger.start();
  }
  JOptionPane.showMessageDialog(null,"Press OK to end test.");
  if (pinger != null) {
    pinger.interrupt();
  }
}
