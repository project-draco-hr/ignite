{
  for (  Map.Entry<String,String> e : endpointCfg.entrySet()) {
    try {
switch (e.getKey()) {
case "type":
        break;
case "port":
      setPort(Integer.parseInt(e.getValue()));
    break;
case "host":
  setHost(e.getValue());
break;
case "management":
setManagement(Boolean.valueOf(e.getValue()));
break;
default :
throw new GridException("Invalid property '" + e.getKey() + "' of "+ getClass().getSimpleName());
}
}
 catch (Throwable t) {
if (t instanceof GridException) throw t;
throw new GridException("Invalid value '" + e.getValue() + "' of the property '"+ e.getKey()+ "' in "+ getClass().getSimpleName(),t);
}
}
}
