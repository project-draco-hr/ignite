{
  String tmpDirPath=this.tmpDirPath == null ? System.getProperty("java.io.tmpdir") : this.tmpDirPath;
  if (tmpDirPath == null)   throw new GridSpiException("Error initializing temporary deployment directory.");
  File dir=new File(tmpDirPath + File.separator + DEPLOY_TMP_ROOT_NAME+ File.separator+ locNodeId);
  if (!U.mkdirs(dir))   throw new GridSpiException("Error initializing temporary deployment directory: " + dir);
  if (!dir.isDirectory())   throw new GridSpiException("Temporary deployment directory path is not a valid directory: " + dir);
  if (!dir.canRead() || !dir.canWrite())   throw new GridSpiException("Can not write to or read from temporary deployment directory: " + dir);
  this.tmpDirPath=tmpDirPath;
  deployTmpDirPath=dir.getPath();
}
