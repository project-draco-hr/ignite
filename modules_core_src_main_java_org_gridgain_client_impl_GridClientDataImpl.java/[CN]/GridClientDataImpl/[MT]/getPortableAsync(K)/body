{
  A.notNull(key,"key");
  return withReconnectHandling(new ClientProjectionClosure<GridPortableObject<V>>(){
    @Override public GridClientFuture<GridPortableObject<V>> apply(    GridClientConnection conn,    UUID destNodeId) throws GridClientConnectionResetException, GridClientClosedException {
      return conn.cacheGet(cacheName,key,flags,destNodeId);
    }
  }
,cacheName,key);
}
