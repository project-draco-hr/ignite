{
  long c=initCap / size;
  if (c < MIN_SIZE)   c=MIN_SIZE;
  if (c * size < initCap)   ++c;
  int cap=1;
  while (cap < c)   cap<<=1;
  for (int i=0; i < size; i++) {
    try {
      segs[i]=new Segment<>(i,cap);
    }
 catch (    GridOffHeapOutOfMemoryException e) {
      destruct();
      throw e;
    }
  }
}
