{
  GridHadoopShuffleJob res=jobs.get(jobId);
  if (res == null) {
    res=new GridHadoopShuffleJob(ctx,log,ctx.jobTracker().job(jobId),mem,ctx.jobTracker().plan(jobId));
    GridHadoopShuffleJob old=jobs.putIfAbsent(jobId,res);
    if (old != null) {
      res.close();
      res=old;
    }
  }
  return res;
}
