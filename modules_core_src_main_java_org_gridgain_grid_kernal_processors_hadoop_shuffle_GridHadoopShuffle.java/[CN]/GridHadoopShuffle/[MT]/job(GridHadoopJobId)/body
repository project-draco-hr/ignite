{
  GridHadoopShuffleJob res=jobs.get(jobId);
  if (res == null) {
    res=new GridHadoopShuffleJob(ctx.jobFactory().createJob(jobId,ctx.jobTracker().jobInfo(jobId)),mem,ctx.jobTracker().plan(jobId).reducers());
    GridHadoopShuffleJob old=jobs.putIfAbsent(jobId,res);
    if (old != null) {
      res.close();
      res=old;
    }
  }
  return res;
}
