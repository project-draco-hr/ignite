{
  int fieldOff=fieldOffset(fieldName);
  if (fieldOff >= 0) {
    byte flag=readByte(fieldOff++);
    if (flag != STRING_ARR)     throw new GridPortableException("Invalid flag value: " + flag);
    int len=readInt(fieldOff);
    if (len >= 0) {
      String[] strs=new String[len];
      fieldOff+=4;
      for (int i=0; i < len; i++) {
        byte[] arr=readByteArray(fieldOff);
        fieldOff+=4;
        if (arr != null)         fieldOff+=arr.length;
        strs[i]=arr != null ? new String(arr,UTF_8) : null;
      }
      return strs;
    }
 else     return null;
  }
 else   return null;
}
