{
  Connection c;
  try {
    c=connectionForSpace(space);
  }
 catch (  IgniteCheckedException e) {
    return new GridFinishedFutureEx<>(e);
  }
  GridCacheTwoStepQuery twoStepQry=GridSqlQuerySplitter.split(c,sqlQry,params);
  if (log.isDebugEnabled())   log.debug("Parsed query: `" + sqlQry + "` into two step query: "+ twoStepQry);
  return queryTwoStep(space,twoStepQry);
}
