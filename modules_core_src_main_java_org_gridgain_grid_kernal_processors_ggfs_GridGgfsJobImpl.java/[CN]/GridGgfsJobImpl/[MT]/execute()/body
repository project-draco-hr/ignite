{
  IgniteFs ggfs=ignite.fileSystem(ggfsName);
  try (IgniteFsInputStream in=ggfs.open(path)){
    IgniteFsFileRange split=new IgniteFsFileRange(path,start,len);
    if (rslvr != null) {
      split=rslvr.resolveRecords(ggfs,in,split);
      if (split == null) {
        log.warning("No data found for split on local node after resolver is applied " + "[ggfsName=" + ggfsName + ", path="+ path+ ", start="+ start+ ", len="+ len+ ']');
        return null;
      }
    }
    in.seek(split.start());
    return job.execute(ggfs,new IgniteFsFileRange(path,split.start(),split.length()),in);
  }
 catch (  IOException e) {
    throw new IgniteCheckedException("Failed to execute GGFS job for file split [ggfsName=" + ggfsName + ", path="+ path+ ", start="+ start+ ", len="+ len+ ']',e);
  }
}
