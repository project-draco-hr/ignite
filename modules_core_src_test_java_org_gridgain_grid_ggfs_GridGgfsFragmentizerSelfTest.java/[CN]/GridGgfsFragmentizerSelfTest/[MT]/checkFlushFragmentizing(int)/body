{
  GridGgfsPath path=new GridGgfsPath("/someFile");
  long written=0;
  int cnt=0;
  int fileSize=50 * GGFS_GROUP_SIZE * GGFS_BLOCK_SIZE;
  IgniteFs ggfs=grid(0).ggfs("ggfs");
  byte[] chunk=new byte[chunkSize];
  while (written < fileSize) {
    try (GridGgfsOutputStream out=ggfs.append(path,true)){
      for (int i=0; i < 8; i++) {
        Arrays.fill(chunk,(byte)cnt);
        out.write(chunk);
        out.flush();
        written+=chunkSize;
        cnt++;
      }
    }
   }
  try (GridGgfsInputStream in=ggfs.open(path)){
    cnt=0;
    int read=0;
    while (read < fileSize) {
      readFully(in,chunk);
      for (      byte b : chunk)       assertEquals("For read offset [start=" + read + ", filler="+ (cnt & 0xFF)+ ']',cnt & 0xFF,b & 0xFF);
      cnt++;
      read+=chunkSize;
    }
  }
 }
