{
  if (useNop)   return nop;
 else {
    String clsName=compTyp.className();
    try {
      Class<?> cls=Class.forName(clsName);
      Constructor<?> ctor=cls.getConstructor(GridKernalContext.class);
      return (T)ctor.newInstance(ctx);
    }
 catch (    ClassNotFoundException e) {
      throw new GridException("Failed to create GridGain component because it's class is not found " + "(is it in classpath?) [component=" + compTyp + ", class="+ clsName+ ']',e);
    }
catch (    NoSuchMethodException e) {
      throw new GridException("Failed to create GridGain component because it's class doesn't have " + "required constructor (is class version correct?) [component=" + compTyp + ", class="+ clsName+ ']',e);
    }
catch (    ReflectiveOperationException e) {
      throw new GridException("Failed to instantiate GridGain component [component=" + compTyp + ", class="+ clsName+ ']',e);
    }
  }
}
