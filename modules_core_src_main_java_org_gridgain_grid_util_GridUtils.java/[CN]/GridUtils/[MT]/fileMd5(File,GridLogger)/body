{
  String md5=null;
  if (file != null) {
    if (!file.isFile()) {
      warn(log,"Failed to find file for md5 calculation: " + file);
      return null;
    }
    InputStream in=null;
    try {
      in=new BufferedInputStream(new FileInputStream(file));
      md5=DigestUtils.md5Hex(in);
    }
 catch (    IOException e) {
      warn(log,"Failed to open input stream for md5 calculation: " + e.getMessage());
    }
 finally {
      closeQuiet(in);
    }
  }
  return md5;
}
