{
  info("*** STARTING TEST ***");
  startGrids();
  try {
    IgniteCache<Integer,String> c=grid(idx).jcache(CACHE_NAME);
    for (int j=0; j < retries; j++) {
      for (int i=0; i < keyCnt; i++)       c.put(i,Integer.toString(i));
      info("Stored items.");
      checkGet(c,j);
      info("Stopping node: " + idx);
      affinityBeforeStop(c);
      stopGrid(idx);
      info("Starting node: " + idx);
      Ignite ignite=startGrid(idx);
      c=ignite.jcache(CACHE_NAME);
      affinityAfterStart(c);
      checkGet(c,j);
    }
  }
  finally {
    stopGrids();
  }
}
