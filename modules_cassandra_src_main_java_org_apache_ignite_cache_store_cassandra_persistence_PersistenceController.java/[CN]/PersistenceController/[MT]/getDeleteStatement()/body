{
  if (delStatement != null)   return delStatement;
  List<String> cols=getKeyColumns();
  StringBuilder statement=new StringBuilder();
  for (  String column : cols) {
    if (statement.length() != 0)     statement.append(" and ");
    statement.append(column).append("=?");
  }
  statement.append(";");
  delStatement="delete from " + persistenceSettings.getKeyspace() + "."+ persistenceSettings.getTable()+ " where "+ statement.toString();
  return delStatement;
}
