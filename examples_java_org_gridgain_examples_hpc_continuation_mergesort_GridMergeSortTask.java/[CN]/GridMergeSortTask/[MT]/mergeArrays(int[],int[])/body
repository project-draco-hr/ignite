{
  int[] ret=new int[arr1.length + arr2.length];
  int i1=0;
  int i2=0;
  for (int i=0; i < ret.length; i++) {
    if (i1 >= arr1.length) {
      System.arraycopy(arr2,i2,ret,i,arr2.length - i2);
      break;
    }
 else     if (i2 >= arr2.length) {
      System.arraycopy(arr1,i1,ret,i,arr1.length - i1);
      break;
    }
 else     ret[i]=arr1[i1] <= arr2[i2] ? arr1[i1++] : arr2[i2++];
  }
  System.out.println("Merged arrays [resLen=" + ret.length + ", len1="+ arr1.length+ ", len2="+ arr2.length+ ']');
  return ret;
}
