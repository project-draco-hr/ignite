{
  if (t == null || cls == null)   return null;
  for (Throwable th=t; th != null; th=th.getCause()) {
    if (cls.isAssignableFrom(th.getClass()))     return (T)th;
    for (    Throwable n : th.getSuppressed()) {
      T found=cause(n,cls);
      if (found != null)       return found;
    }
    if (th.getCause() == th)     break;
  }
  return null;
}
