{
  String logsDir;
  if (ggfs instanceof GridGgfsEx)   logsDir=((GridGgfsEx)ggfs).clientLogDirectory();
 else   if (ggfs == null)   throw new GridException("Failed to get profiler log folder (GGFS instance not found)");
 else   throw new GridException("Failed to get profiler log folder (unexpected GGFS instance type)");
  URL logsDirUrl=GridUtils.resolveGridGainUrl(logsDir != null ? logsDir : DFLT_GGFS_LOG_DIR);
  if (logsDirUrl != null)   return new File(logsDirUrl.getPath()).toPath();
 else   return null;
}
