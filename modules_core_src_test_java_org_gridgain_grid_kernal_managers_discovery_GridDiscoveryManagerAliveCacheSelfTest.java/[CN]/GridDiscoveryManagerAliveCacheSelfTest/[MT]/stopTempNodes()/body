{
  int rmv=0;
  Collection<Grid> toRmv=new ArrayList<>(TMP_NODES_CNT);
  for (Iterator<Grid> iter=alive.iterator(); iter.hasNext() && rmv < TMP_NODES_CNT; ) {
    toRmv.add(iter.next());
    iter.remove();
    rmv++;
  }
  for (  Grid g : toRmv)   g.events().stopLocalListen(lsnr,GridEventType.EVT_NODE_LEFT);
  for (  Grid g : toRmv)   G.stop(g.name(),false);
}
