{
  IgniteConfiguration c=super.getConfiguration(gridName);
  IgniteUriDeploymentSpi deploymentSpi=new IgniteUriDeploymentSpi();
  deploymentSpi.setUriList(Arrays.asList(U.resolveGridGainUrl("modules/core/src/test/resources/").toURI().toString()));
  if (gridName.endsWith("2")) {
    Field f=deploymentSpi.getClass().getDeclaredField("delayOnNewOrUpdatedFile");
    f.setAccessible(true);
    f.set(deploymentSpi,true);
  }
  c.setDeploymentSpi(deploymentSpi);
  return c;
}
