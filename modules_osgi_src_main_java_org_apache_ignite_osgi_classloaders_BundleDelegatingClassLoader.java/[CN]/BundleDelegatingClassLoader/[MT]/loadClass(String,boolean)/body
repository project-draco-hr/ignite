{
  Class<?> cls;
  try {
    cls=findClass(name);
  }
 catch (  ClassNotFoundException e) {
    if (clsLdr == null)     throw classNotFoundException(name);
    try {
      cls=clsLdr.loadClass(name);
    }
 catch (    ClassNotFoundException e2) {
      throw classNotFoundException(name);
    }
  }
  if (resolve)   resolveClass(cls);
  return cls;
}
