{
  GridConfiguration cfg=getConfiguration(name);
  cfg.setRestEnabled(true);
  if (addr != null) {
    cfg.setLocalHost(null);
    System.setProperty(GG_JETTY_HOST,addr);
  }
 else   System.clearProperty(GG_JETTY_HOST);
  if (port != null)   System.setProperty(GG_JETTY_PORT,String.valueOf(port));
 else   System.clearProperty(GG_JETTY_PORT);
  return G.start(cfg);
}
