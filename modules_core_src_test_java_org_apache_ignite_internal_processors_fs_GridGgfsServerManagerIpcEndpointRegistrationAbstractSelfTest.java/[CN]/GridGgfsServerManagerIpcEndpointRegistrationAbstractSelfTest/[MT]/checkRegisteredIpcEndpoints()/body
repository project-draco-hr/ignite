{
  GridKernalContext ctx=((IgniteKernal)grid()).context();
  int tcp=0;
  int shmem=0;
  for (  GridPortRecord record : ctx.ports().records()) {
    if (record.clazz() == GridIpcSharedMemoryServerEndpoint.class)     shmem++;
 else     if (record.clazz() == GridIpcServerTcpEndpoint.class)     tcp++;
  }
  return new T2<>(tcp,shmem);
}
