{
  ctx.kernalContext().gateway().readLock();
  try {
    if (!isHeldExclusively())     throw new IllegalMonitorStateException();
    lastCondition=name;
    object.await();
    sync.validate(true);
  }
 catch (  InterruptedException e) {
    throw new IgniteInterruptedException(e);
  }
 finally {
    ctx.kernalContext().gateway().readUnlock();
  }
}
