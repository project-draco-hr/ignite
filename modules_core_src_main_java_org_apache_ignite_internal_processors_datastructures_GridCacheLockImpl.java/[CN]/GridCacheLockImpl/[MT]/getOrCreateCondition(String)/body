{
  ctx.kernalContext().gateway().readLock();
  try {
    initializeReentrantLock();
    IgniteCondition result=sync.newCondition(name);
    sync.validate(false);
    return result;
  }
 catch (  IgniteCheckedException e) {
    throw U.convertException(e);
  }
 finally {
    ctx.kernalContext().gateway().readUnlock();
  }
}
