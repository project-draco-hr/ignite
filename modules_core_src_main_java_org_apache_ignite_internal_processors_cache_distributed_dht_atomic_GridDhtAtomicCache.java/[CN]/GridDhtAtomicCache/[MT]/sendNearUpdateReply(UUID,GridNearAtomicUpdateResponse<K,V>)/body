{
  try {
    ctx.io().send(nodeId,res,ctx.ioPolicy());
  }
 catch (  ClusterTopologyCheckedException ignored) {
    U.warn(log,"Failed to send near update reply to node because it left grid: " + nodeId);
  }
catch (  IgniteCheckedException e) {
    U.error(log,"Failed to send near update reply (did node leave grid?) [nodeId=" + nodeId + ", res="+ res+ ']',e);
  }
}
