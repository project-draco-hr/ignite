{
  ctx.checkSecurity(SecurityPermission.CACHE_READ);
  if (keyCheck)   validateCacheKey(key);
  CacheOperationContext opCtx=ctx.operationContextPerCall();
  UUID subjId=ctx.subjectIdPerCall(null,opCtx);
  final ExpiryPolicy expiryPlc=opCtx != null ? opCtx.expiry() : null;
  final boolean skipStore=opCtx != null && opCtx.skipStore();
  return getAsync0(ctx.toCacheKeyObject(key),!ctx.config().isReadFromBackup(),subjId,taskName,deserializeBinary,expiryPlc,false,skipStore,true).get();
}
