{
  String path=req.parameter("path");
  int from=integerValue(req.parameter("from"),-1);
  int to=integerValue(req.parameter("to"),-1);
  if (path == null)   path=DFLT_PATH;
  try {
    return new GridFinishedFuture<>(ctx,new GridRestResponse(readLog(path,from,to)));
  }
 catch (  GridException e) {
    return new GridFinishedFuture<>(ctx,e);
  }
catch (  IOException e) {
    return new GridFinishedFuture<>(ctx,e);
  }
}
