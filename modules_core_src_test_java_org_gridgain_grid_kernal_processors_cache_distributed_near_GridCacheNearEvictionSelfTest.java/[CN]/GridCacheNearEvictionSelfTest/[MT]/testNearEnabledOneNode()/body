{
  gridCnt=1;
  startGridsMultiThreaded(gridCnt);
  try {
    GridCache<Integer,String> c=grid(0).cache(null);
    int cnt=100;
    for (int i=0; i < cnt; i++)     assertTrue(c.putx(i,Integer.toString(i)));
    assertEquals(cnt,c.size());
    assertEquals(cnt,c.size());
    assertEquals(0,near(0).nearSize());
  }
  finally {
    stopAllGrids();
  }
}
