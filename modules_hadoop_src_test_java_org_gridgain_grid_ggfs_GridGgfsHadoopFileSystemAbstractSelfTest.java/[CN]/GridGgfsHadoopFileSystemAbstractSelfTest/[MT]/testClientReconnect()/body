{
  Path filePath=new Path("ggfs://127.0.0.1:10500/file1");
  final FSDataOutputStream s=fs.create(filePath);
  try {
    G.stopAll(true);
    startNodes();
    assertTrue(fs.mkdirs(new Path("ggfs://127.0.0.1:10500/dir1/dir2")));
    GridTestUtils.assertThrows(log,new Callable<Object>(){
      @Nullable @Override public Object call() throws Exception {
        s.write("test".getBytes());
        s.flush();
        return null;
      }
    }
,IOException.class,null);
    assertFalse(fs.exists(filePath));
  }
  finally {
    U.closeQuiet(s);
  }
}
