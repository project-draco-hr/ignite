{
  Socket sock0=sock;
  if (sock0 == null) {
    if (log.isDebugEnabled())     log.debug("Failed to start heartbeat sender, node is already disconnected.");
    return;
  }
  try {
    while (!isInterrupted()) {
      U.sleep(hbFreq);
      TcpDiscoveryHeartbeatMessage msg=new TcpDiscoveryHeartbeatMessage(getLocalNodeId());
      msg.client(true);
      sockRdr.addMessage(msg);
    }
  }
 catch (  IgniteInterruptedCheckedException ignored) {
    if (log.isDebugEnabled())     log.debug("Heartbeat sender was interrupted.");
  }
}
