{
  String name=cfg.get(JobContext.WORKING_DIR);
  if (name != null)   return new Path(name);
 else {
    try {
      Path dir=FileSystem.get(cfg).getWorkingDirectory();
      cfg.set(JobContext.WORKING_DIR,dir.toString());
      return dir;
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}
