{
  try {
    if (!fileSystemForUser().mkdirs(convert(path),new HadoopIgfsProperties(props).permission()))     throw new IgniteException("Failed to make directories [path=" + path + ", props="+ props+ "]");
  }
 catch (  IOException e) {
    throw handleSecondaryFsError(e,"Failed to make directories [path=" + path + ", props="+ props+ "]");
  }
}
