{
  IgniteConfiguration cfg=super.getConfiguration(gridName);
  CacheConfiguration<Integer,Person> ccfg=new CacheConfiguration<Integer,Person>(QUERY_CACHE).setCacheMode(PARTITIONED).setAtomicityMode(ATOMIC).setBackups(1).setIndexedTypes(Integer.class,Person.class);
  cfg.setCacheConfiguration(ccfg);
  return cfg;
}
