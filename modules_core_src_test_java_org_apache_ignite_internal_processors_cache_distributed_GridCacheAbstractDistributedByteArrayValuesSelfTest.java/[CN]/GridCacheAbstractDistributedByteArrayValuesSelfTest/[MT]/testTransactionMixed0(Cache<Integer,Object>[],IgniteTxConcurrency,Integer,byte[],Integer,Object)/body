{
  for (  Cache<Integer,Object> cache : caches) {
    IgniteTx tx=cache.txStart(concurrency,REPEATABLE_READ);
    try {
      cache.put(key1,val1);
      if (key2 != null)       cache.put(key2,val2);
      tx.commit();
    }
  finally {
      tx.close();
    }
    for (    Cache<Integer,Object> cacheInner : caches) {
      tx=cacheInner.txStart(concurrency,REPEATABLE_READ);
      try {
        assertArrayEquals(val1,(byte[])cacheInner.get(key1));
        if (key2 != null) {
          Object actual=cacheInner.get(key2);
          assertEquals(val2,actual);
        }
        tx.commit();
      }
  finally {
        tx.close();
      }
    }
    tx=cache.txStart(concurrency,REPEATABLE_READ);
    try {
      cache.remove(key1);
      if (key2 != null)       cache.remove(key2);
      tx.commit();
    }
  finally {
      tx.close();
    }
    assertNull(cache.get(key1));
  }
}
