{
  String logsDir;
  if (igfs instanceof IgfsEx)   logsDir=((IgfsEx)igfs).clientLogDirectory();
 else   if (igfs == null)   throw new IgniteCheckedException("Failed to get profiler log folder (GGFS instance not found)");
 else   throw new IgniteCheckedException("Failed to get profiler log folder (unexpected GGFS instance type)");
  URL logsDirUrl=U.resolveIgniteUrl(logsDir != null ? logsDir : DFLT_IGFS_LOG_DIR);
  return logsDirUrl != null ? new File(logsDirUrl.getPath()).toPath() : null;
}
