{
  if (policy instanceof CacheLruEvictionPolicyMBean)   return ((CacheLruEvictionPolicyMBean)policy).getMaxSize();
  if (policy instanceof CacheRandomEvictionPolicyMBean)   return ((CacheRandomEvictionPolicyMBean)policy).getMaxSize();
  if (policy instanceof CacheFifoEvictionPolicyMBean)   return ((CacheFifoEvictionPolicyMBean)policy).getMaxSize();
  return null;
}
