{
  if (tx == null)   return "null";
  return tx.getClass().getSimpleName() + "[id=" + tx.xid()+ ", concurrency="+ tx.concurrency()+ ", isolation="+ tx.isolation()+ ", state="+ tx.state()+ ", invalidate="+ tx.isInvalidate()+ ", rollbackOnly="+ tx.isRollbackOnly()+ ", nodeId="+ tx.nodeId()+ ", duration="+ (U.currentTimeMillis() - tx.startTime())+ ']';
}
