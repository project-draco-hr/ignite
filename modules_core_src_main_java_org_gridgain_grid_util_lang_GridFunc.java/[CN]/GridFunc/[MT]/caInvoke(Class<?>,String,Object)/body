{
  A.notNull(cls,"cls",mtdName,"mtdName");
  return new CA(){
    /** 
 */
    private Method mtd;
    @SuppressWarnings("unchecked") @Override public void apply(){
      try {
        if (mtd == null) {
          mtd=method(cls,mtdName,args);
          mtd.setAccessible(true);
        }
        mtd.invoke(null,args);
      }
 catch (      Throwable e) {
        throw wrap(e);
      }
    }
  }
;
}
