{
  A.notNull(o,"o",mtdName,"mtdName");
  return new CO<R>(){
    private Method mtd;
    @SuppressWarnings("unchecked") @Override public R apply(){
      try {
        if (mtd == null) {
          mtd=method(o.getClass(),mtdName,args);
