{
  if (reason == CONN_IDLE)   throw new GridConnectionIdleClosedException("Connection was closed by idle thread (will " + "reconnect): " + serverAddress());
  if (reason == FAILED)   throw new GridClientConnectionResetException("Failed to perform request (connection failed before " + "message is sent): " + serverAddress());
  if (reason == CLIENT_CLOSED)   throw new GridClientClosedException("Failed to perform request (connection was closed before " + "message is sent): " + serverAddress());
}
