{
  if (F.exist(nodes,new P1<GridNode>(){
    @Override public boolean apply(    GridNode node){
      return nodeId.equals(node.id());
    }
  }
)) {
    onResult(nodeId,new GridDistributedLockResponse<K,V>(lockVer,futId,new GridTopologyException("Valid exception to signal departure of node: " + nodeId)));
    return true;
  }
  return false;
}
