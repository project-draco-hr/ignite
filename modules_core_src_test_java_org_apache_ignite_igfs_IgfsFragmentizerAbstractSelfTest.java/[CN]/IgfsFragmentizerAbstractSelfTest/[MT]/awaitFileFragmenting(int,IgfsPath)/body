{
  IgfsEx ggfs=(IgfsEx)grid(gridIdx).fileSystem("ggfs");
  IgfsMetaManager meta=ggfs.context().meta();
  IgniteUuid fileId=meta.fileId(path);
  if (fileId == null)   throw new IgfsFileNotFoundException("File not found: " + path);
  IgfsFileInfo fileInfo=meta.info(fileId);
  do {
    if (fileInfo == null)     throw new IgfsFileNotFoundException("File not found: " + path);
    if (fileInfo.fileMap().ranges().isEmpty())     return;
    U.sleep(100);
    fileInfo=meta.info(fileId);
  }
 while (true);
}
