{
  GridCache<Integer,Integer> cache=grid(0).cache(null);
  int keyCnt=keyCount();
  int expReads=0;
  for (int i=0; i < keyCnt; i++) {
    assertNull("Value is not null for key: " + i,cache.get(i));
    if (cache.configuration().getCacheMode() == GridCacheMode.REPLICATED || cache.affinity().isPrimary(grid(0).localNode(),i))     expReads++;
 else     expReads+=2;
  }
  long writes=0;
  long reads=0;
  long hits=0;
  long misses=0;
  for (int i=0; i < gridCount(); i++) {
    GridCacheMetrics m=grid(i).cache(null).metrics();
    writes+=m.writes();
    reads+=m.reads();
    hits+=m.hits();
    misses+=m.misses();
  }
  assertEquals(0,writes);
  assertEquals(expReads,reads);
  assertEquals(0,hits);
  assertEquals(expReads,misses);
}
