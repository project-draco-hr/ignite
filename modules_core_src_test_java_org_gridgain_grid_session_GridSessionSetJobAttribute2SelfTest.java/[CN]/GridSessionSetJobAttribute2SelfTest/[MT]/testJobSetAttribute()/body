{
  try {
    Grid grid1=startGrid(1);
    Grid grid2=startGrid(2);
    grid1.compute().localDeployTask(SessionTestTask.class,SessionTestTask.class.getClassLoader());
    GridComputeTaskFuture<?> fut=grid1.compute().execute(SessionTestTask.class.getName(),grid2.localNode().id());
    fut.get();
  }
  finally {
    stopGrid(1);
    stopGrid(2);
  }
}
