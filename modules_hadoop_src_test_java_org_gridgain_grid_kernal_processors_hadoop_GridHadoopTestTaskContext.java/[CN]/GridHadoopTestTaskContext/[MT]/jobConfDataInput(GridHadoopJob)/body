{
  JobConf jobConf=new JobConf();
  for (  Map.Entry<String,String> e : ((GridHadoopDefaultJobInfo)job.info()).properties().entrySet())   jobConf.set(e.getKey(),e.getValue());
  ByteArrayOutputStream buf=new ByteArrayOutputStream();
  try {
    jobConf.write(new DataOutputStream(buf));
  }
 catch (  IOException e) {
    throw new GridException(e);
  }
  return new DataInputStream(new ByteArrayInputStream(buf.toByteArray()));
}
