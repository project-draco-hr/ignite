{
  IgniteCache<Integer,String> cache=jcache(0);
  int key=0;
  while (true) {
    boolean found=false;
    for (    ClusterNode n : grid(0).cluster().nodes()) {
      if (!grid(0).affinity(null).isPrimaryOrBackup(n,key)) {
        found=true;
        break;
      }
    }
    if (found)     break;
  }
  assertTrue(cache.putIfAbsent(key,"val"));
  checkStoreUsage(1,1,0,1);
}
