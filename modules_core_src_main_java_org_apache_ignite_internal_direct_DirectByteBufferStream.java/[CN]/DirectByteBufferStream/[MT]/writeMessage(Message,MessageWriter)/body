{
  if (msg != null) {
    if (buf.hasRemaining()) {
      try {
        writer.beforeInnerMessageWrite();
        lastFinished=msg.writeTo(buf,writer);
      }
  finally {
        writer.afterInnerMessageWrite(lastFinished);
      }
    }
 else     lastFinished=false;
  }
 else   writeByte(Byte.MIN_VALUE);
}
