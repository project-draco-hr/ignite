{
  init();
  Socket sock=null;
  try {
    sock=new Socket();
    sock.bind(new InetSocketAddress(locAddr,locPort));
    sock.connect(new InetSocketAddress(addr.getAddress(),addr.getPort()),connTimeout);
    return true;
  }
 catch (  IOException e) {
    throw new GridException("Failed to check address reachability: " + addr,e);
  }
 finally {
    U.closeQuiet(sock);
  }
}
