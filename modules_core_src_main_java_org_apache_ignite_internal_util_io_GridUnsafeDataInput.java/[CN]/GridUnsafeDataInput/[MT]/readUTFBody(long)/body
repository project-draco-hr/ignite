{
  StringBuilder sbuf=new StringBuilder();
  end=pos=0;
  while (utfLen > 0) {
    int avail=end - pos;
    if (avail >= 3 || (long)avail == utfLen)     utfLen-=readUTFSpan(sbuf,utfLen);
 else {
      if (avail > 0)       UNSAFE.copyMemory(utfBuf,byteArrOff + pos,utfBuf,byteArrOff,avail);
      pos=0;
      end=(int)Math.min(MAX_BLOCK_SIZE,utfLen);
      readFully(utfBuf,avail,end - avail);
    }
  }
  return sbuf.toString();
}
