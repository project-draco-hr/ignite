{
  assertNotNull(grid);
  log.info("Running job [node=" + grid.cluster().localNode().id() + ", job="+ getClass().getSimpleName()+ "]");
  try {
    GridCacheQueue<Integer> queue=grid.cache(null).dataStructures().queue(queueName,0,true,false);
    assertNotNull(queue);
    int i=0;
    while (!stop)     queue.add(i++);
  }
 catch (  Exception e) {
    error("Failed to put value to the queue",e);
    fail("Unexpected exception: " + e);
  }
  log.info("PutJob finished");
}
