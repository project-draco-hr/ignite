{
  Collection<? extends GridCache<?,?>> caches=arg.allCaches ? ignite.cachesx(new VisorSystemCachesPredicate(arg.systemCaches)) : F.asList(ignite.cachex(arg.cacheName));
  if (caches != null) {
    Map<String,VisorCacheMetrics> res=U.newHashMap(caches.size());
    for (    GridCache<?,?> c : caches)     res.put(c.name(),VisorCacheMetrics.from(c));
    return res;
  }
  return null;
}
