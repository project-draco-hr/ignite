{
  A.notNull(f,"f");
  enterBusy();
  try {
    GridGgfsPath path=convert(f);
    GridGgfsMode mode=modeRslvr.resolveMode(path);
    if (mode == PROXY) {
      if (clientLog.isLogEnabled())       clientLog.logMakeDirectory(path,PROXY);
      secondaryFs.mkdir(toSecondary(f),perm,createParent);
    }
 else {
      rmtClient.mkdirs(path,permission(perm)).get();
      if (clientLog.isLogEnabled())       clientLog.logMakeDirectory(path,mode);
    }
  }
 catch (  GridException e) {
    throw cast(e);
  }
 finally {
    leaveBusy();
  }
}
