{
  try {
    byte[] buf=new byte[1 << 17];
    while (true) {
      int bytesRead=inputStream.read(buf);
      if (bytesRead == -1)       break;
      outputStream.write(buf,0,bytesRead);
      outputStream.flush();
    }
  }
 catch (  IOException e) {
    X.error("IOException while forwarding data [threadName=" + getName() + "]",e);
  }
 finally {
    latch.countDown();
  }
}
