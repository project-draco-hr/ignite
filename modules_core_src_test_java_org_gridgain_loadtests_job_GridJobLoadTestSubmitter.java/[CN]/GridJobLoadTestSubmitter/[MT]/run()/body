{
  GridCompute comp=grid.compute().enableAsync();
  while (true) {
    checkCompletion();
    performCancel();
    try {
      Thread.sleep(submitDelay);
    }
 catch (    InterruptedException ignored) {
      return;
    }
    comp.withTimeout(TIMEOUT).execute(GridJobLoadTestTask.class,params);
    futures.add(comp.<Integer>future());
  }
}
