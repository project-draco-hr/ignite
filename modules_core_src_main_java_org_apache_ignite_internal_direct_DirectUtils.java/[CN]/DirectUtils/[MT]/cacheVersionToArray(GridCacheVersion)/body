{
  byte[] arr=null;
  if (ver != null) {
    arr=new byte[24];
    UNSAFE.putInt(arr,BYTE_ARR_OFF,ver.topologyVersion());
    UNSAFE.putInt(arr,BYTE_ARR_OFF + 4,ver.nodeOrderAndDrIdRaw());
    UNSAFE.putLong(arr,BYTE_ARR_OFF + 8,ver.globalTime());
    UNSAFE.putLong(arr,BYTE_ARR_OFF + 16,ver.order());
  }
  return arr;
}
