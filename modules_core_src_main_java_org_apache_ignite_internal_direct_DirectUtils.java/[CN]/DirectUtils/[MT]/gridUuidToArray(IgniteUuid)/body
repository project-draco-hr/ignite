{
  byte[] arr=null;
  if (uuid != null) {
    arr=new byte[24];
    UNSAFE.putLong(arr,BYTE_ARR_OFF,uuid.globalId().getMostSignificantBits());
    UNSAFE.putLong(arr,BYTE_ARR_OFF + 8,uuid.globalId().getLeastSignificantBits());
    UNSAFE.putLong(arr,BYTE_ARR_OFF + 16,uuid.localId());
  }
  return arr;
}
