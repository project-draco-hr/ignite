{
  String propVal=System.getProperty(GG_UPDATE_NOTIFIER);
  System.setProperty(GG_UPDATE_NOTIFIER,"true");
  try {
    Ignite ignite=startGrid();
    GridProductVersion currVer=ignite.product().version();
    String newVer=null;
    for (int i=0; i < 30; i++) {
      newVer=ignite.product().latestVersion();
      if (newVer != null)       break;
      U.sleep(100);
    }
    info("Versions [cur=" + currVer + ", latest="+ newVer+ ']');
    assertNotNull(newVer);
    assertNotSame(currVer.toString(),newVer);
  }
  finally {
    stopGrid();
    if (propVal != null)     System.setProperty(GG_UPDATE_NOTIFIER,propVal);
 else     System.clearProperty(GG_UPDATE_NOTIFIER);
  }
}
