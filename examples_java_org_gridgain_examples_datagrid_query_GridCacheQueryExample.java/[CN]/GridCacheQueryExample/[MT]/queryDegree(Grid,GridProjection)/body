{
  GridCacheProjection<GridCacheAffinityKey<UUID>,AffinityPerson> cache=cache(g);
  GridCacheQuery<Map.Entry<GridCacheAffinityKey<UUID>,AffinityPerson>> masters=cache.queries().createFullTextQuery(AffinityPerson.class,"Master").projection(p);
  GridCacheQuery<Map.Entry<GridCacheAffinityKey<UUID>,AffinityPerson>> bachelors=cache.queries().createFullTextQuery(AffinityPerson.class,"Bachelor").projection(p);
  print("Following people have 'Master Degree' in their resumes: ",masters.execute().get());
  print("Following people have 'Bachelor Degree' in their resumes: ",bachelors.execute().get());
}
