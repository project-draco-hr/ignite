{
  GridCacheProjection<GridCacheAffinityKey<UUID>,AffinityPerson> cache=cache(g);
  GridCacheQuery<Map.Entry<GridCacheAffinityKey<UUID>,AffinityPerson>> qry=cache.queries().createSqlQuery(AffinityPerson.class,"from AffinityPerson, Organization " + "where " + "AffinityPerson.orgId = Organization.id and lower(Organization.name) = lower(?)").projection(p);
  print("Following people are 'GridGain' employees: ",qry.execute("GridGain").get());
  print("Following people are 'Other' employees: ",qry.execute("Other").get());
}
