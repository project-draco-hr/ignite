{
  try (PreparedStatement st=conn.prepareStatement("insert into PERSON (id, firstName, lastName, orgId, salary) values(?, ?, ?, ?, ?)")){
    st.setInt(1,p.id);
    st.setString(2,p.firstName);
    st.setString(3,p.lastName);
    st.setInt(4,p.orgId);
    st.setDouble(5,p.salary);
    st.executeUpdate();
  }
 }
