{
  CacheConfiguration<?,?> cc=defaultCacheConfiguration();
  cc.setName(name);
  cc.setCacheMode(mode);
  cc.setWriteSynchronizationMode(CacheWriteSynchronizationMode.FULL_SYNC);
  cc.setAtomicityMode(CacheAtomicityMode.TRANSACTIONAL);
  if (mode == CacheMode.PARTITIONED)   cc.setIndexedTypes(Integer.class,Organization.class,AffinityKey.class,Person.class,AffinityKey.class,Purchase.class);
 else   if (mode == CacheMode.REPLICATED)   cc.setIndexedTypes(Integer.class,Product.class);
 else   throw new IllegalStateException("mode: " + mode);
  return cc;
}
