{
  URI uri=path.toUri();
  if (uri.isAbsolute()) {
    if (!F.eq(uri.getScheme(),GGFS_SCHEME))     throw new InvalidPathException("Wrong path scheme [expected=" + GGFS_SCHEME + ", actual="+ uri.getAuthority()+ ']');
    if (!F.eq(uri.getAuthority(),uriAuthority))     throw new InvalidPathException("Wrong path authority [expected=" + uriAuthority + ", actual="+ uri.getAuthority()+ ']');
  }
}
