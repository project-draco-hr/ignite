{
  ctx.denyOnFlags(F.asList(LOCAL,READ));
  A.notNull(key,"key");
  validateCacheKey(key);
  long topVer=ctx.discovery().topologyVersion();
  while (true) {
    try {
      if (ctx.isNear() && ctx.affinity().localNode(key,ctx.discovery().topologyVersion()))       return null;
      return ctx.cloneOnFlag(entryEx(key).innerReload(topVer,filter));
    }
 catch (    GridCacheEntryRemovedException ignored) {
      if (log.isDebugEnabled())       log.debug("Attempted to reload a removed entry for key (will retry): " + key);
    }
  }
}
