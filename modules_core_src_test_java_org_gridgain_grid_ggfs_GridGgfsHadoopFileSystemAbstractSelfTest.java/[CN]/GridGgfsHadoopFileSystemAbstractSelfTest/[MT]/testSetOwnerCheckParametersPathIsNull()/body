  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      fs.setOwner(null,"aUser","aGroup");
      return null;
    }
  }
,NullPointerException.class,"Ouch! Argument cannot be null: p");
