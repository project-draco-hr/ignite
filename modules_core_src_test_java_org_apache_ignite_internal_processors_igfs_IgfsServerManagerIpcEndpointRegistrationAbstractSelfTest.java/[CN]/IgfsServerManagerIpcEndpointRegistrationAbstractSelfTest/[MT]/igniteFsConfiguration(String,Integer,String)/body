{
  HashMap<String,String> endPntCfg=null;
  if (endPntType != null) {
    endPntCfg=new HashMap<>();
    endPntCfg.put("type",endPntType);
    if (endPntPort != null)     endPntCfg.put("port",String.valueOf(endPntPort));
    if (endPntHost != null)     endPntCfg.put("host",endPntHost);
  }
  IgfsConfiguration ggfsConfiguration=new IgfsConfiguration();
  ggfsConfiguration.setDataCacheName("partitioned");
  ggfsConfiguration.setMetaCacheName("replicated");
  ggfsConfiguration.setName("igfs" + UUID.randomUUID());
  ggfsConfiguration.setManagementPort(mgmtPort.getAndIncrement());
  if (endPntCfg != null)   ggfsConfiguration.setIpcEndpointConfiguration(endPntCfg);
  return ggfsConfiguration;
}
