{
  boolean clientMode;
  Ignite ignite0=ignite;
  if (ignite0 != null) {
    DiscoverySpi discoSpi=ignite0.configuration().getDiscoverySpi();
    if (!(discoSpi instanceof TcpDiscoverySpi))     throw new IgniteSpiException("TcpDiscoveryIpFinder should be used with TcpDiscoverySpi: " + discoSpi);
    clientMode=ignite0.configuration().isClientMode() && !((TcpDiscoverySpi)discoSpi).isForceServerMode();
  }
 else   clientMode=false;
  return clientMode;
}
