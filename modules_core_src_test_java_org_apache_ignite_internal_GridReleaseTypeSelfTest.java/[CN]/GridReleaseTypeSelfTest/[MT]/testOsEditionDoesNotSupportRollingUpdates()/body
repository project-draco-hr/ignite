{
  firstNodeVer="1.0.0";
  secondNodeVer="1.0.1";
  try {
    startGrids(2);
  }
 catch (  IgniteCheckedException e) {
    StringWriter errors=new StringWriter();
    e.printStackTrace(new PrintWriter(errors));
    String stackTrace=errors.toString();
    assertTrue("Caught exception does not contain specified string.",stackTrace.contains("Local node and remote node have different version numbers"));
    return;
  }
 finally {
    stopAllGrids();
  }
  fail("Exception has not been thrown.");
}
