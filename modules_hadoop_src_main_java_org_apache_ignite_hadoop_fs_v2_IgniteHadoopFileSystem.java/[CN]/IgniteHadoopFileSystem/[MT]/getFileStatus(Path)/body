{
  A.notNull(f,"f");
  enterBusy();
  try {
    if (mode(f) == PROXY)     return toPrimary(secondaryFs.getFileStatus(toSecondary(f)));
 else {
      IgfsFile info=rmtClient.info(convert(f));
      if (info == null)       throw new FileNotFoundException("File not found: " + f);
      return convert(info);
    }
  }
  finally {
    leaveBusy();
  }
}
