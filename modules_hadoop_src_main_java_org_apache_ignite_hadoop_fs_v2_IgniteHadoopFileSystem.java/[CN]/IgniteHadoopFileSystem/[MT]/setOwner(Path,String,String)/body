{
  A.notNull(p,"p");
  A.notNull(usr,"username");
  A.notNull(grp,"grpName");
  enterBusy();
  try {
    if (mode(p) == PROXY)     secondaryFileSystem().setOwner(toSecondary(p),usr,grp);
 else     if (rmtClient.update(convert(p),F.asMap(IgfsUtils.PROP_USER_NAME,usr,IgfsUtils.PROP_GROUP_NAME,grp)) == null) {
      throw new IOException("Failed to set file permission (file not found?)" + " [path=" + p + ", username="+ usr+ ", grpName="+ grp+ ']');
    }
  }
  finally {
    leaveBusy();
  }
}
