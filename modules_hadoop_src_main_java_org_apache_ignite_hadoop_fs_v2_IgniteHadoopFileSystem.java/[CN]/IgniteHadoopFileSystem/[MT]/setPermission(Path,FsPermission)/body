{
  enterBusy();
  try {
    A.notNull(p,"p");
    if (mode(p) == PROXY)     secondaryFs.setPermission(toSecondary(p),perm);
 else {
      if (rmtClient.update(convert(p),permission(perm)) == null)       throw new IOException("Failed to set file permission (file not found?)" + " [path=" + p + ", perm="+ perm+ ']');
    }
  }
  finally {
    leaveBusy();
  }
}
