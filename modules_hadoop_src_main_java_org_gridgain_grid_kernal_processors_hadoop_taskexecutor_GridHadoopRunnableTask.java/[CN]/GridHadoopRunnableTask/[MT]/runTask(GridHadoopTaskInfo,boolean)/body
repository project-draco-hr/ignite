{
  if (cancelled)   throw new GridHadoopTaskCancelledException("Task cancelled.");
  try (GridHadoopTaskOutput out=createOutput(info,locCombiner);GridHadoopTaskInput in=createInput(info,locCombiner)){
    GridHadoopTaskContext ctx=job.createTaskContext(info,in,out);
    task=job.createTask(info);
    if (cancelled)     throw new GridHadoopTaskCancelledException("Task cancelled.");
    task.run(ctx);
  }
 }
