{
  Exception err=null;
  for (int i=0; i < 2; i++) {
    NewGridGgfsHadoopEx curDelegate=null;
    try {
      curDelegate=delegate();
      return clo.apply(curDelegate);
    }
 catch (    GridGgfsHadoopCommunicationException e) {
      curDelegate.close();
      if (!delegateRef.compareAndSet(curDelegate,null))       curDelegate.close();
      if (log.isDebugEnabled())       log.debug("Failed to send message to a server: " + e);
      err=e;
    }
catch (    GridException e) {
      throw new IOException(e);
    }
  }
  throw new IOException("Failed to establish connection with GGFS.",err);
}
