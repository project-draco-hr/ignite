{
  Collection<String> names=block.names();
  Collection<String> hosts=block.hosts();
  return new BlockLocation(names.toArray(new String[names.size()]),hosts.toArray(new String[hosts.size()]),block.start(),block.length()){
    @Override public String toString(){
      try {
        return "BlockLocation [offset=" + getOffset() + ", length="+ getLength()+ ", hosts="+ Arrays.asList(getHosts())+ ", names="+ Arrays.asList(getNames())+ ']';
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
;
}
