{
  if (min <= 0)   throw new IllegalArgumentException("Incorrect min time specified: " + min);
  if (max <= min)   throw new IllegalArgumentException("Incorrect max time specified: " + max);
  if (incr < 10)   throw new IllegalArgumentException("Incorrect increment specified: " + incr);
  this.min=min;
  this.max=max;
  this.incr=incr;
  this.log=log;
}
