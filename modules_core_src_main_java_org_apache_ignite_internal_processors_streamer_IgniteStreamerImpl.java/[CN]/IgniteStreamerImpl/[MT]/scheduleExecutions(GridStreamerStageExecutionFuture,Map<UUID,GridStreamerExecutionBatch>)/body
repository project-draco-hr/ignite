{
  for (  Map.Entry<UUID,GridStreamerExecutionBatch> entry : execs.entrySet()) {
    UUID nodeId=entry.getKey();
    GridStreamerExecutionBatch batch=entry.getValue();
    if (ctx.localNodeId().equals(nodeId))     scheduleLocal(batch);
 else {
      if (log.isDebugEnabled())       log.debug("Sending batch execution request to remote node [nodeId=" + nodeId + ", futId="+ batch.futureId()+ ", stageName="+ batch.stageName()+ ']');
      sendWithRetries(nodeId,createExecutionRequest(batch));
      if (!ctx.discovery().alive(nodeId))       fut.onNodeLeft(nodeId);
    }
  }
}
