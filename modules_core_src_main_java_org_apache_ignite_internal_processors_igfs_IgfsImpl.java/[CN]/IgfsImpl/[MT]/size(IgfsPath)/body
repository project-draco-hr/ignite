{
  A.notNull(path,"path");
  if (meta.isClient())   return meta.runClientTask(new IgfsClientSizeCallable(cfg.getName(),path));
  return safeOp(new Callable<Long>(){
    @Override public Long call() throws Exception {
      IgniteUuid nextId=meta.fileId(path);
      if (nextId == null)       return 0L;
      IgfsPathSummary sum=new IgfsPathSummary(path);
      summary0(nextId,sum);
      return sum.totalLength();
    }
  }
);
}
