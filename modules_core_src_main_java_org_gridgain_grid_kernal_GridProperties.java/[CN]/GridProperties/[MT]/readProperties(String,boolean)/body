{
  InputStream is=GridProductImpl.class.getClassLoader().getResourceAsStream(path);
  if (is == null) {
    if (throwExc)     throw new RuntimeException("Cannot find '" + path + "' file.");
 else     return;
  }
  try {
    PROPS.load(is);
  }
 catch (  IOException e) {
    throw new RuntimeException("Cannot read '" + path + "' file.",e);
  }
}
