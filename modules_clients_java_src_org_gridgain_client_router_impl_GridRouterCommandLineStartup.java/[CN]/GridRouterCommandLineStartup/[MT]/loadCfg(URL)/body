{
  GenericApplicationContext springCtx;
  try {
    springCtx=new GenericApplicationContext();
    new XmlBeanDefinitionReader(springCtx).loadBeanDefinitions(new UrlResource(springCfgUrl));
    springCtx.refresh();
  }
 catch (  BeansException e) {
    throw new GridException("Failed to instantiate Spring XML application context [springUrl=" + springCfgUrl + ", err="+ e.getMessage()+ ']',e);
  }
  return springCtx;
}
