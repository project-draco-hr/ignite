{
  int recsSize;
synchronized (recs) {
    recsSize=recs.size();
  }
  int lsnrsSize;
synchronized (lsnrs) {
    lsnrsSize=lsnrs.size();
  }
  X.println(">>>");
  X.println(">>> Task session processor memory stats [grid=" + ctx.gridName() + ']');
  X.println(">>>  recsSize: " + recsSize);
  X.println(">>>  lsnrsSize: " + lsnrsSize);
}
