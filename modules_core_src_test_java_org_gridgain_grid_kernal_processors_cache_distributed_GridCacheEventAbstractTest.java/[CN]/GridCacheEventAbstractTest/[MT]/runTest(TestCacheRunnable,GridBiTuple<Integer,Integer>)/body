{
  for (int i=0; i < gridCount(); i++) {
    info(">>> Running test for grid [idx=" + i + ", grid="+ grid(i).name()+ ", id="+ grid(i).localNode().id()+ ']');
    try {
      run.run(cache(i));
      waitForEvents(i,evtCnts);
    }
 catch (    Exception e) {
      throw e;
    }
 finally {
      TestEventListener.reset();
      clearCaches();
      TestEventListener.reset();
    }
  }
}
