{
  this.cctx=cctx;
  log=cctx.logger(GridCachePerThreadTxCommitBuffer.class);
  int logSize=cctx.config().getPessimisticTxLogSize();
  infoMap=logSize > 0 ? new GridBoundedConcurrentLinkedHashMap<StoreKey,GridCacheCommittedTxInfo<K,V>>(logSize) : new ConcurrentHashMap8<StoreKey,GridCacheCommittedTxInfo<K,V>>();
}
