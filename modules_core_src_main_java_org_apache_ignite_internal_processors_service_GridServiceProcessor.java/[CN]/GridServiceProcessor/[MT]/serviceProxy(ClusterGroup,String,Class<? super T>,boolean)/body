{
  if (hasLocalNode(prj)) {
    ServiceContextImpl ctx=serviceContext(name);
    if (ctx != null) {
      Service svc=ctx.service();
      if (svc != null) {
        if (!svcItf.isAssignableFrom(svc.getClass()))         throw new IgniteException("Service does not implement specified interface [svcItf=" + svcItf.getName() + ", svcCls="+ svc.getClass().getName()+ ']');
        return (T)svc;
      }
    }
  }
  return new GridServiceProxy<T>(prj,name,svcItf,sticky,ctx).proxy();
}
