{
  for (  Map.Entry<String,GridServiceDeploymentFuture> e : depFuts.entrySet()) {
    GridServiceDeploymentFuture fut=e.getValue();
    fut.onDone(new IgniteClientDisconnectedCheckedException(ctx.cluster().clientReconnectFuture(),"Failed to deploy service, client node disconnected."));
    depFuts.remove(e.getKey(),fut);
  }
  for (  Map.Entry<String,GridFutureAdapter<?>> e : undepFuts.entrySet()) {
    GridFutureAdapter fut=e.getValue();
    fut.onDone(new IgniteClientDisconnectedCheckedException(ctx.cluster().clientReconnectFuture(),"Failed to undeploy service, client node disconnected."));
    undepFuts.remove(e.getKey(),fut);
  }
}
