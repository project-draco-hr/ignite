{
  Collection<ServiceContextImpl> ctxs;
synchronized (locSvcs) {
    ctxs=locSvcs.get(name);
  }
  if (ctxs == null)   return null;
synchronized (ctxs) {
    Collection<T> res=new ArrayList<>(ctxs.size());
    for (    ServiceContextImpl ctx : ctxs)     res.add((T)ctx.service());
    return res;
  }
}
