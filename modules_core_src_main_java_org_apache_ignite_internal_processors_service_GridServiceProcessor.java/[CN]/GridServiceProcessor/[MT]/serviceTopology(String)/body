{
  ClusterNode node=cache.affinity().mapKeyToNode(name);
  if (node.version().compareTo(ServiceTopologyCallable.SINCE_VER) >= 0) {
    return ctx.closure().callAsyncNoFailover(GridClosureCallMode.BALANCE,new ServiceTopologyCallable(name),Collections.singletonList(node),false).get();
  }
 else   return serviceTopology(cache,name);
}
