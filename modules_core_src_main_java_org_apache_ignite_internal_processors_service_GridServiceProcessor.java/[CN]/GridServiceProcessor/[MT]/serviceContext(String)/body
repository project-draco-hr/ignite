{
  Collection<ServiceContextImpl> ctxs;
synchronized (locSvcs) {
    ctxs=locSvcs.get(name);
  }
  if (ctxs == null)   return null;
synchronized (ctxs) {
    if (ctxs.isEmpty())     return null;
    for (    ServiceContextImpl ctx : ctxs) {
      if (ctx.service() != null)       return ctx;
    }
    return null;
  }
}
