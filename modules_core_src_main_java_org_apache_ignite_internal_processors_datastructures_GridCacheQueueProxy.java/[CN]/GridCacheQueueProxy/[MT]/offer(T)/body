{
  gate.enter();
  try {
    if (cctx.transactional())     return CU.outTx(new Callable<Boolean>(){
      @Override public Boolean call() throws Exception {
        return delegate.offer(item);
      }
    }
,cctx);
    return delegate.offer(item);
  }
 catch (  IgniteCheckedException e) {
    throw U.convertException(e);
  }
 finally {
    gate.leave();
  }
}
