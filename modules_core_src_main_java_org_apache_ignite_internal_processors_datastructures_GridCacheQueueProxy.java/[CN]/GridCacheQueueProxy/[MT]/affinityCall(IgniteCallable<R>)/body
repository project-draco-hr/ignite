{
  gate.enter();
  try {
    if (cctx.transactional())     return CU.outTx(new Callable<R>(){
      @Override public R call() throws Exception {
        if (!delegate.collocated())         throw new IgniteException("Failed to execute affinityCall() for non-collocated queue: " + name() + ". This operation is supported only for collocated queues.");
        return delegate.affinityCall(job);
      }
    }
,cctx);
    return delegate.affinityCall(job);
  }
 catch (  IgniteCheckedException e) {
    throw U.convertException(e);
  }
 finally {
    gate.leave();
  }
}
