{
  gate.enter();
  try {
    if (cctx.transactional()) {
      CU.outTx(new Callable<Void>(){
        @Override public Void call() throws Exception {
          if (!delegate.collocated())           throw new IgniteException("Failed to execute affinityRun() for non-collocated queue: " + name() + ". This operation is supported only for collocated queues.");
          delegate.affinityRun(job);
          return null;
        }
      }
,cctx);
    }
 else     delegate.affinityRun(job);
  }
 catch (  IgniteCheckedException e) {
    throw U.convertException(e);
  }
 finally {
    gate.leave();
  }
}
