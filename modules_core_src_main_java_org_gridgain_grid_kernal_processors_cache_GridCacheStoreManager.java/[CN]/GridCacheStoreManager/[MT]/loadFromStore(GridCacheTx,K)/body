{
  if (store != null) {
    if (log.isDebugEnabled())     log.debug("Loading value from store for key: " + key);
    if (key instanceof GridCacheInternal)     return null;
    V val=null;
    try {
      val=convert(store.load(tx != null && !tx.implicit() ? tx : null,key));
    }
 catch (    ClassCastException e) {
      handleClassCastException(e);
    }
    if (log.isDebugEnabled())     log.debug("Loaded value from store [key=" + key + ", val="+ val+ ']');
    return val;
  }
  return null;
}
