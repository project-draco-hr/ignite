{
  final AtomicBoolean finished=new AtomicBoolean();
  IgniteInternalFuture<Object> fut=GridTestUtils.runAsync(new Callable<Object>(){
    @Override public Object call() throws Exception {
      while (!finished.get()) {
        stopGrid(3);
        U.sleep(300);
        startGrid(3);
      }
      return null;
    }
  }
);
  int keysCnt=keysCount();
  IgniteCache<Object,Object> cache=ignite(0).cache(null);
  if (atomicityMode() == ATOMIC)   assertEquals(writeOrderMode(),cache.getConfiguration(CacheConfiguration.class).getAtomicWriteOrderMode());
  for (int i=0; i < keysCnt; i++)   cache.put(i,i);
  finished.set(true);
  fut.get();
  for (int i=0; i < keysCnt; i++)   assertEquals(i,ignite(0).cache(null).get(i));
}
