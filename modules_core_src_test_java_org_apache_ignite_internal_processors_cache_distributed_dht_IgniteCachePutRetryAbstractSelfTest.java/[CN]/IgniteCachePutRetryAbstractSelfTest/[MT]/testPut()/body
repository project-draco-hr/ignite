{
  final AtomicBoolean finished=new AtomicBoolean();
  int keysCnt=keysCount();
  IgniteInternalFuture<Object> fut=GridTestUtils.runAsync(new Callable<Object>(){
    @Override public Object call() throws Exception {
      while (!finished.get()) {
        stopGrid(3);
        U.sleep(300);
        startGrid(3);
      }
      return null;
    }
  }
);
  try {
    for (int i=0; i < keysCnt; i++)     ignite(0).cache(null).put(i,i);
    finished.set(true);
    fut.get();
  }
  finally {
    finished.set(true);
  }
  for (int i=0; i < keysCnt; i++)   assertEquals(i,ignite(0).cache(null).get(i));
}
