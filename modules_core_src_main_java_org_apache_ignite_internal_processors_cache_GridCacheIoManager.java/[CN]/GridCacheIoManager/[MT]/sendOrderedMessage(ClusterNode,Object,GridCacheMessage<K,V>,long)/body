{
  onSend(msg,node.id());
  int cnt=0;
  while (cnt <= retryCnt) {
    try {
      cnt++;
      cctx.gridIO().sendOrderedMessage(node,topic,msg,SYSTEM_POOL,timeout,false);
      if (log.isDebugEnabled())       log.debug("Sent ordered cache message [topic=" + topic + ", msg="+ msg+ ", nodeId="+ node.id()+ ']');
      return;
    }
 catch (    IgniteCheckedException e) {
      if (cctx.discovery().node(node.id()) == null)       throw new ClusterTopologyException("Node left grid while sending ordered message to: " + node.id(),e);
      if (cnt == retryCnt)       throw e;
 else       if (log.isDebugEnabled())       log.debug("Failed to send message to node (will retry): " + node.id());
    }
    U.sleep(retryDelay);
  }
}
