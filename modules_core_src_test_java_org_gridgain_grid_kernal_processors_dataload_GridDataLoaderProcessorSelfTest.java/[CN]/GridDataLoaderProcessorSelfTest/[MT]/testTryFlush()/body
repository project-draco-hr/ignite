{
  mode=LOCAL;
  useCache=true;
  try {
    Grid g=startGrid();
    GridCache<Integer,Integer> c=g.cache(null);
    GridDataLoader<Integer,Integer> ldr=g.dataLoader(null);
    ldr.perNodeBufferSize(10);
    for (int i=0; i < 9; i++)     ldr.addData(i,i);
    assertTrue(c.isEmpty());
    ldr.tryFlush();
    Thread.sleep(100);
    assertEquals(9,c.size());
    ldr.close(false);
  }
  finally {
    stopAllGrids();
  }
}
