{
  try {
    Long delay=conf.getLong(PROP_STATUS_POLL_DELAY,0);
    GridHadoopJobStatus status=cli.compute().execute(GridHadoopProtocolJobStatusTask.class.getName(),new GridHadoopProtocolTaskArguments(jobId.getJtIdentifier(),jobId.getId(),delay));
    if (status == null)     throw new IOException("Job tracker doesn't have any information about the job: " + jobId);
    return GridHadoopUtils.status(status,conf);
  }
 catch (  GridClientException e) {
    throw new IOException("Failed to get job status: " + jobId,e);
  }
}
