{
  if (lsnr != null) {
    boolean done=isDone();
    if (!done) {
synchronized (mux) {
        done=isDone();
        if (!done) {
          if (lsnrs == null)           lsnrs=new ArrayList<>();
          lsnrs.add(lsnr);
        }
      }
    }
    if (done) {
      notifyListener(lsnr);
    }
  }
}
