{
  GridTimeoutObject obj=lastTimeoutObj.getAndSet(null);
  if (obj != null)   cctx.time().removeTimeoutObject(obj);
  final GridDhtPartitionsExchangeFuture<K,V> exchFut=lastExchangeFut;
  if (exchFut != null) {
    if (log.isDebugEnabled())     log.debug("Forcing preload event for future: " + exchFut);
    exchFut.listenAsync(new CI1<GridFuture<Long>>(){
      @Override public void apply(      GridFuture<Long> t){
        cctx.shared().exchange().forcePreloadExchange(exchFut);
      }
    }
);
  }
 else   if (log.isDebugEnabled())   log.debug("Ignoring force preload request (no topology event happened yet).");
}
