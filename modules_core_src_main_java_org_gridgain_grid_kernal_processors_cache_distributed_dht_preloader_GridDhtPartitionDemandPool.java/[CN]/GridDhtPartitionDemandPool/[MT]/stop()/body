{
  U.cancel(exchWorker);
  U.cancel(dmdWorkers);
  if (log.isDebugEnabled())   log.debug("Before joining on exchange worker: " + exchWorker);
  U.join(exchWorker,log);
  if (log.isDebugEnabled())   log.debug("Before joining on demand workers: " + dmdWorkers);
  U.join(dmdWorkers,log);
  if (log.isDebugEnabled())   log.debug("After joining on demand workers: " + dmdWorkers);
  ResendTimeoutObject resendTimeoutObj=pendingResend.getAndSet(null);
  if (resendTimeoutObj != null)   cctx.time().removeTimeoutObject(resendTimeoutObj);
  top=null;
  lastExchangeFut.set(null);
  lastTimeoutObj.set(null);
}
