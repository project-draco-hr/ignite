{
  for (Iterator<GridTcpRouterImpl> it=tcpRouters.values().iterator(); it.hasNext(); ) {
    GridTcpRouterImpl router=it.next();
    it.remove();
    router.stop();
  }
  for (Iterator<GridHttpRouterImpl> it=httpRouters.values().iterator(); it.hasNext(); ) {
    GridHttpRouterImpl router=it.next();
    it.remove();
    router.stop();
  }
}
