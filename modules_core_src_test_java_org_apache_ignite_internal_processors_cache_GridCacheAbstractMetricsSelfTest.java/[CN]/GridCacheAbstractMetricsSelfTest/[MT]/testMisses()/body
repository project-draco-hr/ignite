{
  IgniteCache<Integer,Integer> cache=grid(0).cache(null);
  int keyCnt=keyCount();
  int expReads=0;
  for (int i=0; i < keyCnt; i++) {
    assertNull("Value is not null for key: " + i,cache.get(i));
    if (cache.getConfiguration(CacheConfiguration.class).getCacheMode() == CacheMode.REPLICATED || affinity(cache).isPrimary(grid(0).localNode(),i))     expReads++;
 else     expReads+=2;
  }
  long puts=0;
  long reads=0;
  long hits=0;
  long misses=0;
  for (int i=0; i < gridCount(); i++) {
    CacheMetrics m=grid(i).cache(null).localMetrics();
    puts+=m.getCachePuts();
    reads+=m.getCacheGets();
    hits+=m.getCacheHits();
    misses+=m.getCacheMisses();
  }
  assertEquals(0,puts);
  assertEquals(expReads,reads);
  assertEquals(0,hits);
  assertEquals(expReads,misses);
}
