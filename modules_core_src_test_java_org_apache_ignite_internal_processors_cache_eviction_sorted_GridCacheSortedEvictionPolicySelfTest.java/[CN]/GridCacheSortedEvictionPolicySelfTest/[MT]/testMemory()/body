{
  try {
    startGrid();
    SortedEvictionPolicy<String,String> p=policy();
    int max=10;
    p.setMaxSize(max);
    int cnt=11;
    for (int i=0; i < cnt; i++)     p.onEntryAccessed(false,new MockEntry(Integer.toString(i),Integer.toString(i)));
    info(p);
    assertEquals(max,p.getCurrentSize());
  }
  finally {
    stopAllGrids();
  }
}
