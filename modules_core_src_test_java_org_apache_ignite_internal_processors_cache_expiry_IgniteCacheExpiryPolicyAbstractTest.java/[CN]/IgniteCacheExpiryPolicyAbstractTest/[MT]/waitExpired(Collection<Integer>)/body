{
  GridTestUtils.waitForCondition(new GridAbsPredicate(){
    @Override public boolean apply(){
      for (int i=0; i < gridCount(); i++) {
        for (        Integer key : keys) {
          Object val=jcache(i).localPeek(key,CachePeekMode.ONHEAP);
          if (val != null) {
            return false;
          }
        }
      }
      return false;
    }
  }
,3000);
  checkNoValue(keys);
}
