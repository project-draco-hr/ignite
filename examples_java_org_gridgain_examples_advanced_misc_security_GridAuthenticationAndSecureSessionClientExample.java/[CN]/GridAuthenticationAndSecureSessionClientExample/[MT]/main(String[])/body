{
  try (GridClient client=createClient("s3cret")){
    System.out.println(">>> Client successfully authenticated.");
    System.out.println(">>> Current grid topology: " + client.compute().refreshTopology(true,true));
    if (SSL_ENABLED)     System.out.println(">>> Secure session between client and grid has been established.");
 else     System.out.println(">>> Session between client and grid has been established.");
  }
 catch (  GridClientException e) {
    if (e.hasCause(GridClientAuthenticationException.class))     System.out.println(">>> Client authentication failed (was the passcode correct?).");
 else     System.out.println(">>> Failed to create client (did you start grid nodes?): " + e.getMessage());
  }
}
