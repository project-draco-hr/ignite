{
  FutureHolder holder=lastFut.get();
  holder.lock();
  try {
    IgniteFuture fut=holder.future();
    if (fut != null && !fut.isDone()) {
      IgniteFuture<GridCacheTx> f=new GridEmbeddedFuture<>(fut,new C2<Object,Exception,IgniteFuture<GridCacheTx>>(){
        @Override public IgniteFuture<GridCacheTx> apply(        Object o,        Exception e){
          return tx.commitAsync();
        }
      }
,ctx.kernalContext());
      saveFuture(holder,f);
      return f;
    }
    IgniteFuture<GridCacheTx> f=tx.commitAsync();
    saveFuture(holder,f);
    ctx.tm().txContextReset();
    return f;
  }
  finally {
    holder.unlock();
  }
}
