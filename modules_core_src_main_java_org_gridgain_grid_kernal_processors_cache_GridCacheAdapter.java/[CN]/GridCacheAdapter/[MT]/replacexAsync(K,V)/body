{
  A.notNull(key,"key",val,"val");
  if (keyCheck)   validateCacheKey(key);
  validateCacheValue(val);
  ctx.denyOnLocalRead();
  return asyncOp(new AsyncOp<Boolean>(key){
    @Override public IgniteFuture<Boolean> op(    IgniteTxLocalAdapter<K,V> tx){
      return tx.putAllAsync(ctx,F.t(key,val),false,null,-1,ctx.hasPeekArray()).chain((IgniteClosure<IgniteFuture<GridCacheReturn<V>>,Boolean>)RET2FLAG);
    }
    @Override public String toString(){
      return "replacexAsync [key=" + key + ", val="+ val+ ']';
    }
  }
);
}
