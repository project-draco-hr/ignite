{
  A.notNull(key,"key",val,"val");
  if (keyCheck)   validateCacheKey(key);
  validateCacheValue(val);
  ctx.denyOnLocalRead();
  return ctx.wrapClone(asyncOp(new AsyncOp<V>(key){
    @Override public GridFuture<V> op(    GridCacheTxLocalAdapter<K,V> tx){
      return tx.putAllAsync(ctx,F.t(key,val),true,null,-1,ctx.hasPeekArray()).chain((GridClosure<GridFuture<GridCacheReturn<V>>,V>)RET2VAL);
    }
    @Override public String toString(){
      return "replaceAsync [key=" + key + ", val="+ val+ ']';
    }
  }
));
}
