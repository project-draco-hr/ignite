{
  try {
    checkJta();
  }
 catch (  GridException e) {
    return new GridFinishedFuture<>(ctx.kernalContext(),e);
  }
  if (log.isDebugEnabled())   log.debug("Performing async op: " + op);
  GridCacheTxLocalAdapter<K,V> tx=ctx.tm().threadLocalTx();
  if (tx == null || tx.implicit())   tx=ctx.tm().newTx(true,op.single(),PESSIMISTIC,READ_COMMITTED,ctx.kernalContext().config().getTransactionsConfiguration().getDefaultTxTimeout(),ctx.hasFlag(INVALIDATE),0,null,false);
  return asyncOp(tx,op);
}
