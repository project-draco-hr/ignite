{
  if (srcFs == null || destFs == null)   return;
  if (!destFs.delete(dest,true) && destFs.exists(dest))   throw new IOException("Failed to remove destination file: " + dest);
  destFs.mkdirs(dest);
  Configuration conf=new Configuration(true);
  long time=System.currentTimeMillis();
  FileUtil.copy(srcFs,src,destFs,dest,false,true,conf);
  time=System.currentTimeMillis() - time;
  System.out.println(">>> " + msg + " [time="+ time+ "ms, src="+ src+ ", dest="+ dest+ ']');
}
