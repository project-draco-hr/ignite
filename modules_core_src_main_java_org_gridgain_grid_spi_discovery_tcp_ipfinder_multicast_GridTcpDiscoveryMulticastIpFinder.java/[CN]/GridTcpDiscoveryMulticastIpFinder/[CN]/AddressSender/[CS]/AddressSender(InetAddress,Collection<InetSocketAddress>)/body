{
  super(gridName,"tcp-disco-multicast-addr-sender",log);
  this.mcastGrp=mcastGrp;
  this.addrs=addrs;
  try {
    sock=createSocket();
  }
 catch (  IOException e) {
    throw new GridSpiException("Failed to create multicast socket [" + "mcastGrp=" + GridTcpDiscoveryMulticastIpFinder.this.mcastGrp + ", mcastGrp="+ mcastGrp+ ", mcastPort="+ mcastPort+ ']',e);
  }
}
