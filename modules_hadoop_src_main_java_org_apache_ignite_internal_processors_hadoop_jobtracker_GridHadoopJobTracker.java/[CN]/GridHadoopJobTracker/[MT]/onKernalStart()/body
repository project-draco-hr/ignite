{
  super.onKernalStart();
  jobMetaCache().context().continuousQueries().executeInternalQuery(new CacheEntryUpdatedListener<GridHadoopJobId,GridHadoopJobMetadata>(){
    @Override public void onUpdated(    final Iterable<CacheEntryEvent<? extends GridHadoopJobId,? extends GridHadoopJobMetadata>> evts){
      if (!busyLock.tryReadLock())       return;
      try {
        evtProcSvc.submit(new EventHandler(){
          @Override protected void body() throws IgniteCheckedException {
            processJobMetadataUpdates(evts);
          }
        }
);
      }
  finally {
        busyLock.readUnlock();
      }
    }
  }
,null,true,true);
  ctx.kernalContext().event().addLocalEventListener(new GridLocalEventListener(){
    @Override public void onEvent(    final Event evt){
      if (!busyLock.tryReadLock())       return;
      try {
        evtProcSvc.submit(new EventHandler(){
          @Override protected void body(){
            processNodeLeft((DiscoveryEvent)evt);
          }
        }
);
      }
  finally {
        busyLock.readUnlock();
      }
    }
  }
,EventType.EVT_NODE_FAILED,EventType.EVT_NODE_LEFT);
}
