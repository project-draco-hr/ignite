{
  String sep=", ";
  StringBuilder sb=new StringBuilder();
  Boolean first=true;
  for (  Object v : arr) {
    if (first)     first=false;
 else     sb.append(sep);
    sb.append(v);
    if (sb.length() > maxSz)     break;
  }
  if (sb.length() >= maxSz) {
    String end="...";
    sb.setLength(maxSz - end.length());
    sb.append(end);
  }
  return sb.toString();
}
