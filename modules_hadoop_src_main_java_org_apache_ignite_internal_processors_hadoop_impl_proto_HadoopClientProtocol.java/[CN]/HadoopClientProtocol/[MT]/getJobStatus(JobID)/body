{
  try {
    Long delay=conf.getLong(HadoopJobProperty.JOB_STATUS_POLL_DELAY.propertyName(),-1);
    HadoopProtocolTaskArguments args=delay >= 0 ? new HadoopProtocolTaskArguments(jobId.getJtIdentifier(),jobId.getId(),delay) : new HadoopProtocolTaskArguments(jobId.getJtIdentifier(),jobId.getId());
    HadoopJobStatus status=cli.compute().execute(HadoopProtocolJobStatusTask.class.getName(),args);
    if (status == null)     throw new IOException("Job tracker doesn't have any information about the job: " + jobId);
    return processStatus(status);
  }
 catch (  GridClientException e) {
    throw new IOException("Failed to get job status: " + jobId,e);
  }
}
