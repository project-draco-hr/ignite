{
  if ((off < 0) || (off > b.length) || (len < 0)|| ((off + len) > b.length)|| ((off + len) < 0))   throw new IndexOutOfBoundsException();
 else   if (len == 0)   return;
  int newCnt=cnt + len;
  if (newCnt > buf.length)   buf=Arrays.copyOf(buf,Math.max(buf.length << 1,newCnt));
  U.arrayCopy(b,off,buf,cnt,len);
  cnt=newCnt;
}
