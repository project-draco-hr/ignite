{
  String[] creds={"a:b",":ab","ab:","ab"};
  for (  String cred : creds) {
    int idx=cred.indexOf(':');
    if (idx >= 0 && idx < cred.length()) {
      System.out.println("'" + cred.substring(0,idx) + "' '"+ cred.substring(idx + 1)+ '\'');
    }
 else {
      System.out.println(cred);
    }
  }
}
