{
  preloadMode=SYNC;
  backups=0;
  netTimeout=500;
  try {
    startGrid(0);
    int cnt=1000;
    populate(grid(0).<Integer,String>jcache(null),cnt);
    int gridCnt=2;
    for (int i=1; i < gridCnt; i++)     startGrid(i);
    long wait=3000;
    waitForUnload(gridCnt,cnt,wait);
  }
  finally {
    stopAllGrids();
  }
}
