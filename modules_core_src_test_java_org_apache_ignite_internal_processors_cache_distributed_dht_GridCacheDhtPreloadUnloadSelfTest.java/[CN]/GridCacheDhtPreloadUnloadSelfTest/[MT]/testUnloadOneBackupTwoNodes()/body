{
  preloadMode=SYNC;
  backups=1;
  netTimeout=500;
  try {
    startGrid(0);
    int cnt=1000;
    populate(grid(0).<Integer,String>jcache(null),cnt);
    int gridCnt=2;
    for (int i=1; i < gridCnt; i++)     startGrid(i);
    long wait=2000;
    info("Sleeping for " + wait + "ms");
    Thread.sleep(wait);
    for (int i=0; i < gridCnt; i++)     info("Grid size [i=" + i + ", size="+ grid(i).jcache(null).localSize()+ ']');
    for (int i=0; i < gridCnt; i++) {
      IgniteCache<Integer,String> c=grid(i).jcache(null);
      assertEquals(cnt,c.localSize());
    }
  }
  finally {
    stopAllGrids();
  }
}
