{
  if (name == null)   return;
  if (name.isEmpty())   throw new GridSpiException("Space name cannot be empty: " + name);
 else   if (DFLT_SPACE_NAME.equalsIgnoreCase(name))   throw new GridSpiException("Space name is reserved for default space: " + name);
 else   if (name.contains("/") || name.contains("\\"))   throw new GridSpiException("Space name contains invalid characters: " + name);
}
