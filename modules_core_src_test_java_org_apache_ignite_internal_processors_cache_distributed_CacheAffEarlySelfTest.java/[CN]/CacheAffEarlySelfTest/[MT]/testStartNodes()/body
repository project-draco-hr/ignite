{
  for (int i=0; i < iters; i++) {
    try {
      System.out.println("*** Iteration " + (i + 1) + '/'+ iters);
      IgniteInternalFuture<?> fut=multithreadedAsync(new Runnable(){
        @Override public void run(){
          try {
            doTest();
          }
 catch (          Exception e) {
            e.printStackTrace();
          }
        }
      }
,1);
      fut.get(30000);
    }
 catch (    IgniteFutureTimeoutCheckedException e) {
    }
 finally {
      stopAllGrids(true);
    }
  }
}
