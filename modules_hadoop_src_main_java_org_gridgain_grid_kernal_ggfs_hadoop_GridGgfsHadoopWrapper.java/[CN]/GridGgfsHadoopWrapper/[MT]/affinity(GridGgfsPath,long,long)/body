{
  return withReconnectHandling(new FileSystemClosure<Collection<GridGgfsBlockLocation>>(){
    @Override public Collection<GridGgfsBlockLocation> apply(    GridGgfsHadoopEx hadoop,    GridGgfsHandshakeResponse hndResp) throws GridException, IOException {
      return hadoop.affinity(path,start,len);
    }
  }
,path);
}
