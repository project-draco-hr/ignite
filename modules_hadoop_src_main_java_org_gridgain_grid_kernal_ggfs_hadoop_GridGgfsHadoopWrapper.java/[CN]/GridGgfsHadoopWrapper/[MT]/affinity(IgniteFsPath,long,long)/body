{
  return withReconnectHandling(new FileSystemClosure<Collection<IgniteFsBlockLocation>>(){
    @Override public Collection<IgniteFsBlockLocation> apply(    GridGgfsHadoopEx hadoop,    GridGgfsHandshakeResponse hndResp) throws GridException, IOException {
      return hadoop.affinity(path,start,len);
    }
  }
,path);
}
