{
  GridNioFuture<?>[] futs=null;
synchronized (this) {
    nodeLeft=true;
    if (reserved)     return false;
    if (!msgFuts.isEmpty()) {
      futs=msgFuts.toArray(new GridNioFuture<?>[msgFuts.size()]);
      msgFuts.clear();
    }
  }
  if (futs != null)   completeOnNodeLeft(futs);
  return true;
}
