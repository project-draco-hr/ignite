{
  for (int i=0; i < gridCount(); i++) {
    if (i != nearIdx)     for (    String key : primaryKeysForCache(jcache(i),3))     jcache(i).put(key,1);
  }
  if (async) {
    IgniteCache<String,Integer> asyncCache=jcache().withAsync();
    asyncCache.clear();
    asyncCache.future().get();
  }
 else   jcache().clear();
  for (int i=0; i < gridCount(); i++)   assertEquals(ignite(i).name(),0,jcache(i).localSize());
}
