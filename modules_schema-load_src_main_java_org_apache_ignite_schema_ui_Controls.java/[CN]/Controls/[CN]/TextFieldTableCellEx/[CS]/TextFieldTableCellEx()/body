{
  textField=new TextField();
  textField.setOnKeyReleased(new EventHandler<KeyEvent>(){
    /** 
 * {@inheritDoc} 
 */
    @Override public void handle(    KeyEvent evt){
      if (KeyCode.ENTER == evt.getCode())       commitEdit(textField.getText());
 else       if (KeyCode.ESCAPE == evt.getCode())       cancelEdit();
    }
  }
);
  textField.focusedProperty().addListener(new ChangeListener<Boolean>(){
    /** 
 * {@inheritDoc} 
 */
    @Override public void changed(    ObservableValue<? extends Boolean> observable,    Boolean oldVal,    Boolean newVal){
      if (!newVal)       commitEdit(textField.getText());
    }
  }
);
  getStyleClass().add("text-field-table-cell");
}
