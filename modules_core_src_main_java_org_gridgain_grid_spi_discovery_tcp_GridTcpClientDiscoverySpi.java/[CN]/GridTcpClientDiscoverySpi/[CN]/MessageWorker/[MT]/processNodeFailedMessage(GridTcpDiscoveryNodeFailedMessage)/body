{
  if (!locNodeId.equals(msg.creatorNodeId())) {
    GridTcpDiscoveryNode node=rmtNodes.remove(msg.failedNodeId());
    if (node == null) {
      if (log.isDebugEnabled())       log.debug("Discarding node failed message since node is not found [msg=" + msg + ']');
      return;
    }
    if (!pending && joinLatch.getCount() > 0) {
      if (log.isDebugEnabled())       log.debug("Discarding node failed message (join process is not finished): " + msg);
      return;
    }
    notifyDiscovery(EVT_NODE_FAILED,msg.topologyVersion(),node,updateTopology(msg.topologyVersion()));
    stats.onNodeFailed();
  }
}
