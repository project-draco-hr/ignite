{
  GridDiscoverySpiListener lsnr=GridTcpClientDiscoverySpi.this.lsnr;
  if (lsnr != null) {
    if (log.isDebugEnabled())     log.debug("Discovery notification [node=" + node + ", type="+ U.gridEventName(type)+ ", topVer="+ topVer+ ']');
    this.topVer=topVer;
    Collection<GridNode> rmtNodes0=new ArrayList<GridNode>(rmtNodes.values());
    lsnr.onDiscovery(type,topVer,node,F.concat(false,locNode,rmtNodes0),null);
  }
 else   if (log.isDebugEnabled())   log.debug("Skipped discovery notification [node=" + node + ", type="+ U.gridEventName(type)+ ", topVer="+ topVer+ ']');
}
