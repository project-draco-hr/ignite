{
  return Collections.singleton(new ComputeJobAdapter(){
    @IgniteInstanceResource private Ignite ignite;
    @Override public Object execute(){
      if (cacheName == null)       return true;
      GridDiscoveryManager discoMgr=((IgniteKernal)ignite).context().discovery();
      for (      ClusterNode n : ignite.cluster().nodes())       if (discoMgr.cacheNode(n,cacheName))       return true;
      return false;
    }
  }
);
}
