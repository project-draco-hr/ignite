{
  A.notNull(item,"item");
  A.ensure(timeout >= 0,"Timeout cannot be negative: " + timeout);
  try {
    checkRemovedx();
    return bounded ? blockWriteOp(Arrays.asList(item),PUT_TIMEOUT,timeout,unit) : CU.outTx(addCallable(Arrays.asList(item)),cctx);
  }
 catch (  GridException e) {
    throw new GridRuntimeException(e);
  }
}
