{
  try {
    final GridHadoopCounters counters=cli.compute().execute(GridHadoopProtocolJobCountersTask.class.getName(),new GridHadoopProtocolTaskArguments(jobId.getJtIdentifier(),jobId.getId()));
    if (counters == null)     throw new IOException("Job tracker doesn't have any information about the job: " + jobId);
    return new GridHadoopClientCounters(counters);
  }
 catch (  GridClientException e) {
    throw new IOException("Failed to get job counters: " + jobId,e);
  }
}
