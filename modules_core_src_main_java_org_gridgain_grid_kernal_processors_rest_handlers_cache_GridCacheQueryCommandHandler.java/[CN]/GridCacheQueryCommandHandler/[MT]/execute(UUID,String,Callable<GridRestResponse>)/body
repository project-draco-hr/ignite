{
  boolean locExec=destId == null || destId.equals(ctx.localNodeId()) || replicatedCacheAvailable(cacheName);
  if (locExec)   return ctx.closure().callLocalSafe(c,false);
 else {
    if (ctx.discovery().node(destId) == null)     return new GridFinishedFutureEx<>(new GridException("Destination node ID has left the grid (retry " + "the query): " + destId));
    return ctx.grid().forNodeId(destId).compute().withNoFailover().call(c);
  }
}
