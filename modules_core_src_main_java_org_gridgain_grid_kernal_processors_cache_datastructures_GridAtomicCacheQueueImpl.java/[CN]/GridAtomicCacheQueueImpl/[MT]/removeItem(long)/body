{
  Long idx=(Long)cache.transformAndCompute(queueKey,new RemoveClosure(id,rmvIdx));
  if (idx != null) {
    checkRemoved(idx);
    GridCacheQueueItemKey key=itemKey(idx);
    int cnt=0;
    long stop=0;
    while (true) {
      try {
        if (cache.removex(key))         return;
        if (stop == 0)         stop=U.currentTimeMillis() + RETRY_TIMEOUT;
        while (U.currentTimeMillis() < stop) {
          if (cache.removex(key))           return;
        }
        break;
      }
 catch (      GridCachePartialUpdateException e) {
        if (cnt++ == MAX_UPDATE_RETRIES)         throw e;
 else         U.warn(log,"Failed to add items, will retry [err=" + e + ']');
      }
    }
    U.warn(log,"Failed to remove item, [queue=" + queueName + ", idx="+ idx+ ']');
  }
}
