{
  if (log.isDebugEnabled())   log.debug("Replicated preloader onKernalStop callback.");
  cctx.events().removeListener(discoLsnr);
  busyLock.writeLock().lock();
  if (supplyPool != null)   supplyPool.stop();
  if (demandPool != null)   demandPool.stop();
  if (log.isDebugEnabled())   log.debug("Replicated preloader has been stopped.");
}
