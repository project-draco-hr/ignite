{
  WriteCompletionFuture fut=pendingWrites.get(fileId);
  if (fut != null) {
    fut.markWaitingLastAck();
    if (await)     fut.get();
  }
 else {
    if (log.isDebugEnabled())     log.debug("Failed to find write completion future for file in pending write map (most likely it was " + "failed): " + fileId);
  }
}
