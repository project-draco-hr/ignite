{
  IgniteDataStreamer<IgfsBlockKey,byte[]> ldr=igfsCtx.kernalContext().<IgfsBlockKey,byte[]>dataLoad().dataLoader(dataCachePrj.name());
  IgfsConfiguration cfg=igfsCtx.configuration();
  if (cfg.getPerNodeBatchSize() > 0)   ldr.perNodeBufferSize(cfg.getPerNodeBatchSize());
  if (cfg.getPerNodeParallelBatchCount() > 0)   ldr.perNodeParallelLoadOperations(cfg.getPerNodeParallelBatchCount());
  ldr.updater(GridDataLoadCacheUpdaters.<IgfsBlockKey,byte[]>batchedSorted());
  return ldr;
}
