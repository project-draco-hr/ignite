{
  StringBuilder sb=new StringBuilder();
  sb.append("[size=").append(arr.length).append(", elements=");
  int end=arr.length < 50 ? arr.length : 50;
  for (int i=0; i < end; i++)   sb.append(arr[i]).append(i + 1 == end ? "" : ", ");
  if (arr.length >= 50)   sb.append(", ...");
  sb.append(']');
  return sb.toString();
}
