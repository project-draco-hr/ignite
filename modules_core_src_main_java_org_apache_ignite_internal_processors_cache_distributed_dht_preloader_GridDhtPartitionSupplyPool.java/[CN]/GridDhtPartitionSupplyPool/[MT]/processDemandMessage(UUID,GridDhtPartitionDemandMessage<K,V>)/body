{
  if (!enterBusy())   return;
  try {
    if (cctx.rebalanceEnabled()) {
      if (log.isDebugEnabled())       log.debug("Received partition demand [node=" + nodeId + ", demand="+ d+ ']');
      queue.offer(new DemandMessage<>(nodeId,d));
    }
 else     U.warn(log,"Received partition demand message when rebalancing is disabled (will ignore): " + d);
  }
  finally {
    leaveBusy();
  }
}
