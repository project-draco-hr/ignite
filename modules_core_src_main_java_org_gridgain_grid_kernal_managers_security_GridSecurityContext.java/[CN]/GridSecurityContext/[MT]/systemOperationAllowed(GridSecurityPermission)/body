{
  if (sysPermissions == null)   return subj.permissions().defaultAllowAll();
  boolean ret=sysPermissions.contains(perm);
  if (!ret && (perm == GridSecurityPermission.EVENTS_ENABLE || perm == GridSecurityPermission.EVENTS_DISABLE))   ret=sysPermissions.contains(GridSecurityPermission.ADMIN_VIEW);
  return ret;
}
