{
  try {
    while (!Thread.interrupted()) {
      ShmemWorker e=new ShmemWorker(srv.accept(),true);
      shmemWorkers.add(e);
      new GridThread(e).start();
    }
  }
 catch (  GridException e) {
    if (!isCancelled())     U.error(log,"Shmem server failed.",e);
  }
 finally {
    srv.close();
  }
}
