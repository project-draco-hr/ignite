{
  Grid grid=grid(0);
  grid.compute().call(new GridCallable<Object>(){
    @GridLoggerResource(categoryName="GridLoggerInjectionSelfTest") private void log(    GridLogger log){
      if (log instanceof GridLoggerProxy) {
        Object category=U.field(log,"ctgr");
