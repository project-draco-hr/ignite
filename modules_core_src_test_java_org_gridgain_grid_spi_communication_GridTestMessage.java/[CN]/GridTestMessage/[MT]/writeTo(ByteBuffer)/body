{
  commState.setBuffer(buf);
  if (!commState.typeWritten) {
    if (!commState.putByte(directType()))     return false;
    commState.typeWritten=true;
  }
switch (commState.idx) {
case 0:
    if (!commState.putUuid(srcNodeId))     return false;
  commState.idx++;
case 1:
if (!commState.putLong(msgId)) return false;
commState.idx++;
case 2:
if (!commState.putLong(resId)) return false;
commState.idx++;
case 3:
if (!commState.putByteArray(payload)) return false;
commState.idx++;
}
return true;
}
