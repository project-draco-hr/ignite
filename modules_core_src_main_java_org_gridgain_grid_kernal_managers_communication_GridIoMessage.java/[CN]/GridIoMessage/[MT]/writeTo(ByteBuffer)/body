{
  commState.setBuffer(buf);
  if (!commState.typeWritten) {
    if (!commState.putByte(null,directType()))     return false;
    commState.typeWritten=true;
  }
switch (commState.idx) {
case 0:
    if (!commState.putMessage(null,msg))     return false;
  commState.idx++;
case 1:
if (!commState.putLong(null,msgId)) return false;
commState.idx++;
case 2:
if (!commState.putEnum(null,plc)) return false;
commState.idx++;
case 3:
if (!commState.putBoolean(null,skipOnTimeout)) return false;
commState.idx++;
case 4:
if (!commState.putLong(null,timeout)) return false;
commState.idx++;
case 5:
if (!commState.putByteArray(null,topicBytes)) return false;
commState.idx++;
case 6:
if (!commState.putInt(null,topicOrd)) return false;
commState.idx++;
}
return true;
}
