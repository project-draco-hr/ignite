{
  if (fields.isEmpty())   return first;
  add2(src,comment);
  add2(src,(first ? "Map<String, Class<?>> " : "") + varName + " = new LinkedHashMap<>();");
  add0(src,"");
  for (  PojoField field : fields)   add2(src,varName + ".put(\"" + field.javaName()+ "\", "+ javaTypeName(field)+ ".class);");
  add0(src,"");
  add2(src,"type." + mtdName + "("+ varName+ ");");
  add0(src,"");
  return false;
}
