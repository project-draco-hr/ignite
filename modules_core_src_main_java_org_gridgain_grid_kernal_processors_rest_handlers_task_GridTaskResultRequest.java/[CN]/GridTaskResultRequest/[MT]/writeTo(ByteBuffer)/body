{
  commState.setBuffer(buf);
  if (!commState.typeWritten) {
    if (!commState.putByte(null,directType()))     return false;
    commState.typeWritten=true;
  }
switch (commState.idx) {
case 0:
    if (!commState.putGridUuid(null,taskId))     return false;
  commState.idx++;
case 1:
if (!commState.putByteArray(null,topicBytes)) return false;
commState.idx++;
}
return true;
}
