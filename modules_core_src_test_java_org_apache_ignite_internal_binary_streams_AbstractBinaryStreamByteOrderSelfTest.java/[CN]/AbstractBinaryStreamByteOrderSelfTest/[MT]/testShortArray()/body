{
  short[] arr=new short[ARR_LEN];
  for (int i=0; i < ARR_LEN; i++)   arr[i]=(short)RND.nextLong();
  out.writeShortArray(arr);
  byte[] outArr=array();
  for (int i=0; i < ARR_LEN; i++)   assertEquals(arr[i],getShortByByteLE(outArr,i * 2));
  Assert.assertArrayEquals(arr,in.readShortArray(ARR_LEN));
}
