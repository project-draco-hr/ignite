{
  OptimizedClassDescriptor desc=DESC_BY_ID.get(id);
  if (desc == null) {
    String clsName=null;
    Class<?> cls=Class.forName(clsName,true,ldr);
    OptimizedClassDescriptor old=DESC_BY_ID.putIfAbsent(id,desc=new OptimizedClassDescriptor(cls));
    if (old != null)     desc=old;
  }
  return desc;
}
