{
  A.notNull(key,"key",oldVal,"oldVal",newVal,"newVal");
  ctx.denyOnLocalRead();
  if (ctx.portableEnabled())   oldVal=(V)ctx.marshalToPortable(oldVal);
  return (GridCacheReturn<V>)updateAllInternal(UPDATE,Collections.singleton(key),Collections.singleton(newVal),null,expiryPerCall(),true,true,ctx.equalsPeekArray(oldVal),ctx.writeThrough());
}
