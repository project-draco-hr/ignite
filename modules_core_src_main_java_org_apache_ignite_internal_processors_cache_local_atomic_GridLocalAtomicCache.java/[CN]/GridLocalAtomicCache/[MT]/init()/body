{
  map.setEntryFactory(new GridCacheMapEntryFactory<K,V>(){
    @Override public GridCacheMapEntry<K,V> create(    GridCacheContext<K,V> ctx,    long topVer,    K key,    int hash,    V val,    @Nullable GridCacheMapEntry<K,V> next,    long ttl,    int hdrId){
      return new GridLocalCacheEntry<K,V>(ctx,key,hash,val,next,ttl,hdrId);
    }
  }
);
}
