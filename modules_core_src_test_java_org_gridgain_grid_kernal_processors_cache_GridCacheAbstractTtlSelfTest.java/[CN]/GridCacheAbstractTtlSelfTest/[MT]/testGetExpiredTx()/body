{
  GridCache<String,Integer> c=cache();
  String key="1";
  int ttl=500;
  GridCacheTx tx=c.txStart();
  try {
    GridCacheEntry<String,Integer> entry=c.entry(key);
    entry.timeToLive(ttl);
    entry.setValue(1);
    tx.commit();
  }
  finally {
    tx.close();
  }
  checkKeyIsRetired(key,ttl);
}
