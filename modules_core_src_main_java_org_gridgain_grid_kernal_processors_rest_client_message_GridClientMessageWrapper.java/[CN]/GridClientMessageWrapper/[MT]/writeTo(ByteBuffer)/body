{
  commState.setBuffer(buf);
  if (!commState.typeWritten) {
    if (!commState.putByte(directType()))     return false;
    commState.typeWritten=true;
  }
switch (commState.idx) {
case 0:
    if (!commState.putIntClient(msgSize))     return false;
  commState.idx++;
case 1:
if (!commState.putLongClient(reqId)) return false;
commState.idx++;
case 2:
if (!commState.putUuidClient(clientId)) return false;
commState.idx++;
case 3:
if (!commState.putUuidClient(destId)) return false;
commState.idx++;
case 4:
if (!commState.putByteArrayClient(msg)) return false;
commState.idx++;
}
return true;
}
