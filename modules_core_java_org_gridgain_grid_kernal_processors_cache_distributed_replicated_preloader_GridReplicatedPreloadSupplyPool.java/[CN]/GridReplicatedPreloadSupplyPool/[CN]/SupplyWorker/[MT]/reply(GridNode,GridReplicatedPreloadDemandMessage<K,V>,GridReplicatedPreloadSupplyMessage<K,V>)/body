{
  try {
    cctx.io().sendOrderedMessage(n,d.topic(),cctx.io().messageId(d.topic(),n.id()),s,d.timeout());
    if (log.isDebugEnabled())     log.debug("Replied to demand message [node=" + n.id() + ", demand="+ d+ ", supply="+ s+ ']');
    return true;
  }
 catch (  GridTopologyException ignore) {
    if (log.isDebugEnabled())     log.debug("Failed to send supply message because node left grid: " + n.id());
    return false;
  }
}
