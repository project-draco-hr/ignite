{
  A.notNull(qry,"qry");
  GridCacheProjectionImpl<K,V> prev=gate.enter(prj);
  try {
    validate(qry);
    if (qry instanceof SqlQuery)     return doLocalQuery((SqlQuery)qry);
 else     if (qry instanceof ContinuousQuery)     return queryContinuous((ContinuousQuery<K,V>)qry,true);
    return query(qry,projection(true));
  }
 catch (  Exception e) {
    if (e instanceof CacheException)     throw e;
    throw new CacheException(e);
  }
 finally {
    gate.leave(prev);
  }
}
