{
  GridCacheGateway<K,V> gate=this.gate;
  CacheOperationContext prev=onEnter(gate,opCtx);
  try {
    boolean noRetries=opCtx != null && opCtx.noRetries();
    if (noRetries)     return this;
    CacheOperationContext opCtx0=opCtx != null ? opCtx.setNoRetries(true) : new CacheOperationContext(false,null,false,null,true);
    return new IgniteCacheProxy<>(ctx,delegate,opCtx0,isAsync(),lock);
  }
  finally {
    onLeave(gate,prev);
  }
}
