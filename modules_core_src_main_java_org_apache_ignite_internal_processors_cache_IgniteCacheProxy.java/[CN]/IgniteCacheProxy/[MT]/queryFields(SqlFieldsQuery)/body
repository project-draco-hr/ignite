{
  A.notNull(qry,"qry");
  GridCacheProjectionImpl<K,V> prev=gate.enter(prj);
  try {
    validate(qry);
    if (ctx.isReplicated() || ctx.isLocal())     return doLocalFieldsQuery(qry);
    return ctx.kernalContext().query().queryTwoStep(ctx.name(),qry.getSql(),qry.getArgs());
  }
 catch (  Exception e) {
    if (e instanceof CacheException)     throw e;
    throw new CacheException(e);
  }
 finally {
    gate.leave(prev);
  }
}
