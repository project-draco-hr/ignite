{
  A.ensure(!F.isEmpty(msgs),"msgs cannot be null or empty");
  guard();
  try {
    Collection<GridNode> snapshot=prj.nodes();
    if (snapshot.isEmpty())     throw U.emptyTopologyException();
    for (    Object msg : msgs) {
      A.notNull(msg,"msg");
      ctx.io().sendUserMessage(snapshot,msg,topic,false,0);
    }
  }
  finally {
    unguard();
  }
}
