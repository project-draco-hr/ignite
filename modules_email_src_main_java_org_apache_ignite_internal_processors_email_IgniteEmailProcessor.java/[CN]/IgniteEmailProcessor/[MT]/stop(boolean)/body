{
  if (isSmtpEnabled) {
    U.interrupt(snd);
    U.join(snd,log);
    snd=null;
    if (q != null) {
      if (!q.isEmpty())       U.warn(log,"Emails queue is not empty on email processor stop.");
      q.clear();
      q=null;
    }
  }
  if (log.isDebugEnabled())   log.debug("Stopped email processor.");
}
