{
  if (!enterBusy())   return;
  try {
    try {
      sendLocalPartitions(node,msg.exchangeId());
    }
 catch (    IgniteCheckedException e) {
      U.error(log,"Failed to send local partition map to node [nodeId=" + node.id() + ", exchId="+ msg.exchangeId()+ ']',e);
    }
  }
  finally {
    leaveBusy();
  }
}
