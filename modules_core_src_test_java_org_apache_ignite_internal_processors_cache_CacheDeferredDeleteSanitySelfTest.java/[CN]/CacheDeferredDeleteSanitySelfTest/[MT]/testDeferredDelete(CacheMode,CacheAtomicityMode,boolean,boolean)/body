{
  CacheConfiguration ccfg=new CacheConfiguration().setCacheMode(mode).setAtomicityMode(atomicityMode);
  if (near)   ccfg.setNearConfiguration(new NearCacheConfiguration());
  IgniteCache cache=null;
  try {
    cache=grid(0).getOrCreateCache(ccfg);
    assertEquals(expVal,((IgniteCacheProxy)grid(0).cache(null)).context().deferredDelete());
  }
  finally {
    if (cache != null)     cache.destroy();
  }
}
