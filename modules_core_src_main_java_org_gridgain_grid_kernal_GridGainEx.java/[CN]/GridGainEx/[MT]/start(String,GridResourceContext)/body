{
  A.notNull(cfgPath,"cfgPath");
  URL url;
  try {
    url=new URL(cfgPath);
  }
 catch (  MalformedURLException e) {
    url=U.resolveGridGainUrl(cfgPath);
    if (url == null)     throw new GridException("Configuration path is invalid: " + cfgPath + ". Note that this path should be either absolute or a relative local file system path, "+ "relative to META-INF in classpath or valid URL to GRIDGAIN_HOME.",e);
  }
  return start(url,rsrcCtx);
}
