{
  List<Grid> allGrids=new ArrayList<>(grids.size() + 1);
  for (  GridNamedInstance grid : grids.values()) {
    Grid g=grid.grid();
    if (g != null)     allGrids.add(g);
  }
  GridNamedInstance dfltGrid0=dfltGrid;
  if (dfltGrid0 != null) {
    GridKernal g=dfltGrid0.grid();
    if (g != null)     allGrids.add(g);
  }
  return allGrids;
}
