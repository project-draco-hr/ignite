{
  int keyCnt=1000;
  byte[] val=new byte[]{1,2,3,4,5,6,7,8,9,0};
  for (int i=0; i < keyCnt; i++)   grid(0).jcache(null).put(String.valueOf(i),val);
  for (int i=0; i < keyCnt; i++)   grid(0).jcache(null).get(String.valueOf(i));
  startGrid(1);
  if (memMode == ONHEAP_TIERED) {
    for (int i=0; i < keyCnt; i++)     grid(0).jcache(null).evict(String.valueOf(i));
    for (int i=0; i < keyCnt; i++)     grid(0).jcache(null).promote(String.valueOf(i));
  }
  startGrid(2);
  for (int g=0; g < 3; g++) {
    for (int i=0; i < keyCnt; i++) {
      byte[] o=(byte[])grid(g).jcache(null).get(String.valueOf(i));
      assertTrue("Got invalid value [val=" + Arrays.toString(val) + ", actual="+ Arrays.toString(o)+ ']',Arrays.equals(val,o));
    }
  }
}
