{
  if (mode == CacheMode.PARTITIONED)   cc.setIndexedTypes(Integer.class,CustOrder.class,AffinityKey.class,ReplaceOrder.class,AffinityKey.class,OrderParams.class,AffinityKey.class,Cancel.class);
 else   if (mode == CacheMode.REPLICATED)   cc.setIndexedTypes(Integer.class,Exec.class);
 else   throw new IllegalStateException("mode: " + mode);
}
