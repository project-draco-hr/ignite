{
  GridNioServer<?> srvr=GridNioServer.builder().address(U.getLocalHost()).port(port).listener(lsnr).logger(log).selectorCount(2).gridName("nio-test-grid").tcpNoDelay(false).directBuffer(true).byteOrder(ByteOrder.nativeOrder()).socketSendBufferSize(0).socketReceiveBufferSize(0).sendQueueLimit(0).filters(new GridNioCodecFilter(parser,log,false),new GridNioSslFilter(sslCtx,log)).build();
  srvr.start();
  return srvr;
}
