{
  this.uri=uri;
  this.cachingProvider=cachingProvider;
  this.clsLdr=clsLdr;
  this.props=props;
  try {
    if (uri.equals(cachingProvider.getDefaultURI())) {
      IgniteConfiguration cfg=new IgniteConfiguration();
      cfg.setGridName("CacheManager [uri=" + uri.toString() + ", classLoader="+ clsLdr.getClass().getSimpleName()+ '#'+ clsLdr.hashCode());
      ignite=(IgniteKernal)IgnitionEx.start(cfg);
    }
 else     ignite=(IgniteKernal)IgnitionEx.start(uri.toURL());
    kernalGateway=ignite.context().gateway();
  }
 catch (  IgniteCheckedException e) {
    throw CU.convertToCacheException(e);
  }
catch (  MalformedURLException e) {
    throw new CacheException(e);
  }
}
