{
  try {
    ctx.preloader().startFuture().get();
  }
 catch (  GridException e) {
    throw new GridRuntimeException("Failed to wait for cache preloader start [cacheName=" + ctx.name() + "]",e);
  }
  if (ctx.deploymentEnabled())   ctx.deploy().onEnter();
  try {
    ctx.kernalContext().gateway().readLock();
    GridCacheProjectionImpl<K,V> prev=ctx.projectionPerCall();
    if (prev != null || prj != null)     ctx.projectionPerCall(prj);
    return prev;
  }
 catch (  IllegalStateException e) {
    throw e;
  }
catch (  RuntimeException|Error e) {
    try {
      ctx.kernalContext().gateway().readUnlock();
    }
 catch (    IllegalMonitorStateException ignore) {
    }
    throw e;
  }
}
