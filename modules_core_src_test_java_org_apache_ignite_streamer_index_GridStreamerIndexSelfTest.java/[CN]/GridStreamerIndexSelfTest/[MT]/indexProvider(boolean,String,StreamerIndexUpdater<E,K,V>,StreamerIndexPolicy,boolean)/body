{
  if (treeIdx) {
    StreamerTreeIndexProvider<E,K,V> idx=new StreamerTreeIndexProvider<>();
    idx.setName(name);
    idx.setUpdater(updater);
    idx.setUnique(unique);
    idx.setPolicy(plc);
    return idx;
  }
 else {
    StreamerHashIndexProvider<E,K,V> idx=new StreamerHashIndexProvider<>();
    idx.setName(name);
    idx.setUpdater(updater);
    idx.setUnique(unique);
    idx.setPolicy(plc);
    return idx;
  }
}
