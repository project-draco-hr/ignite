{
  startServerNodes(1);
  startClientNodes(1);
  checkNodes(1,1);
  assertTrue(((TcpDiscoverySpi)(G.ignite("server-0").configuration().getDiscoverySpi())).failureDetectionTimeoutEnabled());
  assertEquals(failureDetectionTimeout(),((TcpDiscoverySpi)(G.ignite("server-0").configuration().getDiscoverySpi())).failureDetectionTimeout());
  assertTrue(((TcpDiscoverySpi)(G.ignite("client-0").configuration().getDiscoverySpi())).failureDetectionTimeoutEnabled());
  assertEquals(failureDetectionTimeout(),((TcpDiscoverySpi)(G.ignite("client-0").configuration().getDiscoverySpi())).failureDetectionTimeout());
}
