{
  long threadId=tx.threadId();
  if (tx instanceof GridReplicatedTxRemote)   threadId=((GridCacheTxRemoteEx)tx).remoteThreadId();
  StoreKey key=new StoreKey(tx.eventNodeId(),threadId);
  if (log.isDebugEnabled())   log.debug("Adding committed transaction [locNodeId=" + cctx.localNodeId() + ", key="+ key+ ", tx="+ tx+ ']');
  infoMap.put(key,new GridCacheCommittedTxInfo<>(tx));
}
