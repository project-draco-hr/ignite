{
  for (  final GridHadoopTask task : tasks)   ctx.kernalContext().closure().callLocalSafe(new GridPlainCallable<GridFuture<?>>(){
    @Override public GridFuture<?> call() throws Exception {
      GridHadoopTaskInfo info=task.info();
      try (GridHadoopTaskOutput out=createOutput(info);GridHadoopTaskInput in=createInput(info)){
        GridHadoopTaskContext ctx=null;
        task.run(ctx);
        return out.finish();
      }
     }
  }
,false);
}
