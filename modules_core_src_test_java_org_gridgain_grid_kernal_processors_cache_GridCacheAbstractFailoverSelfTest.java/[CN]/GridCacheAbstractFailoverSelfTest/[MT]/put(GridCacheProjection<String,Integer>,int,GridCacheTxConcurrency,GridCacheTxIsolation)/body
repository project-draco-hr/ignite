{
  try {
    info("Putting values to cache [0," + cnt + ')');
    CU.inTx(cache,concurrency,isolation,new CIX1<GridCacheProjection<String,Integer>>(){
      @Override public void applyx(      GridCacheProjection<String,Integer> cache) throws GridException {
        for (int i=0; i < cnt; i++)         assertTrue("Failed to put key: 'key" + i + "'",cache.putx("key" + i,i));
      }
    }
);
  }
 catch (  GridException e) {
    if (!X.hasCause(e,ClusterTopologyException.class))     throw e;
 else     info("Failed to put values to cache due to topology exception [0," + cnt + ')');
  }
}
