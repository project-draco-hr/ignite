{
  try {
    body();
  }
 catch (  InterruptedException ignore) {
    interrupt();
  }
catch (  Throwable e) {
    X.error("Failed to execute IGFS ad-hoc thread: " + e.getMessage());
    e.printStackTrace();
  }
 finally {
    try {
      cleanup();
    }
 catch (    Throwable e) {
      X.error("Failed to clean up IGFS ad-hoc thread: " + e.getMessage());
      e.printStackTrace();
    }
  }
}
