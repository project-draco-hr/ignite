{
  Map<GridLocalEventListener,int[]> evtLsnrs=ctx.config().getLocalEventListeners();
  if (evtLsnrs != null) {
    for (    GridLocalEventListener lsnr : evtLsnrs.keySet())     addLocalEventListener(lsnr,evtLsnrs.get(lsnr));
  }
  startSpi();
  msgLsnr=new RequestListener();
  ctx.io().addMessageListener(TOPIC_EVENT,msgLsnr);
  if (log.isDebugEnabled())   log.debug(startInfo());
}
