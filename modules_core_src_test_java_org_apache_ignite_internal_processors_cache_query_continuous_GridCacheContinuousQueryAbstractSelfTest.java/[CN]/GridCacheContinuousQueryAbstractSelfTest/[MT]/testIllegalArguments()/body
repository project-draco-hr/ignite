{
  final ContinuousQuery<Object,Object> q=Query.continuous();
  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      q.setBufferSize(-1);
      return null;
    }
  }
,IllegalArgumentException.class,null);
  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      q.setBufferSize(0);
      return null;
    }
  }
,IllegalArgumentException.class,null);
  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      q.setTimeInterval(-1);
      return null;
    }
  }
,IllegalArgumentException.class,null);
}
