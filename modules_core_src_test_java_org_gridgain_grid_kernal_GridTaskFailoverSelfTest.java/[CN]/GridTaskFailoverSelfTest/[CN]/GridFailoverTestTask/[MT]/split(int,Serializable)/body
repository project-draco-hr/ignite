{
  if (log.isInfoEnabled())   log.info("Splitting job [job=" + this + ", gridSize="+ gridSize+ ", arg="+ arg+ ']');
  Collection<GridComputeJobAdapter> jobs=new ArrayList<>(SPLIT_COUNT);
  for (int i=0; i < SPLIT_COUNT; i++)   jobs.add(new GridComputeJobAdapter(){
    @Override public Serializable execute(){
      if (log.isInfoEnabled())       log.info("Computing job [job=" + this + ']');
      return null;
    }
  }
);
  return jobs;
}
