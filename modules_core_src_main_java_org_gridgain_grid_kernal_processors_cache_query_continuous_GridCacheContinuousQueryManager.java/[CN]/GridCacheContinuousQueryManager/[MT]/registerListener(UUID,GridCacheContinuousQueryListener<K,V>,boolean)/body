{
  ListenerInfo<K,V> info=new ListenerInfo<>(lsnr);
  boolean added;
  if (internal) {
    added=intLsnrs.putIfAbsent(id,info) == null;
    if (added)     intLsnrCnt.incrementAndGet();
  }
 else {
    added=lsnrs.putIfAbsent(id,info) == null;
    if (added)     lsnrCnt.incrementAndGet();
  }
  return added;
}
