{
  ListenerInfo<K,V> info=new ListenerInfo<>(lsnr);
  boolean added;
  if (internal) {
    added=intLsnrs.putIfAbsent(lsnrId,info) == null;
    if (added)     intLsnrCnt.incrementAndGet();
  }
 else {
    added=lsnrs.putIfAbsent(lsnrId,info) == null;
    if (added) {
      lsnrCnt.incrementAndGet();
      lsnr.onExecution();
    }
  }
  return added;
}
