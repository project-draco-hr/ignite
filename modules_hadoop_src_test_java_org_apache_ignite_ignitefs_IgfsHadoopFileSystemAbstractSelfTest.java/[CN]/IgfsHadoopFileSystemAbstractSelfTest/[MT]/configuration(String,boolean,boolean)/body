{
  Configuration cfg=new Configuration();
  cfg.set("fs.defaultFS","ggfs://" + authority + "/");
  cfg.set("fs.ggfs.impl",IgfsHadoopFileSystem.class.getName());
  cfg.set("fs.AbstractFileSystem.ggfs.impl",org.apache.ignite.ignitefs.hadoop.v2.IgfsHadoopFileSystem.class.getName());
  cfg.setBoolean("fs.ggfs.impl.disable.cache",true);
  if (skipEmbed)   cfg.setBoolean(String.format(GridGgfsHadoopUtils.PARAM_GGFS_ENDPOINT_NO_EMBED,authority),true);
  if (skipLocShmem)   cfg.setBoolean(String.format(GridGgfsHadoopUtils.PARAM_GGFS_ENDPOINT_NO_LOCAL_SHMEM,authority),true);
  return cfg;
}
