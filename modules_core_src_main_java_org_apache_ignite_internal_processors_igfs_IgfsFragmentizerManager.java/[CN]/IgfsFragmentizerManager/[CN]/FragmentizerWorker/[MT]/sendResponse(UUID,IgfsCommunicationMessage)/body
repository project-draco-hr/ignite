{
  try {
    sendWithRetries(nodeId,msg);
  }
 catch (  IgniteCheckedException e) {
    if (e.hasCause(ClusterTopologyCheckedException.class)) {
      if (log.isDebugEnabled())       log.debug("Failed to send sync response to IGFS fragmentizer coordinator " + "(originating node left the grid): " + nodeId);
    }
 else     U.error(log,"Failed to send sync response to IGFS fragmentizer coordinator: " + nodeId,e);
  }
}
