{
  g1Cfg.setCacheConfiguration(concat(dataCaches(1024),metaCaches(),GridCacheConfiguration.class));
  for (  GridCacheConfiguration cc : g1Cfg.getCacheConfiguration())   cc.setOffHeapMaxMemory(1000000);
  g1GgfsCfg2.setMaxSpaceSize(999999999999999999L);
  checkGridStartFails(g1Cfg,"Maximum GGFS space size cannot be greater than size of available heap memory and offheap storage",true);
}
