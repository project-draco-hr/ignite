{
  Map<String,Collection<GridNode>> grouped=new HashMap<>(top.size());
  for (  GridNode node : top) {
    for (    String host : node.hostNames()) {
      Collection<GridNode> nodes=grouped.get(host);
      if (nodes == null) {
        nodes=new ArrayList<>(2);
        grouped.put(host,nodes);
      }
      nodes.add(node);
    }
  }
  return grouped;
}
