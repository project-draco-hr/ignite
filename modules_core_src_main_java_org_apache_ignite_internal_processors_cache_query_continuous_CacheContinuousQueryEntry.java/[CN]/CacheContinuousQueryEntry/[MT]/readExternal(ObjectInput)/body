{
  boolean b=in.readBoolean();
  if (b) {
    keyBytes=U.readByteArray(in);
    if (in.readBoolean())     newValBytes=in.readBoolean() ? plain(U.readByteArray(in)) : marshaled(U.readByteArray(in));
    if (in.readBoolean())     oldValBytes=in.readBoolean() ? plain(U.readByteArray(in)) : marshaled(U.readByteArray(in));
    cacheName=U.readString(in);
    depInfo=(GridDeploymentInfo)in.readObject();
  }
 else {
    key=(K)in.readObject();
    newVal=(V)in.readObject();
    oldVal=(V)in.readObject();
  }
}
