{
  if (cctx.atomic())   throw new GridException("Data structures require GridCacheAtomicityMode.TRANSACTIONAL atomicity mode " + "(change atomicity mode from ATOMIC to TRANSACTIONAL in configuration)");
  if (!cctx.isReplicated() && !cctx.isLocal() && !CU.isNearEnabled(cctx))   throw new GridException("Cache data structures can not be used with near cache disabled on cache: " + cctx.cache().name());
}
