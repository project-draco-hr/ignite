{
  if (initLatch.getCount() > 0)   U.await(initLatch);
  if (!initFlag) {
    if (cctx.isColocated())     throw new GridException("Cache data structures can not be used with near cache disabled on cache: " + cctx.cache().name());
 else     throw new GridException("DataStructures manager was not properly initialized for cache: " + cctx.cache().name());
  }
}
