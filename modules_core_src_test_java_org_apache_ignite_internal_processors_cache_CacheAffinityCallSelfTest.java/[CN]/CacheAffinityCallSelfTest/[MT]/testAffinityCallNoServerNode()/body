{
  startGridsMultiThreaded(SERVERS_COUNT + 1);
  final Integer key=1;
  final Ignite client=grid(SERVERS_COUNT);
  assertTrue(client.configuration().isClientMode());
  final IgniteInternalFuture<Object> fut=GridTestUtils.runAsync(new Callable<Object>(){
    @Override public Object call() throws Exception {
      for (int i=0; i < SERVERS_COUNT; ++i)       stopGrid(i,false);
      return null;
    }
  }
);
  try {
    while (!fut.isDone())     client.compute().affinityCall(CACHE_NAME,key,new CheckCallable(key));
  }
 catch (  ClusterTopologyException ignore) {
    log.info("Expected error: " + ignore);
  }
 finally {
    stopAllGrids();
  }
}
