{
  try {
    GridRouterFactory.startTcpRouter(tcpRouterConfiguration());
    GridRouterFactory.startHttpRouter(httpRouterConfiguration());
    JOptionPane.showMessageDialog(null,new JComponent[]{new JLabel("GridGain router started."),new JLabel("Press OK to stop GridGain router.")},"GridGain router",JOptionPane.INFORMATION_MESSAGE);
  }
  finally {
    GridRouterFactory.stopAllRouters();
  }
}
