{
  System.out.println("");
  System.out.println(">>>");
  System.out.println(">>> Grid lifecycle event occurred: " + evt);
  System.out.println(">>> Grid name: " + grid.name());
  System.out.println(">>>");
  System.out.println("");
  if (evt == AFTER_GRID_START) {
    isStarted=true;
  }
 else   if (evt == AFTER_GRID_STOP) {
    isStarted=false;
  }
}
