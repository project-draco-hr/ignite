{
  if (parent != null)   obj=parent.value(obj);
  if (obj == null)   return null;
  if (!(obj instanceof GridPortableObject))   throw new GridSpiException("Non-portable object received as a result of property extraction " + "[parent=" + parent + ", propName="+ propName+ ", obj="+ obj+ ']');
  try {
    return ((GridPortableObject)obj).field(propName);
  }
 catch (  GridPortableException e) {
    throw new GridSpiException(e);
  }
}
