{
  if (!busyLock.enterBusy())   throw new IllegalStateException("Failed to get space size (grid is stopping).");
  try {
    GridCompoundFuture<?,?> fut=new GridCompoundFuture<Object,Object>(ctx);
    for (    Map.Entry<TypeId,TypeDescriptor> e : types.entrySet())     fut.add((IgniteFuture)rebuildIndexes(spi,e.getKey().space,e.getValue()));
    fut.markInitialized();
    return fut;
  }
  finally {
    busyLock.leaveBusy();
  }
}
