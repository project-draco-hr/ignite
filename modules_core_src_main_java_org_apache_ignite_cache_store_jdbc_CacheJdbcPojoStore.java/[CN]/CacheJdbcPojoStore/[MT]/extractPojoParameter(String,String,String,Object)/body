{
  try {
    Map<String,PojoMethodsCache> cacheMethods=pojosMthds.get(cacheName);
    if (cacheMethods == null)     throw new CacheException("Failed to find POJO type metadata for cache: " + U.maskName(cacheName));
    PojoMethodsCache mc=cacheMethods.get(typeName);
    if (mc == null)     throw new CacheException("Failed to find POJO type metadata for type: " + typeName);
    Method getter=mc.getters.get(fldName);
    if (getter == null)     throw new CacheLoaderException("Failed to find getter in POJO class [class=" + typeName + ", prop="+ fldName+ "]");
    return getter.invoke(obj);
  }
 catch (  Exception e) {
    throw new CacheException("Failed to read object of class: " + typeName,e);
  }
}
