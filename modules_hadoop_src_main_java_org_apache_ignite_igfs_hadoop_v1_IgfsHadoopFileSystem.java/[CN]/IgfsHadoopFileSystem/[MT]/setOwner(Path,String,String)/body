{
  A.notNull(p,"p");
  A.notNull(username,"username");
  A.notNull(grpName,"grpName");
  enterBusy();
  try {
    if (mode(p) == PROXY) {
      if (secondaryFs == null) {
        assert mgmt;
        return;
      }
      secondaryFs.setOwner(toSecondary(p),username,grpName);
    }
 else     if (rmtClient.update(convert(p),F.asMap(PROP_USER_NAME,username,PROP_GROUP_NAME,grpName)) == null)     throw new IOException("Failed to set file permission (file not found?)" + " [path=" + p + ", userName="+ username+ ", groupName="+ grpName+ ']');
  }
  finally {
    leaveBusy();
  }
}
