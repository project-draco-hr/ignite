{
  if (!isPerTask)   balancer.onContextInitialized(spiCtx);
 else {
    if (!getSpiContext().isEventRecordable(EVT_TASK_FAILED,EVT_TASK_FINISHED,EVT_JOB_MAPPED))     throw new GridSpiException("Required event types are disabled: " + U.gridEventName(EVT_TASK_FAILED) + ", "+ U.gridEventName(EVT_TASK_FINISHED)+ ", "+ U.gridEventName(EVT_JOB_MAPPED));
    getSpiContext().addLocalEventListener(lsnr,EVT_TASK_FAILED,EVT_TASK_FINISHED,EVT_JOB_MAPPED);
  }
}
