{
synchronized (this) {
    if (cnt == 0)     return null;
    if (nodeLeft)     return new GridFinishedFutureEx<>(new IgniteCheckedException("Failed to wait for finish synchronizer " + "state (node left grid): " + nodeId));
    if (pendingFut == null) {
      if (log.isTraceEnabled())       log.trace("Creating transaction synchronizer future [nodeId=" + nodeId + ", threadId="+ threadId+ ']');
      pendingFut=new GridFutureAdapter<>();
    }
    return pendingFut;
  }
}
