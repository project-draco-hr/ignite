{
synchronized (this) {
    nodeLeft=true;
    if (pendingFut != null) {
      IgniteClientDisconnectedCheckedException err=new IgniteClientDisconnectedCheckedException(reconnectFut,"Failed to wait for transaction synchronizer, client node disconnected: " + nodeId);
      pendingFut.onDone(err);
      pendingFut=null;
    }
  }
}
