{
  Map<String,Collection<UUID>> grouped=U.newHashMap(top.size());
  for (  GridNode node : top) {
    for (    String host : node.hostNames()) {
      Collection<UUID> nodeIds=grouped.get(host);
      if (nodeIds == null) {
        nodeIds=new ArrayList<>(2);
        grouped.put(host,nodeIds);
      }
      nodeIds.add(node.id());
    }
  }
  return grouped;
}
