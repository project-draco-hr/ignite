{
  try {
    return runLocal(c,plc);
  }
 catch (  Throwable e) {
    if (e instanceof Error)     U.error(log,"Closure execution failed with error.",e);
    if (e.getCause() instanceof RejectedExecutionException) {
      U.warn(log,"Closure execution has been rejected (will execute in the same thread) [plc=" + plc + ", closure="+ c+ ']');
      try {
        c.run();
        return new GridFinishedFuture();
      }
 catch (      Throwable t) {
        if (t instanceof Error)         U.error(log,"Closure execution failed with error.",t);
        return new GridFinishedFuture(U.cast(t));
      }
    }
 else     return new GridFinishedFuture(U.cast(e));
  }
}
