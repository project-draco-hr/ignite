{
switch (type) {
case BIT:
case BOOLEAN:
    return nullable ? Boolean.class : boolean.class;
case TINYINT:
  return nullable ? Byte.class : byte.class;
case SMALLINT:
return nullable ? Short.class : short.class;
case INTEGER:
return nullable ? Integer.class : int.class;
case BIGINT:
return nullable ? Long.class : long.class;
case REAL:
return nullable ? Float.class : float.class;
case FLOAT:
case DOUBLE:
return nullable ? Double.class : double.class;
case NUMERIC:
case DECIMAL:
return BigDecimal.class;
case CHAR:
case VARCHAR:
case LONGVARCHAR:
case NCHAR:
case NVARCHAR:
case LONGNVARCHAR:
case CLOB:
case NCLOB:
case SQLXML:
return String.class;
case DATE:
return java.sql.Date.class;
case TIME:
return java.sql.Time.class;
case TIMESTAMP:
return java.sql.Timestamp.class;
default :
return Object.class;
}
}
