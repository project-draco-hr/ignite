{
  if (!busyLock.tryReadLock())   return;
  try {
    HadoopProcess proc=runningProcsByProcId.remove(desc.processId());
    if (proc != null) {
      log.warning("Lost connection with alive process (will terminate): " + desc);
      runningProcsByJobId.remove(proc.jobId());
      proc.terminate();
    }
  }
  finally {
    busyLock.readUnlock();
  }
}
