{
  lock();
  try {
    terminated=true;
    if (!initFut.isDone())     initFut.listenAsync(new CI1<GridFuture<GridBiTuple<Process,GridHadoopProcessDescriptor>>>(){
      @Override public void apply(      GridFuture<GridBiTuple<Process,GridHadoopProcessDescriptor>> f){
        proc.destroy();
      }
    }
);
 else {
      proc.destroy();
    }
  }
  finally {
    unlock();
  }
}
