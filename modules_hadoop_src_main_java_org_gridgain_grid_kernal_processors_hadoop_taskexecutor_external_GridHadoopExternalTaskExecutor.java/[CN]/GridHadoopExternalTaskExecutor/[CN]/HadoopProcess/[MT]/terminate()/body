{
  lock();
  try {
    terminated=true;
    if (!initFut.isDone())     initFut.listenAsync(new CI1<GridFuture<IgniteBiTuple<Process,GridHadoopProcessDescriptor>>>(){
      @Override public void apply(      GridFuture<IgniteBiTuple<Process,GridHadoopProcessDescriptor>> f){
        proc.destroy();
      }
    }
);
 else     proc.destroy();
  }
  finally {
    unlock();
  }
}
