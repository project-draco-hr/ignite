{
  try {
    comm.sendMessage(proc.descriptor(),new GridHadoopPrepareForJobRequest(job.id(),job.info(),!F.isEmpty(plan.mappers(ctx.localNodeId())),plan.reducers(ctx.localNodeId())));
  }
 catch (  GridException e) {
    U.error(log,"Failed to send job prepare request to remote process [proc=" + proc + ", job="+ job+ ", plan="+ plan+ ']',e);
    proc.terminate();
  }
}
