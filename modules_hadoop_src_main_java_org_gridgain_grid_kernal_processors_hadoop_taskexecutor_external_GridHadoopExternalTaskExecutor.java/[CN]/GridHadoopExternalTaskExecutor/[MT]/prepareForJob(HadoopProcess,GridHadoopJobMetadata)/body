{
  try {
    Collection<GridHadoopInputSplit> mappers=meta.mapReducePlan().mappers(ctx.localNodeId());
    comm.sendMessage(proc.descriptor(),new GridHadoopPrepareForJobRequest(meta.jobId(),meta.jobInfo(),!F.isEmpty(mappers)));
  }
 catch (  GridException e) {
    U.error(log,"Failed to send job prepare request to remote process [proc=" + proc + ", meta="+ meta+ ']',e);
    proc.terminate();
  }
}
