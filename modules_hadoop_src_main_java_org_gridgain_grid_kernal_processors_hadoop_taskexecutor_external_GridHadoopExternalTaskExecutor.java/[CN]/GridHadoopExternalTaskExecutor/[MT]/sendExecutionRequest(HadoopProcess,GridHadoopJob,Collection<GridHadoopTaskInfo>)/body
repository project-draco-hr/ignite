{
  proc.lock();
  try {
    if (proc.terminated()) {
      notifyTasksFailed(tasks,CRASHED,null);
      return;
    }
    GridHadoopTaskExecutionRequest req=new GridHadoopTaskExecutionRequest();
    req.jobId(job.id());
    req.jobInfo(job.info());
    req.tasks(tasks);
    comm.sendMessage(proc.descriptor(),req);
  }
  finally {
    proc.unlock();
  }
}
