{
  String seqName=UUID.randomUUID().toString();
  final IgniteAtomicSequence seq=grid().cache(null).dataStructures().atomicSequence(seqName,0L,true);
  long curVal=0;
  Random r=new Random();
  for (int i=0; i < ITERATION_NUM; i++) {
    long delta=r.nextInt(10) + 1;
    long retVal=updated ? seq.addAndGet(delta) : seq.getAndAdd(delta);
    assertEquals(updated ? curVal + delta : curVal,retVal);
    curVal+=delta;
  }
}
