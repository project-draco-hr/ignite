{
  if (!F.eq(rmtVal,locVal))   throw new IgniteCheckedException(name + " should be the same on all nodes in grid for IGFS configuration " + "(fix configuration or set "+ "-D"+ IGNITE_SKIP_CONFIGURATION_CONSISTENCY_CHECK+ "=true system "+ "property ) [rmtNodeId="+ rmtNodeId+ ", rmt"+ propName+ "="+ rmtVal+ ", loc"+ propName+ "="+ locVal+ ", ggfName="+ igfsName+ ']');
}
