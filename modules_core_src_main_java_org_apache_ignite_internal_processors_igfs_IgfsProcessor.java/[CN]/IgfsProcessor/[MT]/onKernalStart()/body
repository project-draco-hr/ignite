{
  if (ctx.config().isDaemon())   return;
  if (!getBoolean(IGNITE_SKIP_CONFIGURATION_CONSISTENCY_CHECK)) {
    for (    ClusterNode n : ctx.discovery().remoteNodes())     checkGgfsOnRemoteNode(n);
  }
  for (  IgfsContext ggfsCtx : ggfsCache.values())   for (  IgfsManager mgr : ggfsCtx.managers())   mgr.onKernalStart();
}
