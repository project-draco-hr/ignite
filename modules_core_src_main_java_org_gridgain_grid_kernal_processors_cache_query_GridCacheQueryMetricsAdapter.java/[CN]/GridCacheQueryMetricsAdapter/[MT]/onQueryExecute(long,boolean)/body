{
synchronized (mux) {
    if (!executed) {
      minTime=duration;
      maxTime=duration;
      executed=true;
    }
 else {
      if (minTime > duration)       minTime=duration;
      if (maxTime < duration)       maxTime=duration;
    }
    execs++;
    if (fail)     fails++;
    avgTime=(avgTime * (execs - 1) + duration) / execs;
  }
}
