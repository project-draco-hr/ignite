{
  if (secConfPath != null) {
    URL url=U.resolveIgniteUrl(secConfPath);
    if (url == null) {
      throw new IllegalArgumentException("Failed to resolve secondary file system configuration path " + "(ensure that it exists locally and you have read access to it): " + secConfPath);
    }
    cfg.addResource(url);
  }
  if (secUri == null)   uri=FileSystem.getDefaultUri(cfg);
 else {
    try {
      uri=new URI(secUri);
    }
 catch (    URISyntaxException use) {
      throw new IOException("Failed to resolve secondary file system URI: " + secUri);
    }
  }
  String prop=HadoopFileSystemsUtils.disableFsCachePropertyName(uri.getScheme());
  cfg.setBoolean(prop,true);
}
