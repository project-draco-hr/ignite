{
  this.userName=userName;
  if (secConfPath != null) {
    URL url=U.resolveIgniteUrl(secConfPath);
    if (url == null) {
      throw new IllegalArgumentException("Failed to resolve secondary file system " + "configuration path: " + secConfPath);
    }
    cfg.addResource(url);
  }
  if (secUri == null)   uri=FileSystem.getDefaultUri(cfg);
 else {
    try {
      uri=new URI(secUri);
    }
 catch (    URISyntaxException use) {
      throw new IOException("Failed to resolve secondary file system URI: " + secUri);
    }
  }
  String prop=String.format("fs.%s.impl.disable.cache",uri.getScheme());
  cfg.setBoolean(prop,true);
}
