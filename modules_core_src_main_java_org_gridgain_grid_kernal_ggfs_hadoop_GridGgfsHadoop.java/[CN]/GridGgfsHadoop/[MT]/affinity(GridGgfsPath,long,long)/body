{
  final GridGgfsPathControlRequest msg=new GridGgfsPathControlRequest();
  msg.command(AFFINITY);
  msg.path(path);
  msg.start(start);
  msg.length(len);
  return withReconnectHandling(new CX1<GridGgfsHadoopIpcIo,GridPlainFuture<Collection<GridGgfsBlockLocation>>>(){
    @Override public GridPlainFuture<Collection<GridGgfsBlockLocation>> applyx(    GridGgfsHadoopIpcIo io) throws GridException {
      return io.send(msg).chain(BLOCK_LOCATION_COL_RES);
    }
  }
);
}
