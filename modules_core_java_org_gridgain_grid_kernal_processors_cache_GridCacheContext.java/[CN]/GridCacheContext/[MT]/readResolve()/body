{
  try {
    GridBiTuple<String,String> t=stash.get();
    GridKernal grid=GridFactoryEx.gridx(t.get1());
    if (grid == null)     throw new IllegalStateException("Failed to find grid for name: " + t.get1());
    GridCacheAdapter<K,V> cache=grid.internalCache(t.get2());
    if (cache == null)     throw new IllegalStateException("Failed to find cache for name: " + t.get2());
    return cache.context();
  }
 catch (  IllegalStateException e) {
    throw U.withCause(new InvalidObjectException(e.getMessage()),e);
  }
 finally {
    stash.remove();
  }
}
