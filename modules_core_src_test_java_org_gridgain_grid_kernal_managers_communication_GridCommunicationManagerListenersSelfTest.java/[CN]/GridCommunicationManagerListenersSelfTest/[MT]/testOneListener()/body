{
  Ignite ignite=G.grid(getTestGridName());
  final AtomicBoolean stop=new AtomicBoolean();
  P2<UUID,Object> l=new P2<UUID,Object>(){
    @Override public boolean apply(    UUID uuid,    Object o){
      return stop.get();
    }
  }
;
  try {
    ignite.message().localListen(null,l);
    checkLoop(2000);
  }
  finally {
    stop.set(true);
  }
}
