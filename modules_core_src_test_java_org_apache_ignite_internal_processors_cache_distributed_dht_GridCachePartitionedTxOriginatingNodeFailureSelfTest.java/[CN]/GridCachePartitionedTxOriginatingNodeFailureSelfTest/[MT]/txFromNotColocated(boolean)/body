{
  ClusterNode txNode=grid(originatingNode()).localNode();
  Integer key=null;
  for (int i=0; i < Integer.MAX_VALUE; i++) {
    if (!grid(originatingNode()).affinity(null).isPrimary(txNode,i) && !grid(originatingNode()).affinity(null).isBackup(txNode,i)) {
      key=i;
      break;
    }
  }
  assertNotNull(key);
  if (optimistic)   testTxOriginatingNodeFails(Collections.singleton(key),false);
 else   testPessimisticTxOriginatingNodeFails(Collections.singleton(key));
}
