{
  if (cls == null)   return;
  if (GridUtils.isPrimitiveOrWrapper(cls)) {
    for (    GridIndexingSpi indexingSpi : cctx.gridConfig().getIndexingSpi()) {
      if (!U.isDefaultIndexPrimitiveKey(indexingSpi))       throw new IllegalStateException("Invalid use of primitive class type in queries when " + "GridH2IndexingSpi.isDefaultIndexPrimitiveKey() is disabled " + "(consider enabling indexing for primitive types).");
    }
  }
}
