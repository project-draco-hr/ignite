{
  if (cls == null)   return;
  if (ClassUtils.isPrimitiveOrWrapper(cls)) {
    for (    GridIndexingSpi indexingSpi : cctx.gridConfig().getIndexingSpi()) {
      if (indexingSpi instanceof GridH2IndexingSpi)       if (!((GridH2IndexingSpiMBean)indexingSpi).isDefaultIndexPrimitiveKey())       throw new IllegalStateException("Invalid use of primitive class type in queries when " + "GridH2IndexingSpi.isDefaultIndexPrimitiveKey() is disabled " + "(consider enabling indexing for primitive types).");
    }
  }
}
