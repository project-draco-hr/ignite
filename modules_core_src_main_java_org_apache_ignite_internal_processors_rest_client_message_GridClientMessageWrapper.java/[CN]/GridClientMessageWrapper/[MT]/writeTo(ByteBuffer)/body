{
  stream.setBuffer(buf);
  if (!typeWritten) {
    if (stream.remaining() < 1)     return false;
    stream.writeByte(directType());
    typeWritten=true;
  }
switch (state) {
case 0:
    if (stream.remaining() < 4)     return false;
  stream.writeInt(msgSize);
state++;
case 1:
if (stream.remaining() < 8) return false;
stream.writeLong(reqId);
state++;
case 2:
if (stream.remaining() < 16) return false;
stream.writeByteArray(U.uuidToBytes(clientId),0,16);
state++;
case 3:
if (stream.remaining() < 16) return false;
stream.writeByteArray(U.uuidToBytes(destId),0,16);
state++;
case 4:
stream.writeByteArray(msg.array(),msg.position(),msg.remaining());
state++;
}
return true;
}
