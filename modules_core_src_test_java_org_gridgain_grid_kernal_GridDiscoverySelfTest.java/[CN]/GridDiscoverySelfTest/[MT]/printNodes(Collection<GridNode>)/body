{
  StringBuilder buf=new StringBuilder();
  if (nodes != null && !nodes.isEmpty()) {
    buf.append("Found nodes [nodes={");
    int i=0;
    for (Iterator<GridNode> iter=nodes.iterator(); iter.hasNext(); i++) {
      GridNode node=iter.next();
      buf.append(node.id());
      if (i + 1 != nodes.size())       buf.append(", ");
    }
    buf.append("}]");
  }
 else   buf.append("Found no nodes.");
  if (log().isDebugEnabled())   log().debug(buf.toString());
}
