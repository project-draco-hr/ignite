{
  Configuration cfg=new Configuration();
  cfg.set("fs.default.name","ggfs://myGgfs");
  cfg.set("fs.ggfs.impl",GridGgfsHadoopFileSystem.class.getName());
  if (setType)   cfg.set(String.format(PARAM_GGFS_ENDPOINT_TYPE,"myGgfs"),tcp ? "tcp" : "shmem");
  if (setHost)   cfg.set(String.format(PARAM_GGFS_ENDPOINT_HOST,"myGgfs"),"127.0.0.1");
  if (setPort)   cfg.set(String.format(PARAM_GGFS_ENDPOINT_PORT,"myGgfs"),Integer.toString(DFLT_IPC_PORT));
  return cfg;
}
