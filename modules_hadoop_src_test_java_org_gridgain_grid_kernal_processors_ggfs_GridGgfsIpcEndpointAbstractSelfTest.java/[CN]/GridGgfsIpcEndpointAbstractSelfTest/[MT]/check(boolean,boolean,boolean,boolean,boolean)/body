{
  try {
    startUp(2,endpointEnabled,setEndpoint ? endpointConfiguration() : null);
    fs=FileSystem.get(URI.create("ggfs://127.0.0.1:10500"),fileSystemConfiguration(setType,setHost,setPort));
    fs.mkdirs(PATH_FS);
    ggfs.exists(PATH_GGFS);
  }
 catch (  IOException e) {
    throw new IOException("Exception [endpoints=" + ggfs.context().server().endpoints() + ", utilLocHost="+ U.getLocalHost().getHostAddress()+ ", ggfsLocHost="+ ggfs.context().kernalContext().config().getLocalHost()+ ", envLocHost="+ X.getSystemOrEnv(GG_LOCAL_HOST)+ ']',e);
  }
}
