{
  CacheConfiguration<?,?> cacheCfg=defaultCacheConfiguration();
  cacheCfg.setCacheMode(PARTITIONED);
  cacheCfg.setAtomicityMode(TRANSACTIONAL);
  cacheCfg.setWriteSynchronizationMode(FULL_SYNC);
  cacheCfg.setSwapEnabled(true);
  cacheCfg.setBackups(1);
  LruEvictionPolicy plc=null;
  if (evictsEnabled()) {
    plc=new LruEvictionPolicy();
    plc.setMaxSize(100);
  }
  cacheCfg.setEvictionPolicy(plc);
  cacheCfg.setSqlOnheapRowCacheSize(128);
  cacheCfg.setIndexedTypes(Integer.class,Integer.class,Integer.class,TestValue.class,Integer.class,String.class,Integer.class,Long.class,Integer.class,Object.class);
  if (offheapEnabled())   cacheCfg.setOffHeapMaxMemory(evictsEnabled() ? 1000 : 0);
  return cacheCfg;
}
