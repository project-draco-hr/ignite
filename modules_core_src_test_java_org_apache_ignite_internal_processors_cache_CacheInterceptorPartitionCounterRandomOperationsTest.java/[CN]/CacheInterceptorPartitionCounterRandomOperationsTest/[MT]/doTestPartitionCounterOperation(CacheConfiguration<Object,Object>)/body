{
  ignite(0).createCache(ccfg);
  try {
    long seed=System.currentTimeMillis();
    Random rnd=new Random(seed);
    log.info("Random seed: " + seed);
    ConcurrentMap<Object,Object> expData=new ConcurrentHashMap<>();
    Map<Integer,Long> partCntr=new ConcurrentHashMap<>();
    for (int i=0; i < ITERATION_CNT; i++) {
      if (i % 20 == 0)       log.info("Iteration: " + i);
      for (int idx=0; idx < NODES; idx++)       randomUpdate(rnd,expData,partCntr,grid(idx).cache(ccfg.getName()));
    }
  }
  finally {
    ignite(0).destroyCache(ccfg.getName());
  }
}
