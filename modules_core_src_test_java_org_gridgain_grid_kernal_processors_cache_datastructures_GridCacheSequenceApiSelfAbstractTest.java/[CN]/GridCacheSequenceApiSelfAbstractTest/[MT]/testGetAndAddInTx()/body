{
  GridCacheTx tx=grid().cache(null).txStart(PESSIMISTIC,REPEATABLE_READ);
  try {
    for (int i=1; i < MAX_LOOPS_NUM; i++) {
      for (      GridCacheAtomicSequence seq : seqArr)       getAndAdd(seq,i);
      if (i % 100 == 0)       info("Finished iteration: " + i);
    }
  }
  finally {
    tx.close();
  }
}
