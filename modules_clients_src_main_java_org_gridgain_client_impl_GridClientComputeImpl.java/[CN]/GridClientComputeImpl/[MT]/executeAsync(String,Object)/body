{
  A.notNull(taskName,"taskName");
  return withReconnectHandling(new ClientProjectionClosure<R>(){
    @Override public GridClientFuture<R> apply(    GridClientConnection conn,    UUID destNodeId) throws GridClientConnectionResetException, GridClientClosedException {
      return conn.execute(taskName,taskArg,destNodeId);
    }
  }
);
}
