{
  if (!from.canRead())   exit("Failed to read source file '" + from.getAbsolutePath() + "'.");
  println("Replacing file '" + to.getAbsolutePath() + "'.");
  try {
    U.copy(from,renameToBak(to),true);
  }
 catch (  IOException e) {
    exit("Failed to replace file '" + to.getAbsolutePath() + "'.");
  }
}
