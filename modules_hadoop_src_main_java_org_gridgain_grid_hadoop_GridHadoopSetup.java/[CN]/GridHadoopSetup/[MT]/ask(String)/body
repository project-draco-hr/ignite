{
  X.print(" <  " + question + " (Y/N): ");
  BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
  String answer=null;
  try {
    answer=br.readLine();
  }
 catch (  IOException e) {
    exit("Failed to read answer: " + e.getMessage());
  }
  if (answer != null && "Y".equals(answer.toUpperCase().trim())) {
    X.println(" >  Yes.");
    return true;
  }
 else {
    X.println(" >  No.");
    return false;
  }
}
