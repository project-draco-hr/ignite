{
  closed=true;
  U.closeQuiet(srvSock);
  if (gcWorker != null) {
    U.cancel(gcWorker);
    boolean interrupted=Thread.interrupted();
    try {
      U.join(gcWorker);
    }
 catch (    GridInterruptedException e) {
      U.warn(log,"Interrupted when stopping GC worker.",e);
    }
 finally {
      if (interrupted)       Thread.currentThread().interrupt();
    }
  }
}
