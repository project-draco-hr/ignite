{
  if (busyLock.enterBusy()) {
    try {
      if (fileId == null)       return null;
      IgfsFileInfo info=id2InfoPrj.get(fileId);
      if (info == null && IgfsUtils.ROOT_ID.equals(fileId))       info=createSystemEntryIfAbsent(fileId);
      return info;
    }
  finally {
      busyLock.leaveBusy();
    }
  }
 else   throw new IllegalStateException("Failed to get file info because Grid is stopping: " + fileId);
}
