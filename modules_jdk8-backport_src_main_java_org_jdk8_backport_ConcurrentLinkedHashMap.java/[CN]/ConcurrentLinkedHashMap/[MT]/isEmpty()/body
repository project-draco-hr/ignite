{
  Segment<K,V>[] segments=this.segments;
  int[] mc=new int[segments.length];
  int mcsum=0;
  for (int i=0; i < segments.length; ++i) {
    if (segments[i].cnt != 0)     return false;
 else     mcsum+=mc[i]=segments[i].modCnt;
  }
  if (mcsum != 0) {
    for (int i=0; i < segments.length; ++i) {
      if (segments[i].cnt != 0 || mc[i] != segments[i].modCnt)       return false;
    }
  }
  return true;
}
