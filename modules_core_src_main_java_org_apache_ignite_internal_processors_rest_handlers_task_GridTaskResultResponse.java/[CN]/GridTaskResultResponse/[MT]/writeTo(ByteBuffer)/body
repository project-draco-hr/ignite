{
  commState.setBuffer(buf);
  if (!commState.typeWritten) {
    if (!commState.putByte(directType()))     return false;
    commState.typeWritten=true;
  }
switch (commState.idx) {
case 0:
    if (!commState.putString(err))     return false;
  commState.idx++;
case 1:
if (!commState.putBoolean(finished)) return false;
commState.idx++;
case 2:
if (!commState.putBoolean(found)) return false;
commState.idx++;
case 3:
if (!commState.putByteArray(resBytes)) return false;
commState.idx++;
}
return true;
}
