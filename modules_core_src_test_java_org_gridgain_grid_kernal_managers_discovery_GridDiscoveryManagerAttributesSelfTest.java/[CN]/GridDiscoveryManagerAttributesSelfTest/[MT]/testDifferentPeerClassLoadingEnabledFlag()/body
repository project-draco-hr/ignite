{
  try {
    startGrid(1);
    p2pEnabled=true;
    try {
      startGrid(2);
      fail();
    }
 catch (    IgniteCheckedException e) {
      assertTrue(e.getCause().getMessage().startsWith("Remote node has peer class loading enabled flag " + "different from"));
    }
  }
  finally {
    stopAllGrids();
  }
}
