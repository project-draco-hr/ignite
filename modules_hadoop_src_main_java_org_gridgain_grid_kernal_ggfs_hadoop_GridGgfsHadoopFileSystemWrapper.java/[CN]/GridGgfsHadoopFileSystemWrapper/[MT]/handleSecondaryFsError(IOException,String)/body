{
  boolean wrongVer=X.hasCause(e,RemoteException.class) || (e.getMessage() != null && e.getMessage().contains("Failed on local"));
  IgniteFsException ggfsErr=!wrongVer ? cast(detailMsg,e) : new IgniteFsInvalidHdfsVersionException("HDFS version you are connecting to differs from local " + "version.",e);
  return ggfsErr;
}
