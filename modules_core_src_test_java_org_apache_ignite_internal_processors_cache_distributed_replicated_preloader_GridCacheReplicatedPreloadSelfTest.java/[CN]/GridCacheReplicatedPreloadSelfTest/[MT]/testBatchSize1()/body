{
  preloadMode=SYNC;
  batchSize=1;
  try {
    GridCache<Integer,String> cache1=startGrid(1).cache(null);
    int cnt=100;
    for (int i=0; i < cnt; i++)     cache1.put(i,"val" + i);
    GridCache<Integer,String> cache2=startGrid(2).cache(null);
    assertEquals(cnt,cache2.size());
  }
  finally {
    stopAllGrids();
  }
}
