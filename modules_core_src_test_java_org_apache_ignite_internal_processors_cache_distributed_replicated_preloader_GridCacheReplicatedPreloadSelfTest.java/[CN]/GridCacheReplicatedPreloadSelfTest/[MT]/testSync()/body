{
  preloadMode=SYNC;
  batchSize=512;
  try {
    IgniteCache<Integer,String> cache1=startGrid(1).jcache(null);
    int keyCnt=1000;
    for (int i=0; i < keyCnt; i++)     cache1.put(i,"val" + i);
    IgniteCache<Integer,String> cache2=startGrid(2).jcache(null);
    assertEquals(keyCnt,cache2.localSize());
  }
  finally {
    stopAllGrids();
  }
}
