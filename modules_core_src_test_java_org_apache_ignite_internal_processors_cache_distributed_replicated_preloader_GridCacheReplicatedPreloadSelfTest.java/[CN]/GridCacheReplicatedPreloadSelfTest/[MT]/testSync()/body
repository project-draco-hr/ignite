{
  preloadMode=SYNC;
  batchSize=512;
  try {
    Cache<Integer,String> cache1=startGrid(1).cache(null);
    int keyCnt=1000;
    for (int i=0; i < keyCnt; i++)     cache1.put(i,"val" + i);
    Cache<Integer,String> cache2=startGrid(2).cache(null);
    assertEquals(keyCnt,cache2.size());
  }
  finally {
    stopAllGrids();
  }
}
