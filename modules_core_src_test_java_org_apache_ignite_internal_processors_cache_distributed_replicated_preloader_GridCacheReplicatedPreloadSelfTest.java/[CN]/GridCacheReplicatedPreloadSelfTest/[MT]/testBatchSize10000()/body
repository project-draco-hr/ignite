{
  preloadMode=SYNC;
  batchSize=10000;
  try {
    IgniteCache<Integer,String> cache1=startGrid(1).jcache(null);
    int cnt=100;
    for (int i=0; i < cnt; i++)     cache1.put(i,"val" + i);
    IgniteCache<Integer,String> cache2=startGrid(2).jcache(null);
    assertEquals(cnt,cache2.localSize());
  }
  finally {
    stopGrid(1);
    stopGrid(2);
  }
}
