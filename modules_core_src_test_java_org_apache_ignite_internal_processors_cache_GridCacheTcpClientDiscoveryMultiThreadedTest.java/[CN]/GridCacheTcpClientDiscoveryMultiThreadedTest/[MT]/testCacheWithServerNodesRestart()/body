{
  srvNodesCnt=3;
  clientNodesCnt=1;
  startServerNodes();
  client=true;
  Ignite client=startGrid(srvNodesCnt);
  checkTopology(gridCount());
  IgniteCache<Integer,Integer> cache=client.cache(null);
  performSimpleOperationsOnCache(cache);
  stopServerNodes();
  startServerNodes();
  checkTopology(gridCount());
  performSimpleOperationsOnCache(cache);
}
