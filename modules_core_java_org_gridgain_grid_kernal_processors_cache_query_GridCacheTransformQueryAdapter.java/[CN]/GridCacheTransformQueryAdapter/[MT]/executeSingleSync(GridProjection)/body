{
  if (trans == null)   throw new GridException("Transformer must be set for transform query.");
  Collection<GridNode> nodes=nodes(grid);
  if (qryLog.isDebugEnabled())   qryLog.debug(U.compact("Executing transform query " + toShortString(nodes)));
  Collection<Map.Entry<K,T>> res=executeSync(nodes,false,false,null,null);
  return F.first(res);
}
