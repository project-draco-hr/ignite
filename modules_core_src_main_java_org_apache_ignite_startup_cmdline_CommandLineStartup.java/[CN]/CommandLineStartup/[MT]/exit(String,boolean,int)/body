{
  if (errMsg != null)   X.error(errMsg);
  String runner=System.getProperty(IGNITE_PROG_NAME,"ggstart.{sh|bat}");
  int space=runner.indexOf(' ');
  runner=runner.substring(0,space == -1 ? runner.length() : space);
  if (showUsage) {
    boolean ggstart=runner.contains("ggstart.");
    X.error("Usage:","    " + runner + (ggstart ? " [?]|[path {-v}]|[-i]" : " [?]|[-v]"),"    Where:","    ?, /help, -help - show this message.","    -v              - verbose mode (quiet by default).");
    if (ggstart) {
      X.error("    -i              - interactive mode (choose configuration file from list).","    path            - path to Spring XML configuration file.","                      Path can be absolute or relative to IGNITE_HOME."," ","Spring file should contain one bean definition of Java type","'org.gridgain.grid.GridConfiguration'. Note that bean will be","fetched by the type and its ID is not used.");
    }
  }
  System.exit(exitCode);
}
