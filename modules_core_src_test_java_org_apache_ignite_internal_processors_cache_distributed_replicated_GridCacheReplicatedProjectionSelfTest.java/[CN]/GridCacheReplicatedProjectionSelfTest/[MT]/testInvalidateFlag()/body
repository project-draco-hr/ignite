{
  try {
    for (int i=1; i < 3; i++)     startGrid(i);
    String key="1";
    Integer val=Integer.valueOf(key);
    cache(0).put(key,val);
    for (int i=0; i < 3; i++)     assertEquals(val,grid(i).cache(null).peek(key));
    cache(0).flagsOn(INVALIDATE).put(key,val);
    for (int i=0; i < 3; i++) {
      Object peeked=grid(i).cache(null).peek(key);
      assertEquals(val,peeked);
    }
  }
  finally {
    for (int i=1; i < 3; i++)     stopGrid(i);
  }
}
