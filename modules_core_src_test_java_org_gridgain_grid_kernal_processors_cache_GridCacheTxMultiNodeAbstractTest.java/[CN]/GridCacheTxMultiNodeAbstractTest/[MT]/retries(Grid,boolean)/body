{
  UUID nodeId=grid.cluster().localNode().id();
  for (int i=0; i < RETRIES; i++) {
    int cnt=cntr.getAndIncrement();
    if (DEBUG)     grid.log().info("***");
    if (DEBUG || cnt % LOG_FREQ == 0)     grid.log().info("*** Iteration #" + i + " ***");
    if (DEBUG)     grid.log().info("***");
    String itemKey=nodeId + "-#" + i;
    if (nodeId.equals(primaryId(grid,itemKey)))     onItemPrimary(putCntr,grid,itemKey,i);
 else     onItemNear(putCntr,grid,itemKey,i);
  }
}
