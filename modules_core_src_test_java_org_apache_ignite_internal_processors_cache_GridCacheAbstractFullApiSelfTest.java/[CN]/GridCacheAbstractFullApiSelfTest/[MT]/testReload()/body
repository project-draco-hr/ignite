{
  String key="testReload";
  GridCache<String,Integer> cache=primaryCache(key);
  assertNull(cache.peek(key));
  cache.put(key,1);
  assertEquals((Integer)1,cache.peek(key));
  cache.clearLocally(key);
  assertNull(cache.peek(key));
  assertEquals((Integer)1,cache.reload(key));
  assertEquals((Integer)1,cache.peek(key));
}
