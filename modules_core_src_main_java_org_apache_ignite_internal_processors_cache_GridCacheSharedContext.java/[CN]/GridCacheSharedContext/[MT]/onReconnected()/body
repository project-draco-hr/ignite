{
  List<GridCacheSharedManager<K,V>> mgrs=new LinkedList<>();
  setManagers(mgrs,txMgr,jtaMgr,verMgr,mvccMgr,new GridCacheDeploymentManager<K,V>(),new GridCachePartitionExchangeManager<K,V>(),affMgr,ioMgr);
  this.mgrs=mgrs;
  for (  GridCacheSharedManager<K,V> mgr : mgrs) {
    if (restartOnDisconnect(mgr))     mgr.start(this);
  }
  for (  GridCacheSharedManager<?,?> mgr : mgrs)   mgr.onKernalStart(true);
}
