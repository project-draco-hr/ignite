{
  if (newPath == null) {
    if (secondaryFs != null)     secondaryFs.setWorkingDirectory(toSecondary(convert(DFLT_WORKING_DIR)));
    workingDir=DFLT_WORKING_DIR;
  }
 else {
    if (secondaryFs != null)     secondaryFs.setWorkingDirectory(toSecondary(newPath));
    workingDir=convert(newPath);
  }
}
