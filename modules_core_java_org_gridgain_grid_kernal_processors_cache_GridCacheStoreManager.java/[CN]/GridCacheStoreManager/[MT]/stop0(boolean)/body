{
  if (store instanceof GridLifecycleAware) {
    if (cctx.config().isWriteBehindEnabled() || cctx.isNear() || !CU.isNearEnabled(cctx)) {
      try {
        ((GridLifecycleAware)store).stop();
      }
 catch (      GridException e) {
        U.error(log(),"Failed to stop cache store.",e);
      }
    }
  }
}
