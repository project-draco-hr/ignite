{
  writer.setBuffer(buf);
  if (!writer.isTypeWritten()) {
    if (!writer.writeByte(null,directType()))     return false;
    writer.onTypeWritten();
  }
switch (writer.state()) {
case 0:
    if (!writer.writeByteArray("bytes",bytes))     return false;
  writer.incrementState();
case 1:
if (!writer.writeBoolean("plain",plain)) return false;
writer.incrementState();
}
return true;
}
