{
  long id=productId < 1000 ? (((productId + 1) * (productId + 1) * 1000) / 2) * 10 : (productId / 20) * (productId / 20);
  id=id == 0 ? 24 : id;
  float price=Long.parseLong(Long.toString(id).replace("0",""));
  int i=0;
  while (price > 100) {
    if (i % 2 != 0)     price=price / 2;
 else     price=(float)Math.sqrt(price);
    i++;
  }
  return ((float)((int)(price * 100))) / 100.0F;
}
