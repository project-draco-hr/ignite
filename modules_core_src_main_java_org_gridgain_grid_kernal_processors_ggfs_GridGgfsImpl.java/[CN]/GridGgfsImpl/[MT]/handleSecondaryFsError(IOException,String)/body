{
  boolean wrongVer=X.hasCause(e,RemoteException.class) || (e.getMessage() != null && e.getMessage().contains("Failed on local"));
  GridGgfsException ggfsErr=!wrongVer ? new GridGgfsException(detailMsg,e) : new GridGgfsInvalidHdfsVersionException("HDFS version you are connecting to differs from local " + "version (start GGFS node with '-h1' option if using HDFS ver. 1.x)",e);
  LT.error(log,ggfsErr,"Failed to connect to secondary Hadoop file system.");
  return ggfsErr;
}
