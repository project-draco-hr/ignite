{
  if (enterBusy()) {
    try {
      try {
        return meta.sampling();
      }
 catch (      GridException e) {
        U.error(log,"Failed to get sampling state.",e);
        return false;
      }
    }
  finally {
      busyLock.leaveBusy();
    }
  }
 else   throw new IllegalStateException("Failed to get global sampling flag because Grid is stopping.");
}
