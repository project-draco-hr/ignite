{
  try {
    if (secondaryFs != null) {
      if (secondaryFs.getFileStatus(secondaryPath(path)) != null) {
        throw new GridException("Path mapped to a PRIMARY mode found in secondary file " + "system. Remove path from secondary file system or change path mapping: " + path);
      }
    }
  }
 catch (  FileNotFoundException ignored) {
  }
catch (  IOException e) {
    throw handleSecondaryFsError(e,"Failed to get status from secondary file system for path: " + path);
  }
}
