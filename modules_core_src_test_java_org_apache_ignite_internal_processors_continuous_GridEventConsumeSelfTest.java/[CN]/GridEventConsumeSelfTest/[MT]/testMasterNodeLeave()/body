{
  Ignite g=startGrid("anotherGrid");
  final UUID nodeId=g.cluster().localNode().id();
  final CountDownLatch latch=new CountDownLatch(GRID_CNT);
  for (int i=0; i < GRID_CNT; i++) {
    grid(0).events().localListen(new IgnitePredicate<IgniteEvent>(){
      @Override public boolean apply(      IgniteEvent evt){
        if (nodeId.equals(((IgniteDiscoveryEvent)evt).eventNode().id()))         latch.countDown();
        return true;
      }
    }
,EVT_NODE_LEFT);
  }
  g.events().remoteListen(null,new P1<IgniteEvent>(){
    @Override public boolean apply(    IgniteEvent evt){
      return true;
    }
  }
,EVTS_ALL);
  stopGrid("anotherGrid");
  latch.await();
}
