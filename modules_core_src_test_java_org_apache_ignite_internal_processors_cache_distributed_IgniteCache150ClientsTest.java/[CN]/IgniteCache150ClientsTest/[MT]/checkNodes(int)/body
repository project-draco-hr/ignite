{
  assertEquals(expCnt,G.allGrids().size());
  long topVer=-1L;
  for (  Ignite ignite : G.allGrids()) {
    log.info("Check node: " + ignite.name());
    if (topVer == -1L)     topVer=ignite.cluster().topologyVersion();
 else     assertEquals("Unexpected topology version for node: " + ignite.name(),topVer,ignite.cluster().topologyVersion());
    assertEquals("Unexpected number of nodes for node: " + ignite.name(),expCnt,ignite.cluster().nodes().size());
  }
}
