{
  for (int i=0; i < cnt; i++) {
    final Ignite g=startGrid(startIdx++);
    if (DEBUG)     g.events().localListen(new GridPredicate<GridEvent>(){
      @Override public boolean apply(      GridEvent evt){
        info("\n>>> Preload event [grid=" + g.name() + ", evt="+ evt+ ']');
        return true;
      }
    }
,EVTS_CACHE_PRELOAD);
    list.add(g);
  }
}
