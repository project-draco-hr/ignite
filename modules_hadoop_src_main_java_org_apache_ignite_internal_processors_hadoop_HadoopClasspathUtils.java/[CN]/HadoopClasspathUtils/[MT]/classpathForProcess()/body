{
  List<String> res=new ArrayList<>();
  for (  final SearchDirectory dir : classpathDirectories()) {
    File[] files=dir.files();
    if (dir.useWildcard()) {
      if (files.length > 0)       res.add(dir.absolutePath() + File.separator + '*');
    }
 else {
      for (      File file : files)       res.add(file.getAbsolutePath());
    }
  }
  return res;
}
