{
  assert(GRID_CNT > 0);
  startGrids(GRID_CNT);
  try {
    final Grid g=grid(0);
    realTimePopulate(g);
    long hits=0;
    long misses=0;
    for (int i=0; i < GRID_CNT; i++) {
      GridCacheMetrics m=grid(i).cache(null).metrics();
      hits+=m.hits();
      misses+=m.misses();
    }
    assertEquals(CNT / 2,hits);
    assertEquals(CNT / 2,misses);
  }
  finally {
    stopAllGrids();
  }
}
