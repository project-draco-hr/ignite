{
  stopped=true;
  boolean interrupted=false;
  while (true) {
    if (rwLock.tryWriteLock())     break;
 else {
      try {
        U.sleep(200);
      }
 catch (      IgniteInterruptedCheckedException ignore) {
        interrupted=true;
      }
    }
  }
  if (interrupted)   Thread.currentThread().interrupt();
  try {
    stopped=true;
  }
  finally {
    rwLock.writeUnlock();
  }
}
