{
  A.notNull(mode,"mode");
  guard();
  try {
    return jobFactory == null ? new GridFinishedFuture<Collection<R>>(ctx) : ctx.closure().callAsync(mode,F.transform(args,new C1<T,Callable<R>>(){
      @Override public Callable<R> apply(      T arg){
        return F.curry(jobFactory.apply(),arg);
      }
    }
),prj.nodes());
  }
  finally {
    unguard();
  }
}
