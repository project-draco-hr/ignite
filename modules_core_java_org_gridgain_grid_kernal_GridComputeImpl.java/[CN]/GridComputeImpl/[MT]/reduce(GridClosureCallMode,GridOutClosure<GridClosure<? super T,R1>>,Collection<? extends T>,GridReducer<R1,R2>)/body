{
  A.notNull(mode,"mode");
  guard();
  try {
    return jobFactory == null ? new GridFinishedFuture<R2>(ctx) : ctx.closure().forkjoinAsync(mode,F.transform(args,new C1<T,Callable<R1>>(){
      @Override public Callable<R1> apply(      T arg){
        return F.curry(jobFactory.apply(),arg);
      }
    }
),rdc,prj.nodes());
  }
  finally {
    unguard();
  }
}
