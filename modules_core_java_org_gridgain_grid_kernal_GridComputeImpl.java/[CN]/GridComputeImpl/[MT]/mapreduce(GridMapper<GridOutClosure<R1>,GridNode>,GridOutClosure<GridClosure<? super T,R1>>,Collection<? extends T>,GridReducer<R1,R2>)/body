{
  guard();
  try {
    return jobFactory == null ? new GridFinishedFuture<R2>(ctx) : ctx.closure().forkjoinAsync(mapper,F.transform(args,new C1<T,GridOutClosure<R1>>(){
      @Override public GridOutClosure<R1> apply(      T arg){
        return F.curry(jobFactory.apply(),arg);
      }
    }
),rdc,prj.nodes());
  }
  finally {
    unguard();
  }
}
