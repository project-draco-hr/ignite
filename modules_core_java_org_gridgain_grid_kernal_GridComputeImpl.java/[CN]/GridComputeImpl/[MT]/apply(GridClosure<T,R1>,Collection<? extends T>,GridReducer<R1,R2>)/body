{
  A.notNull(job,"job");
  A.notNull(rdc,"rdc");
  guard();
  try {
    return job == null ? new GridFinishedFuture<R2>(ctx) : ctx.closure().forkjoinAsync(BALANCE,F.transform(args,new C1<T,Callable<R1>>(){
      @Override public Callable<R1> apply(      T arg){
        return F.curry(job,arg);
      }
    }
),rdc,prj.nodes());
  }
  finally {
    unguard();
  }
}
