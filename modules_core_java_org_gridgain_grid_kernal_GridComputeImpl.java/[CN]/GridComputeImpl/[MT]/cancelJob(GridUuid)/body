{
  A.notNull(jobId,"jobId");
  guard();
  try {
    boolean loc=F.nodeIds(prj.nodes()).contains(ctx.localNodeId());
    if (loc)     ctx.job().cancelJob(null,jobId,false);
    ctx.io().send(prj.forRemotes().nodes(),TOPIC_JOB_CANCEL,new GridJobCancelRequest(null,jobId,false),SYSTEM_POOL);
  }
  finally {
    unguard();
  }
}
