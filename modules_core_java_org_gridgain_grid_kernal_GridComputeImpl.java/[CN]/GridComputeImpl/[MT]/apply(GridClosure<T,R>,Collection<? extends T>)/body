{
  A.notNull(job,"job");
  guard();
  try {
    return job == null ? new GridFinishedFuture<Collection<R>>(ctx) : ctx.closure().callAsync(BALANCE,F.transform(args,new C1<T,Callable<R>>(){
      @Override public Callable<R> apply(      T arg){
        return F.curry(job,arg);
      }
    }
),prj.nodes());
  }
  finally {
    unguard();
  }
}
