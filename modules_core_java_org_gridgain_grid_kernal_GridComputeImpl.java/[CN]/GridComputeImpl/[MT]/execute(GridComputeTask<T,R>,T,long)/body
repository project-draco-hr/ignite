{
  A.notNull(task,"task");
  A.ensure(timeout >= 0,"timeout >= 0");
  guard();
  try {
    ctx.task().setThreadContextIfNotNull(TC_SUBGRID,prj.nodes());
    ctx.task().setThreadContextIfNotNull(TC_PREDICATE,prj.predicate());
    return ctx.task().execute(task,arg,timeout);
  }
  finally {
    unguard();
  }
}
