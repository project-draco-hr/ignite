{
  A.notEmpty(affKeys,"affKeys");
  A.notNull(job,"job");
  guard();
  try {
    return ctx.closure().runAsync(BALANCE,F.transform(affKeys,new CX1<Object,CA>(){
      @Override public CA applyx(      Object affKey) throws GridException {
        return wrapRun(cacheName,affKey,job);
      }
    }
),prj.nodes());
  }
  finally {
    unguard();
  }
}
