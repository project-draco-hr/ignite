{
  guard();
  try {
    return (affKeys == null || affKeys.isEmpty() || job == null) ? new GridFinishedFuture(ctx) : ctx.closure().runAsync(BALANCE,F.transform(affKeys,new CX1<Object,CA>(){
      @Override public CA applyx(      Object affKey) throws GridException {
        return wrapRun(cacheName,affKey,job);
      }
    }
),prj.nodes());
  }
  finally {
    unguard();
  }
}
