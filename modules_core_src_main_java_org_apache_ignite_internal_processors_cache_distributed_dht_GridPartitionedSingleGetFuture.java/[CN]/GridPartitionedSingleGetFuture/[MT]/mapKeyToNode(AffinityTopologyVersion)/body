{
  int part=cctx.affinity().partition(key);
  List<ClusterNode> affNodes=cctx.affinity().nodes(part,topVer);
  if (affNodes.isEmpty()) {
    onDone(serverNotFoundError(topVer));
    return null;
  }
  boolean fastLocGet=(!forcePrimary || affNodes.get(0).isLocal()) && cctx.allowFastLocalRead(part,affNodes,topVer);
  if (fastLocGet && localGet(topVer,part))   return null;
  ClusterNode affNode=affinityNode(affNodes);
  if (affNode == null) {
    onDone(serverNotFoundError(topVer));
    return null;
  }
  return affNode;
}
