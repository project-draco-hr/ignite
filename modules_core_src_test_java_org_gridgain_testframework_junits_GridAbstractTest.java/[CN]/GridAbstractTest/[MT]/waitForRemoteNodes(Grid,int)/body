{
  while (true) {
    Collection<GridNode> nodes=grid.cluster().forRemotes().nodes();
    if (nodes != null && nodes.size() >= cnt)     return;
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException ignored) {
      throw new GridException("Interrupted while waiting for remote nodes [gridName=" + grid.name() + ", count="+ cnt+ ']');
    }
  }
}
