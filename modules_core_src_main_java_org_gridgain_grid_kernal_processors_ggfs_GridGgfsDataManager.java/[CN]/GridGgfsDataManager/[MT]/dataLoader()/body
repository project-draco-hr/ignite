{
  GridDataLoader<GridGgfsBlockKey,byte[]> ldr=ggfsCtx.kernalContext().<GridGgfsBlockKey,byte[]>dataLoad().dataLoader(dataCachePrj.name());
  GridGgfsConfiguration cfg=ggfsCtx.configuration();
  if (cfg.getPerNodeBatchSize() > 0)   ldr.perNodeBufferSize(cfg.getPerNodeBatchSize());
  if (cfg.getPerNodeParallelBatchCount() > 0)   ldr.perNodeParallelLoadOperations(cfg.getPerNodeParallelBatchCount());
  ldr.updater(GridDataLoadCacheUpdaters.<GridGgfsBlockKey,byte[]>batchedSorted());
  return ldr;
}
