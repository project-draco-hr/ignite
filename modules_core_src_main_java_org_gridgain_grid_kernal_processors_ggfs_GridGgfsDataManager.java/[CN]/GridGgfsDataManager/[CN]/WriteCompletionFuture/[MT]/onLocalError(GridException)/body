{
  if (e instanceof IgniteFsOutOfSpaceException)   onDone(new GridException("Failed to write data (not enough space on node): " + ggfsCtx.kernalContext().localNodeId(),e));
 else   onDone(new GridException("Failed to wait for write completion (write failed on node): " + ggfsCtx.kernalContext().localNodeId(),e));
}
