{
  A.ensure(!F.isEmpty(ids),"ids must not be empty.");
  guard();
  try {
    if (F.exist(nodes(),F.and(F.nodeForNodeIds(),new DaemonFilter())))     U.warn(log,"Creating projection with daemon node (likely a misuse)");
    return !dynamic() ? newProjection(F.retain(nodes(),true,F.<GridNode>nodeForNodeIds(ids))) : new GridProjectionImpl(this,ctx,F.and(predicate(),new GridNodePredicate<>(ids)));
  }
  finally {
    unguard();
  }
}
