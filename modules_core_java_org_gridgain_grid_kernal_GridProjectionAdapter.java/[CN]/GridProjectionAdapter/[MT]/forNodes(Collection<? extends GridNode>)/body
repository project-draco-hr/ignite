{
  A.ensure(!F.isEmpty(nodes),"nodes must not be empty.");
  guard();
  try {
    if (F.exist(nodes,new DaemonFilter()))     U.warn(log,"Creating projection with daemon node. Likely a misuse.");
    return !dynamic() ? newProjection(F.retain(nodes(),true,nodes)) : new GridProjectionImpl(this,ctx,F.and(predicate(),new GridNodePredicate<>(F.nodeIds(nodes))));
  }
  finally {
    unguard();
  }
}
