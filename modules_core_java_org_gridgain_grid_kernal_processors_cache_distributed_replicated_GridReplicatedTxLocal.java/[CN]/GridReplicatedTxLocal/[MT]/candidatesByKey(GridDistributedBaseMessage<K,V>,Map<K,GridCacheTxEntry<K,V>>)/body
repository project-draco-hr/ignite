{
  if (txEntries != null) {
    for (    GridCacheTxEntry<K,V> txEntry : txEntries.values()) {
      while (true) {
        try {
          GridCacheMapEntry<K,V> entry=(GridCacheMapEntry<K,V>)txEntry.cached();
          req.candidatesByKey(entry.key(),entry.localCandidates(xidVer));
          break;
        }
 catch (        GridCacheEntryRemovedException ignore) {
          if (log.isDebugEnabled())           log.debug("Got removed entry while setting local candidates for entry (will retry) [entry=" + txEntry.cached() + ", tx="+ this+ ']');
          txEntry.cached(cctx.cache().entryEx(txEntry.key()),txEntry.keyBytes());
        }
      }
    }
  }
}
