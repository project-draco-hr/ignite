{
  byte s=state;
  if (s == STATE_NEW) {
synchronized (this) {
      while ((s=state) == STATE_NEW) {
        s=refreshState();
        if (s != STATE_NEW) {
          state=s;
          break;
        }
        try {
          wait(10);
        }
 catch (        InterruptedException ignored) {
          Thread.currentThread().interrupt();
          return true;
        }
      }
    }
  }
  return s == STATE_INSERTED;
}
