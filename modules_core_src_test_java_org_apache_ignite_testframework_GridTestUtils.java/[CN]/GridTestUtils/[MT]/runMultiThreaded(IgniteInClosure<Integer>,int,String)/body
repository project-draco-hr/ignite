{
  List<Callable<?>> calls=new ArrayList<>(threadNum);
  for (int i=0; i < threadNum; i++) {
    final int idx=i;
    calls.add(new Callable<Void>(){
      @Override public Void call() throws Exception {
        call.apply(idx);
        return null;
      }
    }
);
  }
  return runMultiThreaded(calls,threadName);
}
