{
  String ggHome=System.getProperty("GRIDGAIN_HOME");
  if (ggHome == null)   ggHome=System.getenv("GRIDGAIN_HOME");
  if (ggHome == null)   throw new Exception("GRIDGAIN_HOME parameter must be set either as system or environment variable.");
  File dir=new File(ggHome);
  if (!dir.exists())   throw new Exception("Gridgain home does not exist [girdgain-home=" + dir.getAbsolutePath() + ']');
  if (!dir.isDirectory())   throw new Exception("Gridgain home is not a directory [gridgain-home=" + dir.getAbsolutePath() + ']');
  return ggHome;
}
