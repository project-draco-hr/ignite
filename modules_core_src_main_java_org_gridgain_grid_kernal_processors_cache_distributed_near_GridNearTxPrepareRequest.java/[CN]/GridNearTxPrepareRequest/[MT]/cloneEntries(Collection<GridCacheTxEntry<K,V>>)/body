{
  if (F.isEmpty(c))   return c;
  Collection<GridCacheTxEntry<K,V>> cp=new ArrayList<>(c.size());
  for (  GridCacheTxEntry<K,V> e : c) {
    GridCacheContext<K,V> cacheCtx=e.context();
    if (cacheCtx.isNear())     cacheCtx=cacheCtx.nearTx().dht().context();
    if (cacheCtx.isNear())     cp.add(e.cleanCopy(cacheCtx));
 else     cp.add(e);
  }
  return cp;
}
