{
  super(ctx);
  String[] accessiblePaths=ctx.config().getRestAccessibleFolders();
  if (accessiblePaths == null) {
    String ggHome=U.getGridGainHome();
    if (ggHome != null)     accessiblePaths=new String[]{ggHome};
  }
  if (accessiblePaths != null) {
    accessibleFolders=new ArrayList<>();
    for (    String accessiblePath : accessiblePaths)     accessibleFolders.add(new File(accessiblePath));
  }
 else   if (log.isDebugEnabled())   log.debug("Neither restAccessibleFolders nor GRIDGAIN_HOME properties are not set, will not restrict " + "log files access");
}
