{
  super.beforeTestsStarted();
  startGrid(0);
  startGrid(1);
  grid(0).managed().deployNodeSingleton(SERVICE_NAME1,new DummyServiceImpl());
  grid(0).managed(grid(0).cluster().forLocal()).deployClusterSingleton(SERVICE_NAME2,new DummyServiceImpl());
