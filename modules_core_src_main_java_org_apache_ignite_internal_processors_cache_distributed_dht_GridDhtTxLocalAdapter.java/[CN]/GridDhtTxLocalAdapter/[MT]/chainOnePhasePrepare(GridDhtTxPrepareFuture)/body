{
  if (commitOnPrepare()) {
    return finishFuture().chain(new CX1<IgniteInternalFuture<IgniteInternalTx>,GridNearTxPrepareResponse>(){
      @Override public GridNearTxPrepareResponse applyx(      IgniteInternalFuture<IgniteInternalTx> finishFut) throws IgniteCheckedException {
