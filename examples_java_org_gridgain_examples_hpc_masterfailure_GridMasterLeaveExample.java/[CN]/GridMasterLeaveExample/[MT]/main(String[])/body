{
  try (Grid g=GridGain.start("examples/config/example-master-leave-aware.xml")){
    if (g.nodes().size() < 2)     System.err.println(">>> No remote nodes found. Please start a remote node using GridMasterLeaveNodeStartup " + "class.");
 else {
      System.out.println(">>> Starting GridMasterLeaveJob on remote node ...");
      g.forRemotes().compute().call(GridClosureCallMode.UNICAST,new GridMasterLeaveJob(USER_JOB_ID));
      System.out.println(">>> Please stop this node and check worker node's output.");
      System.out.println(">>> Restart this example and observe the job restarted from the saved checkpoint state.");
      JOptionPane.showMessageDialog(null,new JComponent[]{new JLabel("Master node started."),new JLabel("Press OK to stop it."),new JLabel("Restart it again if needed to complete example.")},"GridGain Master Node",JOptionPane.INFORMATION_MESSAGE);
    }
  }
 }
