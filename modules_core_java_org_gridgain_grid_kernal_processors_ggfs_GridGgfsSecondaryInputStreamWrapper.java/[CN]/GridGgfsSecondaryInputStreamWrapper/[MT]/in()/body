{
  if (opened) {
    if (err != null)     throw err;
  }
 else {
    opened=true;
    try {
      in=fs.open(path,bufSize);
      if (in == null)       throw new IOException("Failed to open input stream (secondary file system returned null): " + path);
    }
 catch (    IOException e) {
      err=e;
      U.error(log,"Failed to open secondary file system input stream: " + path,e);
      throw err;
    }
  }
  return in;
}
