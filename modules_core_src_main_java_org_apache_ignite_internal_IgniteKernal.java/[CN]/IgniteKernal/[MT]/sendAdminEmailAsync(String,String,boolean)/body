{
  A.notNull(subj,"subj");
  A.notNull(body,"body");
  if (isSmtpEnabled() && isAdminEmailsSet()) {
    guard();
    try {
      return ctx.email().schedule(subj,body,html,Arrays.asList(cfg.getAdminEmails()));
    }
  finally {
      unguard();
    }
  }
 else   return new GridFinishedFuture<>(ctx,false);
}
