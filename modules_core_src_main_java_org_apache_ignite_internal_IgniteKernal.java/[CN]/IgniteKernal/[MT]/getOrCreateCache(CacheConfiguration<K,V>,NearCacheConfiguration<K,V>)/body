{
  A.notNull(cacheCfg,"cacheCfg");
  A.notNull(nearCfg,"nearCfg");
  guard();
  try {
    IgniteInternalCache<Object,Object> cache=ctx.cache().cache(cacheCfg.getName());
    if (cache == null)     ctx.cache().dynamicStartCache(cacheCfg,cacheCfg.getName(),nearCfg,false,true).get();
 else {
      if (cache.configuration().getNearConfiguration() == null)       ctx.cache().dynamicStartCache(cacheCfg,cacheCfg.getName(),nearCfg,false,true).get();
    }
    return ctx.cache().publicJCache(cacheCfg.getName());
  }
 catch (  IgniteCheckedException e) {
    throw CU.convertToCacheException(e);
  }
 finally {
    unguard();
  }
}
