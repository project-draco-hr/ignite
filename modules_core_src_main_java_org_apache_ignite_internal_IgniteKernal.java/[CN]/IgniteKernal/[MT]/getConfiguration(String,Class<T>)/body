{
  try {
    if (springCfgPath == null)     return null;
    URL url=U.resolveSpringUrl(springCfgPath);
    IgniteSpringProcessor spring=SPRING.create(false);
    IgniteBiTuple<Collection<T>,? extends GridSpringResourceContext> cfgMap=spring.loadConfigurations(url,cl);
    if (cfgMap.size() != 1)     throw new IgniteException("File " + url.toString() + " should have one cache configuration");
    return F.first(cfgMap.get1());
  }
 catch (  IgniteCheckedException e) {
    throw U.convertException(e);
  }
}
