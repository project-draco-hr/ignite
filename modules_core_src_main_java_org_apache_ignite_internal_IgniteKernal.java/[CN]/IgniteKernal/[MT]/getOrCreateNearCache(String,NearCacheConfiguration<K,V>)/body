{
  A.notNull(nearCfg,"nearCfg");
  guard();
  try {
    IgniteInternalCache<Object,Object> internalCache=ctx.cache().cache(cacheName);
    if (internalCache == null)     ctx.cache().dynamicStartCache(null,cacheName,nearCfg,false).get();
 else {
      if (internalCache.configuration().getNearConfiguration() == null)       ctx.cache().dynamicStartCache(null,cacheName,nearCfg,false).get();
    }
    return ctx.cache().publicJCache(cacheName);
  }
 catch (  IgniteCheckedException e) {
    throw CU.convertToCacheException(e);
  }
 finally {
    unguard();
  }
}
