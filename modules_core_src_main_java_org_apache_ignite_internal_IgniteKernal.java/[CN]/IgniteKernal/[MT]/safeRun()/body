{
  ExecutorService e=execSvc;
  if (!(e instanceof ThreadPoolExecutor))   return;
  ThreadPoolExecutor exec=(ThreadPoolExecutor)e;
  long completedCnt=exec.getCompletedTaskCount();
  if (exec.getPoolSize() == exec.getActiveCount() && completedCnt == lastCompletedCnt && !exec.getQueue().isEmpty())   LT.warn(log,null,"Possible thread pool starvation detected (no task completed in last " + interval + "ms, is executorService pool size large enough?)");
  lastCompletedCnt=completedCnt;
}
