{
  Collection<PluginProvider> plugins=ctx.plugins().allProviders();
  if (plugins.size() == 0)   return NL + ">>>    " + PLUGIN_INFO+ "none";
  String info=NL + ">>>    " + PLUGIN_INFO+ NL;
  for (  PluginProvider plugin : plugins)   info+=">>>    " + plugin.name() + " "+ plugin.version()+ NL+ ">>>    "+ plugin.copyright();
  return info;
}
