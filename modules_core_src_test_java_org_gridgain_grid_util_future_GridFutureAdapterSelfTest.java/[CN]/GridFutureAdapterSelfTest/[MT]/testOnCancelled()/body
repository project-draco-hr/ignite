{
  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      GridFutureAdapter<String> fut=new GridFutureAdapter<>();
      fut.onCancelled();
      return fut.get();
    }
  }
,IgniteFutureCancelledException.class,null);
  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      GridFutureAdapter<String> fut=new GridFutureAdapter<>();
      fut.onCancelled();
      fut.onDone();
      return fut.get();
    }
  }
,IgniteFutureCancelledException.class,null);
}
