{
  execs=new ExecutorService[DFLT_CONCUR_LVL];
  ThreadFactory factory=new IgniteThreadFactory(null);
  for (int i=0; i < DFLT_CONCUR_LVL; i++)   execs[i]=Executors.newFixedThreadPool(DFLT_SEG_POOL_SIZE,factory);
  int sshift=0;
  int ssize=1;
  while (ssize < DFLT_CONCUR_LVL) {
    ++sshift;
    ssize<<=1;
  }
  segShift=32 - sshift;
  segMask=ssize - 1;
}
