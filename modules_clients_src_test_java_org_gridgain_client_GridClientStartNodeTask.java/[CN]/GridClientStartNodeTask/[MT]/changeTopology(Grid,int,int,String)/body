{
  Collection<GridComputeTaskFuture<?>> tasks=new ArrayList<>();
  while (add-- > 0)   tasks.add(parent.compute().execute(GridClientStartNodeTask.class,type));
  for (  GridComputeTaskFuture<?> task : tasks)   task.get();
  while (rmv-- > 0)   parent.compute().execute(GridClientStopNodeTask.class,type).get();
  Collection<String> gridNames=new ArrayList<>();
  for (  Grid g : G.allGrids())   gridNames.add(g.name());
  parent.log().info(">>> Available grids: " + gridNames);
}
