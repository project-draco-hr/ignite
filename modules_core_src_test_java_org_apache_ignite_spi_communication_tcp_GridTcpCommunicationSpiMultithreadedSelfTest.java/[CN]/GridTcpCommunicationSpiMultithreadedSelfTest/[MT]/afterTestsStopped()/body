{
  for (  CommunicationSpi<GridTcpCommunicationMessageAdapter> spi : spis.values()) {
    spi.setListener(null);
    spi.spiStop();
  }
  for (  GridTestResources rsrcs : spiRsrcs) {
    rsrcs.stopThreads();
    rsrcs.getMBeanServer().unregisterMBean(mBeanName);
  }
  lsnrs.clear();
  spiRsrcs.clear();
  spis.clear();
  nodes.clear();
}
