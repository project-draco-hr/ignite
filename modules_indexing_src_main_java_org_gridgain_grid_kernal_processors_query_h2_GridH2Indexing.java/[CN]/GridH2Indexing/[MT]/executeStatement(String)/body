{
  Statement stmt=null;
  try {
    Connection c=connectionForThread(null);
    stmt=c.createStatement();
    stmt.executeUpdate(sql);
  }
 catch (  SQLException e) {
    onSqlException();
    throw new GridException("Failed to execute statement: " + sql,e);
  }
 finally {
    U.close(stmt,log);
  }
}
