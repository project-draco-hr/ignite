{
  ConnectionWrapper c=connCache.get();
  if (c == null)   throw new GridException("Failed to get DB connection for thread (check log for details).");
  if (schema != null && !F.eq(c.schema(),schema)) {
    Statement stmt=null;
    try {
      stmt=c.connection().createStatement();
      stmt.executeUpdate("SET SCHEMA \"" + schema + '"');
      if (log.isDebugEnabled())       log.debug("Initialized H2 schema for queries on space: " + schema);
      c.schema(schema);
    }
 catch (    SQLException e) {
      throw new GridException("Failed to set schema for DB connection for thread [schema=" + schema + "]",e);
    }
 finally {
      U.close(stmt,log);
    }
  }
  return c.connection();
}
