{
  for (int i=0; i < GRIDS; i++) {
    grid(i).events().localListen(new IgnitePredicate<GridEvent>(){
      @Override public boolean apply(      GridEvent evt){
        try {
          Thread.sleep(2000);
        }
 catch (        InterruptedException e) {
          e.printStackTrace();
        }
        return true;
      }
    }
,EVT_NODE_FAILED,EVT_NODE_LEFT,EVT_NODE_JOINED);
  }
}
