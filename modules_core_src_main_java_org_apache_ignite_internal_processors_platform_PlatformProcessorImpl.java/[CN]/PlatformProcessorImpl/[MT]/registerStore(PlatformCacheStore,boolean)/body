{
  storeLock.readLock().lock();
  try {
    if (stopped)     throw new IgniteCheckedException("Failed to initialize interop store becuase node is stopping: " + store);
    if (started)     registerStore0(store,convertPortable);
 else     pendingStores.add(new StoreInfo(store,convertPortable));
  }
  finally {
    storeLock.readLock().unlock();
  }
}
