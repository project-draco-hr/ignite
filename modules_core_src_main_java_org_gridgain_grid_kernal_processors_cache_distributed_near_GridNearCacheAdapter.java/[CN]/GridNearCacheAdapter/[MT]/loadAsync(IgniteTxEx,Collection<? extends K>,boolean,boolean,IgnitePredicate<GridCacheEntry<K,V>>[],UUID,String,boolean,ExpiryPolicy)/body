{
  if (F.isEmpty(keys))   return new GridFinishedFuture<>(ctx.kernalContext(),Collections.<K,V>emptyMap());
  if (keyCheck)   validateCacheKeys(keys);
  IgniteTxLocalEx<K,V> txx=(tx != null && tx.local()) ? (IgniteTxLocalEx<K,V>)tx : null;
  final GetExpiryPolicy expiry=GetExpiryPolicy.forPolicy(expiryPlc != null ? expiryPlc : ctx.expiry());
  GridNearGetFuture<K,V> fut=new GridNearGetFuture<>(ctx,keys,reload,forcePrimary,txx,filter,subjId,taskName,deserializePortable,expiry);
  fut.init();
  return ctx.wrapCloneMap(fut);
}
