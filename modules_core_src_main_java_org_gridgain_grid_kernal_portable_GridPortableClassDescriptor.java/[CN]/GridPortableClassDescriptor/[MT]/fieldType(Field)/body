{
  Class<?> cls=field.getType();
  FieldType type;
  if (cls == byte.class)   type=FieldType.BYTE;
 else   if (cls == short.class)   type=FieldType.SHORT;
 else   if (cls == int.class)   type=FieldType.INT;
 else   if (cls == long.class)   type=FieldType.LONG;
 else   if (cls == float.class)   type=FieldType.FLOAT;
 else   if (cls == double.class)   type=FieldType.DOUBLE;
 else   if (cls == char.class)   type=FieldType.CHAR;
 else   if (cls == boolean.class)   type=FieldType.BOOLEAN;
 else   type=FieldType.OTHER;
  return type;
}
