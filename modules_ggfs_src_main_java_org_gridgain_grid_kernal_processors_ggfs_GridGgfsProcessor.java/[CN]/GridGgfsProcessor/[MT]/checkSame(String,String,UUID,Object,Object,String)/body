{
  if (!F.eq(rmtVal,locVal))   throw new GridException(name + " should be the same on all node in grid for GGFS configuration " + "(fix configuration or set "+ "-D"+ GridSystemProperties.GG_SKIP_CONFIGURATION_CONSISTENCY_CHECK+ "=true system "+ "property ) [rmtNodeId="+ rmtNodeId+ ", rmt"+ propName+ "="+ rmtVal+ ", loc"+ propName+ "="+ locVal+ ", ggfName="+ ggfsName+ ']');
}
