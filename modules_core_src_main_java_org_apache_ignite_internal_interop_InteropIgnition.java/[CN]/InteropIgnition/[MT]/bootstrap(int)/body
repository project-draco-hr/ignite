{
  InteropBootstrapFactory factory=AccessController.doPrivileged(new PrivilegedAction<InteropBootstrapFactory>(){
    @Override public InteropBootstrapFactory run(){
      for (      InteropBootstrapFactory factory : ServiceLoader.load(InteropBootstrapFactory.class)) {
        if (factory.id() == factoryId)         return factory;
      }
      return null;
    }
  }
);
  if (factory == null)   throw new IgniteException("Interop factory is not found (did you put into the classpath?): " + factoryId);
  return factory.create();
}
