{
  GridCacheProjection<Object,Request> cache=grid.cache(null).projection(Object.class,Request.class);
  GridCacheQuery<Map.Entry<Object,Request>> qry=cache.queries().createSqlQuery(Request.class,"messageId = ?");
  try {
    Map.Entry<Object,Request> entry=F.first(qry.projection(grid.cluster().forLocal()).execute(msgId).get());
    if (entry == null)     return null;
    return entry.getValue();
  }
 catch (  GridException e) {
    e.printStackTrace();
    return null;
  }
}
