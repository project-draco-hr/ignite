{
  State state=this.state;
  if (state == SEGMENTED)   throw new IgniteException("Failed to send custom message: client is segmented.");
  if (state == DISCONNECTED)   throw new IgniteClientDisconnectedException(null,"Failed to send custom message: client is disconnected.");
  try {
    sockWriter.sendMessage(new TcpDiscoveryCustomEventMessage(getLocalNodeId(),evt,spi.marshaller().marshal(evt)));
  }
 catch (  IgniteCheckedException e) {
    throw new IgniteSpiException("Failed to marshal custom event: " + evt,e);
  }
}
