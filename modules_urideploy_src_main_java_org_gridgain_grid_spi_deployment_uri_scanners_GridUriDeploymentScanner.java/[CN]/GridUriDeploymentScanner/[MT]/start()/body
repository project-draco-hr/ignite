{
  scanner=new GridSpiThread(gridName,"grid-uri-scanner",log){
    @SuppressWarnings({"BusyWait"}) @Override protected void body() throws InterruptedException {
      try {
        while (!isInterrupted()) {
          try {
            process();
          }
  finally {
            if (firstScan) {
              firstScan=false;
              lsnr.onFirstScanFinished();
            }
          }
          Thread.sleep(freq);
        }
      }
  finally {
        if (firstScan) {
          firstScan=false;
          lsnr.onFirstScanFinished();
        }
      }
    }
  }
;
  scanner.start();
  if (log.isDebugEnabled())   log.debug("Grid URI deployment scanner started: " + this);
}
