{
  A.notNull(sesId,"sesId");
  guard();
  try {
    GridComputeTaskFuture<Object> task=ctx.task().taskFuture(sesId);
    if (task != null) {
      boolean loc=F.nodeIds(prj.nodes()).contains(ctx.localNodeId());
      if (loc)       task.cancel();
    }
 else     ctx.io().send(prj.forRemotes().nodes(),TOPIC_TASK_CANCEL,new GridTaskCancelRequest(sesId),SYSTEM_POOL);
  }
  finally {
    unguard();
  }
}
