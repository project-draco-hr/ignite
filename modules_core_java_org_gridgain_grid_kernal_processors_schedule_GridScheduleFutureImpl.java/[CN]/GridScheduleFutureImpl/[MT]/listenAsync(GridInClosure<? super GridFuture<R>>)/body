{
  if (lsnr != null) {
    Throwable err;
    R res;
    boolean notifyLsnr=false;
synchronized (mux) {
      lsnrs.add(lsnr);
      err=lastErr;
      res=lastRes;
      int cnt=stats.getExecutionCount();
      if (cnt > 0 && lastLsnrExecCnt != cnt) {
        lastLsnrExecCnt=cnt;
        notifyLsnr=true;
      }
    }
    if (notifyLsnr)     notifyListener(lsnr,res,err,syncNotify);
  }
}
