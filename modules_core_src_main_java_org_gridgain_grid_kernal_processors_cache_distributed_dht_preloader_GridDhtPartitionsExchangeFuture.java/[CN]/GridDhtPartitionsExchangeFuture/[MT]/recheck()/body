{
  if (oldestNode.get().id().equals(cctx.localNodeId())) {
    Collection<UUID> remaining=remaining();
    if (!remaining.isEmpty()) {
      try {
        cctx.io().safeSend(cctx.discovery().nodes(remaining),new GridDhtPartitionsSingleRequest<K,V>(exchId),null);
      }
 catch (      GridException e) {
        U.error(log,"Failed to request partitions from nodes [exchangeId=" + exchId + ", nodes="+ remaining+ ']',e);
      }
    }
 else {
      if (spreadPartitions())       onDone(exchId.topologyVersion());
    }
  }
 else   sendPartitions();
  scheduleRecheck();
}
