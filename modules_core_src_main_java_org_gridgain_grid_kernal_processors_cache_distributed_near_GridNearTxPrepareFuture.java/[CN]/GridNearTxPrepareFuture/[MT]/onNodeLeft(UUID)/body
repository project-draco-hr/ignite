{
  boolean found=false;
  for (  IgniteFuture<?> fut : futures())   if (isMini(fut)) {
    MiniFuture f=(MiniFuture)fut;
    if (f.node().id().equals(nodeId)) {
      f.onResult(new GridTopologyException("Remote node left grid (will retry): " + nodeId));
      found=true;
    }
  }
  return found;
}
