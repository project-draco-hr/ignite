{
  Statement stmt=null;
  try {
    Connection c=connectionForThread(null);
    stmt=c.createStatement();
    stmt.executeUpdate("CREATE SCHEMA IF NOT EXISTS \"" + schema + '"');
    if (log.isDebugEnabled())     log.debug("Created H2 schema for index database: " + schema);
  }
 catch (  SQLException e) {
    onSqlException();
    throw new GridSpiException("Failed to create H2 schema for index database for space: " + schema,e);
  }
 finally {
    U.close(stmt,log);
  }
}
