{
  if (idxs != null) {
    GridStreamerIndexUpdateSync sync=new GridStreamerIndexUpdateSync();
    boolean rollback=true;
    try {
      for (      GridStreamerIndexProvider<E,?,?> idx : idxs) {
        if (rmv)         idx.remove(sync,evt);
 else         idx.add(sync,evt);
      }
      rollback=false;
    }
  finally {
      for (      GridStreamerIndexProvider<E,?,?> idx : idxs)       idx.endUpdate(sync,evt,rollback,rmv);
      sync.finish(1);
    }
  }
}
