{
  Byte type=PLAIN_CLASS_TO_FLAG.get(cls);
  if (type != null)   return type;
  if (cls.isEnum())   return GridPortableMarshaller.ENUM;
  if (cls.isArray())   return cls.getComponentType().isEnum() || cls.getComponentType() == Enum.class ? GridPortableMarshaller.ENUM_ARR : GridPortableMarshaller.OBJ_ARR;
  if (isSpecialCollection(cls))   return GridPortableMarshaller.COL;
  if (isSpecialMap(cls))   return GridPortableMarshaller.MAP;
  return GridPortableMarshaller.OBJ;
}
