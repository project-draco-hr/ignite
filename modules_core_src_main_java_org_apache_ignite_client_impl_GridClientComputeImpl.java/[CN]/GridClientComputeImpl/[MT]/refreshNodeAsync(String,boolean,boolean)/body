{
  A.notNull(ip,"ip");
  return withReconnectHandling(new ClientProjectionClosure<GridClientNode>(){
    @Override public GridClientFuture<GridClientNode> apply(    GridClientConnection conn,    UUID destNodeId) throws GridClientConnectionResetException, GridClientClosedException {
      return conn.node(ip,inclAttrs,includeMetrics,destNodeId);
    }
  }
);
}
