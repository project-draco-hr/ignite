{
  this(nearNodeId,futId,miniId,topVer,xidVer,commitVer,threadId,isolation,commit,invalidate,sys,plc,sysInvalidate,syncCommit,syncRollback,baseVer,committedVers,rolledbackVers,pendingVers,txSize,subjId,taskNameHash,addDepInfo);
  if (updateIdxs != null && !updateIdxs.isEmpty()) {
    partUpdateCnt=new GridLongList(updateIdxs.size());
    for (    Long idx : updateIdxs)     partUpdateCnt.add(idx);
  }
}
