{
  if (ptr == 0) {
    try (PlatformMemory mem=ctx.memory().allocate()){
      PlatformOutputStream out=mem.output();
      PortableRawWriterEx writer=ctx.writer(out);
      writer.writeObject(job);
      out.synchronize();
      ptr=ctx.gateway().computeJobCreate(mem.pointer());
    }
     return true;
  }
 else   return false;
}
