{
  UUID locNodeId=ctx.localNodeId();
  GridHadoopJobId jobId=job.id();
  JobLocalState state=activeJobs.get(jobId);
  if (reducers != null) {
    if (state == null)     state=initState(job,meta);
    for (    int rdc : reducers) {
      if (state.addReducer(rdc)) {
        if (log.isDebugEnabled())         log.debug("Submitting REDUCE task for execution [locNodeId=" + locNodeId + ", rdc="+ rdc+ ']');
        GridHadoopTaskInfo taskInfo=new GridHadoopTaskInfo(locNodeId,GridHadoopTaskType.REDUCE,jobId,rdc,0,null);
        if (tasks == null)         tasks=new ArrayList<>();
        tasks.add(taskInfo);
      }
    }
  }
  return tasks;
}
