{
  Path fsHome=new Path(primaryFsUri);
  final Path file=new Path(fsHome,"someFile");
  FSDataOutputStream os=fs.create(file,EnumSet.noneOf(CreateFlag.class),Options.CreateOpts.perms(FsPermission.getDefault()));
  os.close();
  FSDataOutputStream appendOs=fs.create(file,EnumSet.of(CreateFlag.APPEND),Options.CreateOpts.perms(FsPermission.getDefault()));
  GridTestUtils.assertThrows(log,new Callable<Object>(){
    @Override public Object call() throws Exception {
      return fs.create(file,EnumSet.of(CreateFlag.APPEND),Options.CreateOpts.perms(FsPermission.getDefault()));
    }
  }
,IOException.class,null);
  appendOs.close();
}
