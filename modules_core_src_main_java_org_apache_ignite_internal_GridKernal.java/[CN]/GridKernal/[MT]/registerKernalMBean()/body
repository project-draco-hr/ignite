{
  try {
    kernalMBean=U.registerMBean(cfg.getMBeanServer(),cfg.getGridName(),"Kernal",getClass().getSimpleName(),this,IgniteMBean.class);
    if (log.isDebugEnabled())     log.debug("Registered kernal MBean: " + kernalMBean);
  }
 catch (  JMException e) {
    kernalMBean=null;
    throw new IgniteCheckedException("Failed to register kernal MBean.",e);
  }
}
