{
  List<Future<T>> futs=new LinkedList<>();
  for (  Callable<T> task : tasks)   futs.add(execForTask(task).submit(task));
  boolean done=false;
  try {
    for (    Future<T> fut : futs) {
      try {
        fut.get();
      }
 catch (      ExecutionException|InterruptedException ignored) {
      }
    }
    done=true;
    return futs;
  }
  finally {
    if (!done) {
      for (      Future<T> fut : futs)       fut.cancel(true);
    }
  }
}
