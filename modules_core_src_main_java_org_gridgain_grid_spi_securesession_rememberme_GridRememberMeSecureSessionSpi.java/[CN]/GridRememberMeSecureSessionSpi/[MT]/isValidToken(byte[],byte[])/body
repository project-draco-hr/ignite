{
  byte[] cnct=decoder.convert(tok);
  if (cnct == null)   return false;
  long createTime=bytesToLong(cnct,0);
  long ttl=getTtl();
  if (ttl != 0 && createTime + ttl < U.currentTimeMillis())   return false;
  byte[] sign=Arrays.copyOfRange(cnct,8,cnct.length);
  byte[] verification=sign(subjId,createTime);
  return Arrays.equals(sign,verification);
}
