{
  super.beforeTest();
  boolean success=false;
  for (int i=0; i < 5; i++) {
    success=true;
    for (    Grid g : G.allGrids()) {
      if (g.cluster().nodes().size() != GRID_CNT) {
        info("Grid has incorrect nodes count [gridName=" + g.name() + ", nodesCnt="+ g.cluster().nodes().size()+ ']');
        success=false;
        break;
      }
    }
    if (!success && i != 4)     Thread.sleep(1000);
  }
  assert success;
  info("Topology is consistent.");
}
