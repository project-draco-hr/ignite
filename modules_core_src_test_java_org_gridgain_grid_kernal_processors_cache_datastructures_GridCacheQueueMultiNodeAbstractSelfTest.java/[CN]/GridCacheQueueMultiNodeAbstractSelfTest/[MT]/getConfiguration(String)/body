{
  GridConfiguration cfg=super.getConfiguration(gridName);
  GridTcpDiscoverySpi spi=new GridTcpDiscoverySpi();
  spi.setIpFinder(ipFinder);
  cfg.setDiscoverySpi(spi);
  cfg.setRestEnabled(false);
  cfg.setExecutorService(new ThreadPoolExecutor(RETRIES * 2,RETRIES * 2,0,TimeUnit.MILLISECONDS,new LinkedBlockingQueue<Runnable>()));
  cfg.setExecutorServiceShutdown(true);
  cfg.setSystemExecutorService(new ThreadPoolExecutor(RETRIES * 2,RETRIES * 2,0,TimeUnit.MILLISECONDS,new LinkedBlockingQueue<Runnable>()));
  cfg.setSystemExecutorServiceShutdown(true);
  return cfg;
}
