{
  URL clsUrl=getClass().getResource(getClass().getSimpleName() + ".class");
  try {
    String path=null;
    if (clsUrl != null)     path="jar".equals(clsUrl.getProtocol()) ? new URL(clsUrl.getPath()).getPath() : clsUrl.getPath();
    if (path != null) {
      File dir=new File(path);
      dir=dir.getParentFile();
      while (dir.getParentFile() != null)       dir=dir.getParentFile();
      return dir;
    }
  }
 catch (  MalformedURLException ignored) {
  }
  return null;
}
