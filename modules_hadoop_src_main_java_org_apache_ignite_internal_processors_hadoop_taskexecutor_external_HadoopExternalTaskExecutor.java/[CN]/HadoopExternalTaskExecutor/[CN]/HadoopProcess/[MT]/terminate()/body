{
  lock();
  try {
    terminated=true;
    if (!initFut.isDone())     initFut.listenAsync(new CI1<IgniteInternalFuture<IgniteBiTuple<Process,HadoopProcessDescriptor>>>(){
      @Override public void apply(      IgniteInternalFuture<IgniteBiTuple<Process,HadoopProcessDescriptor>> f){
        proc.destroy();
      }
    }
);
 else     proc.destroy();
  }
  finally {
    unlock();
  }
}
