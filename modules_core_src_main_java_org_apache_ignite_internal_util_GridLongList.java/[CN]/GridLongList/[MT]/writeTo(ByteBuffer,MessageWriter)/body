{
  writer.setBuffer(buf);
  if (!writer.isTypeWritten()) {
    if (!writer.writeMessageType(directType()))     return false;
    writer.onTypeWritten();
  }
switch (writer.state()) {
case 0:
    if (!writer.writeField("arr",arr,MessageFieldType.LONG_ARR))     return false;
  writer.incrementState();
case 1:
if (!writer.writeField("idx",idx,MessageFieldType.INT)) return false;
writer.incrementState();
}
return true;
}
