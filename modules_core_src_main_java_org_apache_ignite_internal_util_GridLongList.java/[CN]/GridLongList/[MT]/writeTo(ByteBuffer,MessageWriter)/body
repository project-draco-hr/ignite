{
  writer.setBuffer(buf);
  if (!writer.isHeaderWritten()) {
    if (!writer.writeHeader(new MessageHeader(directType(),(byte)2)))     return false;
    writer.onHeaderWritten();
  }
switch (writer.state()) {
case 0:
    if (!writer.writeLongArray("arr",arr))     return false;
  writer.incrementState();
case 1:
if (!writer.writeInt("idx",idx)) return false;
writer.incrementState();
}
return true;
}
