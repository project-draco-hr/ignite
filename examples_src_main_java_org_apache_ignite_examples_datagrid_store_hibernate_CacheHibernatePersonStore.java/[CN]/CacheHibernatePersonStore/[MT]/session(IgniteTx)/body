{
  Session ses;
  if (tx != null) {
    Map<String,Session> props=session().properties();
    ses=props.get(ATTR_SES);
    if (ses == null) {
      ses=sesFactory.openSession();
      ses.beginTransaction();
      props.put(ATTR_SES,ses);
      System.out.println("Hibernate session open [ses=" + ses + ", tx="+ tx.xid()+ "]");
    }
  }
 else {
    ses=sesFactory.openSession();
    ses.beginTransaction();
  }
  return ses;
}
