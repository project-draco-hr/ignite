{
  List<List<ClusterNode>> assignments=new ArrayList<>(parts);
  Map<UUID,Collection<ClusterNode>> neighborhoodCache=exclNeighbors ? neighbors(affCtx.currentTopologySnapshot()) : null;
  for (int i=0; i < parts; i++) {
    List<ClusterNode> partAssignment=assignPartition(i,affCtx.currentTopologySnapshot(),affCtx.backups(),neighborhoodCache);
    assignments.add(partAssignment);
  }
  return assignments;
}
