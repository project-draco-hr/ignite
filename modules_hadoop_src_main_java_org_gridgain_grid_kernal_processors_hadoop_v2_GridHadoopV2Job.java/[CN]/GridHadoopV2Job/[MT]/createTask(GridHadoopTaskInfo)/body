{
  boolean isAbort=taskInfo.type() == GridHadoopTaskType.ABORT;
switch (taskInfo.type()) {
case MAP:
    return useNewMapper ? new GridHadoopV2MapTask(taskInfo) : new GridHadoopV1MapTask(taskInfo);
case REDUCE:
  return useNewReducer ? new GridHadoopV2ReduceTask(taskInfo,true) : new GridHadoopV1ReduceTask(taskInfo,true);
case COMBINE:
return useNewCombiner ? new GridHadoopV2ReduceTask(taskInfo,false) : new GridHadoopV1ReduceTask(taskInfo,false);
case COMMIT:
case ABORT:
return useNewReducer ? new GridHadoopV2CleanupTask(taskInfo,isAbort) : new GridHadoopV1CleanupTask(taskInfo,isAbort);
default :
return null;
}
}
