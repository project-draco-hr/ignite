{
  PortableClassDescriptor desc;
  String clsName=cls.getName();
  if (marshCtx.isSystemType(clsName)) {
    desc=new PortableClassDescriptor(this,cls,false,clsName.hashCode(),clsName,BASIC_CLS_ID_MAPPER,null,marsh.isUseTimestamp(),marsh.isMetaDataEnabled(),marsh.isKeepDeserialized());
    PortableClassDescriptor old=descByCls.putIfAbsent(cls,desc);
    if (old != null)     desc=old;
  }
 else   desc=registerUserClassDescriptor(cls);
  return desc;
}
