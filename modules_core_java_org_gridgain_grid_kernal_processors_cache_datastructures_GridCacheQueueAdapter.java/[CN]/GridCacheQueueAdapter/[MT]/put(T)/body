{
  A.notNull(item,"item");
  if (!bounded()) {
    boolean offer=offer(item);
    assert offer;
    return;
  }
  while (true) {
    try {
      writeSem.acquire();
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
      throw new GridRuntimeException("Queue put interrupted.",e);
    }
    checkStopping();
    if (offer(item))     return;
  }
}
