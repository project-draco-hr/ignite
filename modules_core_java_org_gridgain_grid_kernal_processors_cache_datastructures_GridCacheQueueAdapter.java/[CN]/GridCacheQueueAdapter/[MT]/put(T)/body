{
  A.notNull(item,"item");
  if (!bounded()) {
    boolean offer=offer(item);
    assert offer;
    return;
  }
  while (true) {
    lock.lock();
    try {
      while (full)       addCond.await();
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
      throw new GridRuntimeException("Queue put interrupted.",e);
    }
 finally {
      lock.unlock();
    }
    if (offer(item))     return;
  }
}
