{
  A.notNull(key,"key",val,"val");
  if (keyCheck)   validateCacheKey(key);
  return syncOp(new SyncOp<GridCacheReturn>(true){
    @Override public GridCacheReturn op(    IgniteTxLocalAdapter tx) throws IgniteCheckedException {
      if (ctx.deploymentEnabled())       ctx.deploy().registerClass(val);
      return tx.removeAllAsync(ctx,Collections.singletonList(key),true,ctx.equalsValArray(val),false).get();
    }
    @Override public String toString(){
      return "remove [key=" + key + ", val="+ val+ ']';
    }
  }
);
}
