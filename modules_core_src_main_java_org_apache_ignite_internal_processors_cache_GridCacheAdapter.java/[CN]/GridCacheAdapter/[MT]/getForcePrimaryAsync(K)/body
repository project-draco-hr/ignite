{
  ctx.denyOnFlag(LOCAL);
  String taskName=ctx.kernalContext().job().currentTaskName();
  return getAllAsync(Collections.singletonList(key),true,false,null,null,taskName,true,false).chain(new CX1<IgniteFuture<Map<K,V>>,V>(){
    @Override public V applyx(    IgniteFuture<Map<K,V>> e) throws IgniteCheckedException {
      return e.get().get(key);
    }
  }
);
}
