{
  final boolean statsEnabled=ctx.config().isStatisticsEnabled();
  final long start=statsEnabled ? System.nanoTime() : 0L;
  A.notNull(key,"key");
  if (keyCheck)   validateCacheKey(key);
  IgniteInternalFuture<V> fut=asyncOp(new AsyncOp<V>(){
    @Override public IgniteInternalFuture<V> op(    IgniteTxLocalAdapter tx){
      return tx.removeAllAsync(ctx,Collections.singletonList(key),true,CU.empty0(),false).chain((IgniteClosure<IgniteInternalFuture<GridCacheReturn>,V>)RET2VAL);
    }
    @Override public String toString(){
      return "removeAsync [key=" + key + ']';
    }
  }
);
  if (statsEnabled)   fut.listen(new UpdateRemoveTimeStatClosure<V>(metrics0(),start));
  return fut;
}
