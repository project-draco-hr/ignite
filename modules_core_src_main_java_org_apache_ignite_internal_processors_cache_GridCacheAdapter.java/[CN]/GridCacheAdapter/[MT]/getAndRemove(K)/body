{
  boolean statsEnabled=ctx.config().isStatisticsEnabled();
  long start=statsEnabled ? System.nanoTime() : 0L;
  A.notNull(key,"key");
  if (keyCheck)   validateCacheKey(key);
  V prevVal=syncOp(new SyncOp<V>(true){
    @Override public V op(    IgniteTxLocalAdapter tx) throws IgniteCheckedException {
      V ret=tx.removeAllAsync(ctx,Collections.singletonList(key),true,null,false).get().value();
      if (ctx.config().getInterceptor() != null)       return (V)ctx.config().getInterceptor().onBeforeRemove(new CacheEntryImpl(key,ret)).get2();
      return ret;
    }
    @Override public String toString(){
      return "remove [key=" + key + ']';
    }
  }
);
  if (statsEnabled)   metrics0().addRemoveAndGetTimeNanos(System.nanoTime() - start);
  return prevVal;
}
