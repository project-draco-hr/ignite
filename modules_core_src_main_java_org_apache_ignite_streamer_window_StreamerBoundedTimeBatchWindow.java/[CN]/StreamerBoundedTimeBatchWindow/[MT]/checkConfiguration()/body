{
  if (maxBatches < 0)   throw new IgniteCheckedException("Failed to initialize window (maximumBatches cannot be negative) " + "[windowClass=" + getClass().getSimpleName() + ", maximumBatches="+ maxBatches+ ", batchSize="+ batchSize+ ", batchTimeInterval="+ batchTimeInterval+ ']');
  if (batchSize < 0)   throw new IgniteCheckedException("Failed to initialize window (batchSize cannot be negative) " + "[windowClass=" + getClass().getSimpleName() + ", maximumBatches="+ maxBatches+ ", batchSize="+ batchSize+ ", batchTimeInterval="+ batchTimeInterval+ ']');
 else   if (batchSize == 0)   batchSize=Integer.MAX_VALUE;
  if (batchTimeInterval <= 0)   throw new IgniteCheckedException("Failed to initialize window (batchTimeInterval must be positive) " + "[windowClass=" + getClass().getSimpleName() + ", maximumBatches="+ maxBatches+ ", batchSize="+ batchSize+ ", batchTimeInterval="+ batchTimeInterval+ ']');
}
