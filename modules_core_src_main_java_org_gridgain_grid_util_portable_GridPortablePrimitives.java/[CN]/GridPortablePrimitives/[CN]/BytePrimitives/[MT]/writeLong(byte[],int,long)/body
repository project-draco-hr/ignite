{
  arr[off++]=(byte)(val & 0xffL);
  arr[off++]=(byte)((val >>> 8) & 0xffL);
  arr[off++]=(byte)((val >>> 16) & 0xffL);
  arr[off++]=(byte)((val >>> 24) & 0xffL);
  arr[off++]=(byte)((val >>> 32) & 0xffL);
  arr[off++]=(byte)((val >>> 40) & 0xffL);
  arr[off++]=(byte)((val >>> 48) & 0xffL);
  arr[off]=(byte)((val >>> 56) & 0xffL);
}
