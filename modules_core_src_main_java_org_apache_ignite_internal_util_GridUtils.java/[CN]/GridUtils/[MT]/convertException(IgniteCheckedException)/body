{
  if (e instanceof IgniteInterruptedCheckedException)   return new IgniteInterruptedException(e.getMessage(),(InterruptedException)e.getCause());
 else   if (e instanceof IgniteFutureCancelledCheckedException)   return new IgniteFutureCancelledException(e.getMessage(),e.getCause());
 else   if (e instanceof IgniteFutureTimeoutCheckedException)   return new IgniteFutureTimeoutException(e.getMessage(),e.getCause());
 else   if (e.getCause() instanceof IgniteException)   return (IgniteException)e.getCause();
  return new IgniteException(e);
}
