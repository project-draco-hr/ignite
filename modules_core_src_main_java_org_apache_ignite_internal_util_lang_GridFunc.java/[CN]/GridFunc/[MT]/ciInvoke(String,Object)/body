{
  A.notNull(mtdName,"mtdName");
  return new CI1<T>(){
    private Method mtd;
    @Override public void apply(    T t){
      try {
        if (mtd == null) {
          mtd=method(t.getClass(),mtdName,args);
          mtd.setAccessible(true);
        }
        mtd.invoke(t,args);
      }
 catch (      Throwable e) {
        throw wrap(e);
      }
    }
  }
;
}
