{
  return new R1<T,Double>(){
    private double sum;
    private int i;
    private final Object lock=new Object();
    @Override public boolean collect(    T e){
      if (e != null) synchronized (lock) {
        sum+=e.doubleValue();
        i++;
      }
      return true;
    }
    @Override public Double reduce(){
synchronized (lock) {
        return sum / i;
      }
    }
  }
;
}
