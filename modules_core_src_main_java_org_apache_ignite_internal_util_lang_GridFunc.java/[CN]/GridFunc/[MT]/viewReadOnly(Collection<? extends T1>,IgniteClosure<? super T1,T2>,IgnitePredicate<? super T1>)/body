{
  A.notNull(trans,"trans");
  if (isEmpty(c) || isAlwaysFalse(p))   return Collections.emptyList();
  return new GridSerializableCollection<T2>(){
    @NotNull @Override public Iterator<T2> iterator(){
      return F.<T1,T2>iterator(c,trans,true,p);
    }
    @Override public int size(){
      return F.size(iterator());
    }
    @Override public boolean isEmpty(){
      return !iterator().hasNext();
    }
  }
;
}
