{
  if (isEmpty(ps))   return F.alwaysTrue();
  if (isAlwaysFalse(ps))   return F.alwaysFalse();
  if (isAlwaysTrue(ps))   return F.alwaysTrue();
  if (F0.isAllNodePredicates(ps)) {
    Set<UUID> ids=new HashSet<>();
    for (    IgnitePredicate<? super T> p : ps) {
      if (p != null) {
        Collection<UUID> list=((GridNodePredicate)p).nodeIds();
        if (ids.isEmpty())         ids.addAll(list);
 else         ids.retainAll(list);
      }
    }
    return (IgnitePredicate<T>)new GridNodePredicate(ids);
  }
 else {
    return new P1<T>(){
      @Override public boolean apply(      T t){
        for (        IgnitePredicate<? super T> p : ps)         if (p != null && !p.apply(t))         return false;
        return true;
      }
    }
;
  }
}
