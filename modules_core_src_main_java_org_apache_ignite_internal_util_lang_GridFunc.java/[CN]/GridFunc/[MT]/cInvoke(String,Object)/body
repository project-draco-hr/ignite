{
  A.notNull(mtdName,"mtdName");
  return new C1<T,R>(){
    private Method mtd;
    @SuppressWarnings("unchecked") @Override public R apply(    T t){
      try {
        if (mtd == null) {
          mtd=method(t.getClass(),mtdName,args);
          mtd.setAccessible(true);
        }
        return (R)mtd.invoke(t,args);
      }
 catch (      Exception e) {
        throw wrap(e);
      }
    }
  }
;
}
