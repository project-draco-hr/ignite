{
  Grid g=startGrid("anotherGrid");
  final UUID nodeId=g.localNode().id();
  final CountDownLatch latch=new CountDownLatch(GRID_CNT);
  for (int i=0; i < GRID_CNT; i++) {
    grid(0).events().localListen(new GridPredicate<GridEvent>(){
      @Override public boolean apply(      GridEvent evt){
        if (nodeId.equals(((GridDiscoveryEvent)evt).eventNode().id()))         latch.countDown();
        return true;
      }
    }
,EVT_NODE_LEFT);
  }
  g.events().remoteListen(null,new P1<GridEvent>(){
    @Override public boolean apply(    GridEvent evt){
      return true;
    }
  }
,EVTS_ALL).get();
  stopGrid("anotherGrid");
  latch.await();
}
