{
  if (securityInterceptor != null) {
    if (authSubjCtx == null)     authSubjCtx=ctx.discovery().localNode().attribute(GridNodeAttributes.ATTR_AUTHENTICATION_SUBJECT_CONTEXT);
    GridSecurityContext sCtx=new GridSecurityContextImpl(Collections.singletonList(GridSecurityPermission.EXECUTE),null,authSubjCtx);
    securityInterceptor.authorize(sCtx);
  }
}
