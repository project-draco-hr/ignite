{
  V1 v=null;
  GridDhtCacheEntry<K,V> de=dht().peekExx(key);
  if (de != null)   v=(V1)de.putMetaIfAbsent(name,c);
  GridNearCacheEntry<K,V> ne=de != null ? near().peekExx(key) : near().entryExx(key);
  if (ne != null) {
    V1 v1=(V1)ne.putMetaIfAbsent(name,c);
    if (v == null)     v=v1;
  }
  return v;
}
