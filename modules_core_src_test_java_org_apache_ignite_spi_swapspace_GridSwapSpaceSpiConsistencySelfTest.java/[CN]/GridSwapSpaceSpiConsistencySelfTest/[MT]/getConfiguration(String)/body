{
  IgniteConfiguration cfg=super.getConfiguration(gridName);
  if (GRID_WITHOUT_SWAP_SPACE.equals(gridName))   cfg.setSwapSpaceSpi(new NoopSwapSpaceSpi());
  if (GRID_WITH_SWAP_SPACE.equals(gridName))   cfg.setSwapSpaceSpi(new FileSwapSpaceSpi());
  if (GRID_CLIENT_WITHOUT_SWAP_SPACE.equals(gridName)) {
    cfg.setClientMode(true);
    cfg.setSwapSpaceSpi(new NoopSwapSpaceSpi());
  }
  if (GRID_CLIENT_WITH_SWAP_SPACE.equals(gridName)) {
    cfg.setClientMode(true);
    cfg.setSwapSpaceSpi(new FileSwapSpaceSpi());
  }
  return cfg;
}
