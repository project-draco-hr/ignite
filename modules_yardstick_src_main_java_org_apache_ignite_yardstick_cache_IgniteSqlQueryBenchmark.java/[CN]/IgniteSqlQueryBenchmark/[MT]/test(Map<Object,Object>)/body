{
  double salary=ThreadLocalRandom.current().nextDouble() * args.range() * 1000;
  double maxSalary=salary + 1000;
  Collection<Map.Entry<Integer,Person>> entries=executeQuery(salary,maxSalary);
  for (  Map.Entry<Integer,Person> entry : entries) {
    Person p=entry.getValue();
    if (p.getSalary() < salary || p.getSalary() > maxSalary)     throw new Exception("Invalid person retrieved [min=" + salary + ", max="+ maxSalary+ ", person="+ p+ ']');
  }
  return true;
}
