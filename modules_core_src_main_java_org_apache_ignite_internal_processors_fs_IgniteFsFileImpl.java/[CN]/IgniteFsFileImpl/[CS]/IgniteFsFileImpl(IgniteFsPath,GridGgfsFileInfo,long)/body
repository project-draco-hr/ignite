{
  A.notNull(path,"path");
  A.notNull(info,"info");
  this.path=path;
  fileId=info.id();
  if (info.isFile()) {
    blockSize=info.blockSize();
    len=info.length();
    grpBlockSize=info.affinityKey() == null ? globalGrpBlockSize : info.length() == 0 ? globalGrpBlockSize : info.length();
  }
  props=info.properties();
  if (props == null)   props=Collections.emptyMap();
  accessTime=info.accessTime();
  modificationTime=info.modificationTime();
}
