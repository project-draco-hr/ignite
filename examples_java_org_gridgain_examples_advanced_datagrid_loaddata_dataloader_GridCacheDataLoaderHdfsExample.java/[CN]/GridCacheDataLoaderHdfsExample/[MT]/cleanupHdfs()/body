{
  Configuration cfg=new Configuration();
  FileSystem fs=null;
  try {
    fs=FileSystem.get(cfg);
    System.out.println(">>>");
    System.out.println(">>> Cleaning up HDFS.");
    System.out.println(">>>");
    Path dirPath=path(fs);
    fs.delete(dirPath,true);
  }
  finally {
    closeQuiet(fs);
  }
}
