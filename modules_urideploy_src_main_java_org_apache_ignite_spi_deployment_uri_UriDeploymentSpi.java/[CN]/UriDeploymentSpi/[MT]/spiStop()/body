{
  for (  GridUriDeploymentScanner scanner : scanners)   scanner.cancel();
  for (  GridUriDeploymentScanner scanner : scanners)   scanner.join();
  uriEncodedList.clear();
  scanners.clear();
  List<ClassLoader> tmpClsLdrs;
synchronized (mux) {
    tmpClsLdrs=new ArrayList<>(unitLoaders.size());
    for (    GridUriDeploymentUnitDescriptor desc : unitLoaders)     tmpClsLdrs.add(desc.getClassLoader());
  }
  for (  ClassLoader ldr : tmpClsLdrs)   onUnitReleased(ldr);
  if (deployTmpDirPath != null)   U.delete(new File(deployTmpDirPath));
  unregisterMBean();
  if (log.isDebugEnabled())   log.debug(stopInfo());
}
