{
synchronized (mux) {
    if (topHist.containsKey(topVer))     return null;
    topHist.put(topVer,top);
    while (topHist.size() > topHistSize)     topHist.remove(topHist.firstKey());
    if (log.isDebugEnabled())     log.debug("Added topology snapshot to history, topVer=" + topVer + ", historySize="+ topHist);
    return new TreeMap<>(topHist);
  }
}
