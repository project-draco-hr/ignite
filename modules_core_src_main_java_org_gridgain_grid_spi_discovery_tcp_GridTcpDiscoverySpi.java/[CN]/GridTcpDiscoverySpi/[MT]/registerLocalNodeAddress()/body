{
  while (true) {
    try {
      ipFinder.initializeLocalAddresses(locNode.socketAddresses());
      break;
    }
 catch (    IllegalStateException e) {
      throw new GridSpiException("Failed to register local node address with IP finder: " + locNode.socketAddresses(),e);
    }
catch (    GridSpiException e) {
      LT.error(log,e,"Failed to register local node address in IP finder on start " + "(retrying every 2000 ms).");
    }
    try {
      U.sleep(2000);
    }
 catch (    GridInterruptedException e) {
      throw new GridSpiException("Thread has been interrupted.",e);
    }
  }
}
