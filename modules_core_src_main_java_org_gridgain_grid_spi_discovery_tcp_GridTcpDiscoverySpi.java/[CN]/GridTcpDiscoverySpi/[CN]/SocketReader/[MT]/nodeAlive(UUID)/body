{
  GridTcpDiscoveryNode node=ring.node(nodeId);
  boolean nodeAlive=node != null && node.visible();
  if (nodeAlive) {
synchronized (mux) {
      nodeAlive=!F.transform(failedNodes,F.node2id()).contains(nodeId) && !F.transform(leavingNodes,F.node2id()).contains(nodeId);
    }
  }
  return nodeAlive;
}
