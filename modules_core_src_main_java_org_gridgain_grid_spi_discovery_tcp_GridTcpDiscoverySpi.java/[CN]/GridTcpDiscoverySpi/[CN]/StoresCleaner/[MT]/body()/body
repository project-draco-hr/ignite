{
  if (log.isDebugEnabled())   log.debug("Stores cleaner has been started.");
  while (!isInterrupted()) {
    Thread.sleep(storesCleanFreq);
    if (!isLocalNodeCoordinator())     continue;
    if (spiStateCopy() != CONNECTED) {
      if (log.isDebugEnabled())       log.debug("Stopping stores cleaner (SPI is not connected to topology).");
      return;
    }
    if (ipFinder.isShared())     cleanIpFinder();
    if (metricsStore != null)     cleanMetricsStore();
  }
}
