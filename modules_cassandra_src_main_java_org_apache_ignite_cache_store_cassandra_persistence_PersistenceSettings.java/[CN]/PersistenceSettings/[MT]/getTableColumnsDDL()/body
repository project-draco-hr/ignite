{
  if (PersistenceStrategy.BLOB.equals(stgy))   return "  " + col + " "+ DataType.Name.BLOB.toString();
  if (PersistenceStrategy.PRIMITIVE.equals(stgy))   return "  " + col + " "+ PropertyMappingHelper.getCassandraType(javaCls);
  StringBuilder builder=new StringBuilder();
  for (  PojoField field : getFields()) {
    if (builder.length() > 0)     builder.append(",\n");
    builder.append("  ").append(field.getColumnDDL());
  }
  if (builder.length() == 0) {
    throw new IllegalStateException("There are no POJO fields found for '" + javaCls.toString() + "' class to be presented as a Cassandra primary key");
  }
  return builder.toString();
}
