{
  final IgfsStreamControlRequest msg=new IgfsStreamControlRequest();
  msg.command(WRITE_BLOCK);
  msg.streamId((long)desc.target());
  msg.data(data);
  msg.position(off);
  msg.length(len);
  try {
    io.sendPlain(msg);
  }
 catch (  IgniteCheckedException e) {
    throw GridGgfsHadoopUtils.cast(e);
  }
}
