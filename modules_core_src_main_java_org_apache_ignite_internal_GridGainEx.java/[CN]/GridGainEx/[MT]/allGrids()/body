{
  List<Ignite> allIgnites=new ArrayList<>(grids.size() + 1);
  for (  GridNamedInstance grid : grids.values()) {
    Ignite g=grid.grid();
    if (g != null)     allIgnites.add(g);
  }
  GridNamedInstance dfltGrid0=dfltGrid;
  if (dfltGrid0 != null) {
    IgniteKernal g=dfltGrid0.grid();
    if (g != null)     allIgnites.add(g);
  }
  return allIgnites;
}
