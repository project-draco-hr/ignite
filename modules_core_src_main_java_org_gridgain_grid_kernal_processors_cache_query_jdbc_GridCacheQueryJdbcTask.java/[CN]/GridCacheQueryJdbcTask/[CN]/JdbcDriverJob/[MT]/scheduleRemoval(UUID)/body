{
  SCHEDULER.schedule(new CAX(){
    @Override public void applyx(){
      GridTuple3<GridCacheQueryFuture<List<?>>,Integer,Boolean> t=grid.cluster().<UUID,GridTuple3<GridCacheQueryFuture<List<?>>,Integer,Boolean>>nodeLocalMap().get(id);
      if (t != null) {
        if (t.get3()) {
          t.set3(false);
          scheduleRemoval(id);
        }
 else         grid.cluster().nodeLocalMap().remove(id);
      }
    }
  }
,RMV_DELAY,TimeUnit.SECONDS);
}
