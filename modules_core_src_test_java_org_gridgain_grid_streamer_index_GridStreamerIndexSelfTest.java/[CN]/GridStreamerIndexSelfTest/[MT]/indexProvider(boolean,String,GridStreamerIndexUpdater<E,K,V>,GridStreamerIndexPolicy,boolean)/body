{
  if (treeIdx) {
    GridStreamerTreeIndexProvider<E,K,V> idx=new GridStreamerTreeIndexProvider<>();
    idx.setName(name);
    idx.setUpdater(updater);
    idx.setUnique(unique);
    idx.setPolicy(plc);
    return idx;
  }
 else {
    GridStreamerHashIndexProvider<E,K,V> idx=new GridStreamerHashIndexProvider<>();
    idx.setName(name);
    idx.setUpdater(updater);
    idx.setUnique(unique);
    idx.setPolicy(plc);
    return idx;
  }
}
