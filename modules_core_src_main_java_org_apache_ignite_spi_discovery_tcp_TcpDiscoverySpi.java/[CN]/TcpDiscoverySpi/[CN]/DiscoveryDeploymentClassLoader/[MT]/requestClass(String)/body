{
  TcpDiscoveryClassRequest msg=new TcpDiscoveryClassRequest(getLocalNodeId(),name);
  for (int i=0; i < reconCnt; i++) {
    if (sock == null) {
      sock=connect(node);
      if (sock == null)       break;
    }
    try {
      return request(sock,msg);
    }
 catch (    IOException|IgniteCheckedException e) {
      U.closeQuiet(sock);
      sock=null;
    }
  }
  p2pLdrs.remove(nodeId,this);
  return null;
}
