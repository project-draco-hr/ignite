{
  lock.writeLock().lock();
  try {
    if (sock != null) {
      if (log.isDebugEnabled())       log.debug("Closing deployment class loader connection on node left [node=" + nodeId + ']');
      U.closeQuiet(sock);
      sock=null;
    }
    node=null;
  }
  finally {
    lock.writeLock().unlock();
  }
}
