{
  GridGgfsEx ggfs=(GridGgfsEx)grid(gridIdx).fileSystem("ggfs");
  GridGgfsMetaManager meta=ggfs.context().meta();
  IgniteUuid fileId=meta.fileId(path);
  if (fileId == null)   throw new IgniteFsFileNotFoundException("File not found: " + path);
  GridGgfsFileInfo fileInfo=meta.info(fileId);
  do {
    if (fileInfo == null)     throw new IgniteFsFileNotFoundException("File not found: " + path);
    if (fileInfo.fileMap().ranges().isEmpty())     return;
    U.sleep(100);
    fileInfo=meta.info(fileId);
  }
 while (true);
}
