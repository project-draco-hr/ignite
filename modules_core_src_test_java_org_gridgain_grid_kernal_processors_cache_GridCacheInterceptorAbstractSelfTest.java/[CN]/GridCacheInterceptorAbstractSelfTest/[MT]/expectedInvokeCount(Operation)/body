{
  int dataNodes=cacheMode() == REPLICATED ? gridCount() : 2;
  if (atomicityMode() == GridCacheAtomicityMode.TRANSACTIONAL)   return dataNodes * 2 + (storeEnabled() ? 1 : 0);
 else {
    return (writeOrderMode() == PRIMARY || (op == Operation.TRANSFORM || op == Operation.PUT_FILTER)) ? 2 : dataNodes * 2;
  }
}
