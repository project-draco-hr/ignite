{
  for (  IgniteFuture<?> fut : futures())   if (isMini(fut)) {
    MiniFuture f=(MiniFuture)fut;
    if (f.node().id().equals(nodeId)) {
      mappings.remove(nodeId);
      f.onResult(new ClusterTopologyException("Remote node left grid (will fail): " + nodeId));
      return true;
    }
  }
  return false;
}
