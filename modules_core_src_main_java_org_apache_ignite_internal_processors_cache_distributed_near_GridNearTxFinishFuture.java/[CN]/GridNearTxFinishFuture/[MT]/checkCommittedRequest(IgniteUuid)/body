{
  GridDhtTxFinishRequest finishReq=new GridDhtTxFinishRequest(cctx.localNodeId(),futureId(),miniId,tx.topologyVersion(),tx.xidVersion(),tx.commitVersion(),tx.threadId(),tx.isolation(),true,false,tx.system(),tx.ioPolicy(),false,tx.syncMode() == FULL_SYNC,tx.syncMode() == FULL_SYNC,null,null,null,null,0,null,0,tx.activeCachesDeploymentEnabled());
  finishReq.checkCommitted(true);
  return finishReq;
}
