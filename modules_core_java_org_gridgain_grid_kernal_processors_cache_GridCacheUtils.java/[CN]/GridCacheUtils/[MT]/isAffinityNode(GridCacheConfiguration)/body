{
  if (cfg.getCacheMode() != PARTITIONED)   return true;
  GridCachePartitionedDistributionMode partTax=cfg.getPartitionedDistributionMode();
  if (partTax == null)   partTax=synchronizationMode(cfg);
  return partTax == GridCachePartitionedDistributionMode.PARTITIONED_ONLY || partTax == GridCachePartitionedDistributionMode.NEAR_PARTITIONED;
}
