{
synchronized (futs) {
    for (int i=0; i < futs.size(); i++) {
      IgniteInternalFuture<IgniteInternalTx> fut=futs.get(i);
      if (!isMini(fut))       continue;
      MiniFuture mini=(MiniFuture)fut;
      if (mini.futureId().equals(miniId)) {
        if (!mini.isDone())         return mini;
 else         return null;
      }
    }
  }
  return null;
}
