{
synchronized (sync) {
    for (int i=0; i < futuresCount(); i++) {
      IgniteInternalFuture<Boolean> fut=future(i);
      if (!isMini(fut))       continue;
      MiniFuture mini=(MiniFuture)fut;
      if (mini.futureId().equals(miniId)) {
        if (!mini.isDone())         return mini;
 else         return null;
      }
    }
  }
  return null;
}
