{
  TestStore.loadCnt.set(0);
  Transaction tx=isolation != null ? cache.unwrap(Ignite.class).transactions().txStart(concurrency,isolation) : null;
  try {
    c.run();
    if (tx != null)     tx.commit();
  }
  finally {
    if (tx != null)     tx.close();
  }
  assertEquals(expLoadCnt,TestStore.loadCnt.get());
}
