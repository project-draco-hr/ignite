{
  A.notNull(msg,"msg");
  guard();
  try {
    Collection<ClusterNode> snapshot=prj.nodes();
    if (snapshot.isEmpty())     throw U.emptyTopologyException();
    if (timeout == 0)     timeout=ctx.config().getNetworkTimeout();
    ctx.io().sendUserMessage(snapshot,msg,topic,true,timeout);
  }
  finally {
    unguard();
  }
}
