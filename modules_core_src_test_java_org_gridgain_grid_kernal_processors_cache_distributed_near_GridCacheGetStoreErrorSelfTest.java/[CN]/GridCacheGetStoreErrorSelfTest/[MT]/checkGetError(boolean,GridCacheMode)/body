{
  this.nearEnabled=nearEnabled;
  this.cacheMode=cacheMode;
  startGrids(3);
  try {
    GridTestUtils.assertThrows(log,new Callable<Object>(){
      @Override public Object call() throws Exception {
        grid(0).cache(null).get(nearKey());
