{
  if (o == null)   return "null";
  if (o instanceof byte[])   return "size=" + ((byte[])o).length;
  if (o instanceof Byte[])   return "size=" + ((Byte[])o).length;
  if (o instanceof Object[])   return "size=" + ((Object[])o).length + ", values=["+ mkString((Object[])o,60)+ "]";
  return o.toString();
}
