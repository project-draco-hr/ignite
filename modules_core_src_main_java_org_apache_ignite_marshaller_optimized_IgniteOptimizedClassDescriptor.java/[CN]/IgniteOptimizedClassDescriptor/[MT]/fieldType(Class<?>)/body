{
  IgniteOptimizedFieldType type;
  if (cls == byte.class)   type=IgniteOptimizedFieldType.BYTE;
 else   if (cls == short.class)   type=IgniteOptimizedFieldType.SHORT;
 else   if (cls == int.class)   type=IgniteOptimizedFieldType.INT;
 else   if (cls == long.class)   type=IgniteOptimizedFieldType.LONG;
 else   if (cls == float.class)   type=IgniteOptimizedFieldType.FLOAT;
 else   if (cls == double.class)   type=IgniteOptimizedFieldType.DOUBLE;
 else   if (cls == char.class)   type=IgniteOptimizedFieldType.CHAR;
 else   if (cls == boolean.class)   type=IgniteOptimizedFieldType.BOOLEAN;
 else   type=IgniteOptimizedFieldType.OTHER;
  return type;
}
