{
  final boolean locExec=destId == null || destId.equals(ctx.localNodeId()) || replicatedCacheAvailable(cacheName);
  if (locExec) {
    CacheProjection<?,?> prj=localCache(cacheName).forSubjectId(clientId).flagsOn(flags);
    if (keepPortable)     prj=prj.keepPortable();
    return op.apply((CacheProjection<Object,Object>)prj,ctx).chain(resultWrapper((CacheProjection<Object,Object>)prj,key));
  }
 else {
    ClusterGroup prj=ctx.grid().forPredicate(F.nodeForNodeId(destId));
    ctx.task().setThreadContext(TC_NO_FAILOVER,true);
    return ctx.closure().callAsync(BALANCE,new FlaggedCacheOperationCallable(clientId,cacheName,flags,op,key,keepPortable),prj.nodes());
  }
}
