{
  super(IgfsHadoopEndpoint.normalize(name),GGFS_SCHEME,false,-1);
  uri=name;
  try {
    initialize(name,cfg);
  }
 catch (  IOException e) {
    if (rmtClient != null)     rmtClient.close(false);
    throw e;
  }
  workingDir=new IgfsPath("/user/" + cfg.get(MRJobConfig.USER_NAME,DFLT_USER_NAME));
}
