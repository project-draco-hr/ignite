{
  GridCacheProjection<String,Integer> cache=cache();
  cache.put("key2",1);
  cache.put("key3",3);
  GridFuture<?> fut0=cache.transformAsync("key1",INCR_CLOS);
  GridFuture<?> fut1=cache.transformAsync("key2",INCR_CLOS);
  GridFuture<?> fut2=cache.transformAsync("key3",RMV_CLOS);
  fut0.get();
  fut1.get();
  fut2.get();
  assertEquals((Integer)1,cache.get("key1"));
  assertEquals((Integer)2,cache.get("key2"));
  assertNull(cache.get("key3"));
  for (int i=0; i < gridCount(); i++)   assertNull(cache(i).peek("key3"));
}
