{
  IgniteCache<String,Integer> cache=jcache();
  String key=primaryKeysForCache(cache,1).get(0);
  cache.put(key,1);
  assertEquals((Integer)1,cache.get(key));
  long ttl=500;
  grid(0).jcache(null).withExpiryPolicy(new TouchedExpiryPolicy(new Duration(MILLISECONDS,ttl))).put(key,1);
  Thread.sleep(ttl + 100);
  cache.localEvict(Collections.<String>singleton(key));
  assertNull(cache.localPeek(key));
  cache.localPromote(Collections.singleton(key));
  assertNull(cache.localPeek(key));
  assertTrue(cache.localSize() == 0);
  for (int i=0; i < gridCount(); i++) {
    if (cache(i).entry(key).primary())     cache(i).reload(key);
  }
  cache.loadAll(Collections.singleton(key),true,null);
  assertEquals(null,cache.localPeek(key));
}
