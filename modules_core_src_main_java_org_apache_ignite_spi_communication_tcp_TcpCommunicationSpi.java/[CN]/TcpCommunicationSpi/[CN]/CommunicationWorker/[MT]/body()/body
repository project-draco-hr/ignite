{
  if (log.isDebugEnabled())   log.debug("Tcp communication worker has been started.");
  while (!isInterrupted()) {
    GridNioRecoveryDescriptor recoveryDesc=q.poll(idleConnTimeout,TimeUnit.MILLISECONDS);
    if (recoveryDesc != null)     processRecovery(recoveryDesc);
 else     processIdle();
  }
}
