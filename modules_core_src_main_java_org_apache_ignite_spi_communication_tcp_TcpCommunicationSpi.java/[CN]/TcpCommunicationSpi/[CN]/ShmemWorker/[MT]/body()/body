{
  try {
    IpcToNioAdapter<MessageAdapter> adapter=new IpcToNioAdapter<>(metricsLsnr,log,endpoint,srvLsnr,getSpiContext().messageFormatter(),new GridNioCodecFilter(new GridDirectParser(getSpiContext().messageFactory()),log,true),new GridConnectionBytesVerifyFilter(log));
    adapter.serve();
  }
  finally {
    shmemWorkers.remove(this);
    endpoint.close();
  }
}
