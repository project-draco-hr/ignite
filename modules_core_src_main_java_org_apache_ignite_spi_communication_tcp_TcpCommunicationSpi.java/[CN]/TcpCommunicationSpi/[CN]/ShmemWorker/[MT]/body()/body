{
  try {
    GridDirectParser parser=new GridDirectParser(getSpiContext().messageFactory());
    IpcToNioAdapter<MessageAdapter> adapter=new IpcToNioAdapter<>(metricsLsnr,log,endpoint,srvLsnr,getSpiContext().messageFormatter(),new GridNioCodecFilter(parser,log,true),new GridConnectionBytesVerifyFilter(log));
    adapter.serve();
  }
  finally {
    shmemWorkers.remove(this);
    endpoint.close();
  }
}
