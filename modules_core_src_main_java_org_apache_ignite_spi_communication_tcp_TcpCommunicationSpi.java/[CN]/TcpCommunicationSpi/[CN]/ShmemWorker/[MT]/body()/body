{
  try {
    GridIpcToNioAdapter<GridTcpCommunicationMessageAdapter> adapter=new GridIpcToNioAdapter<>(metricsLsnr,log,endpoint,msgWriter,srvLsnr,new GridNioCodecFilter(new GridDirectParser(msgReader,TcpCommunicationSpi.this),log,true),new GridConnectionBytesVerifyFilter(log));
    adapter.serve();
  }
  finally {
    shmemWorkers.remove(this);
    endpoint.close();
  }
}
