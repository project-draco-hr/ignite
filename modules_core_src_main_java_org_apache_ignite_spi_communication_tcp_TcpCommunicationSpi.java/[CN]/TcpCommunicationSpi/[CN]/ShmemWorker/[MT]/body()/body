{
  try {
    IpcToNioAdapter<MessageAdapter> adapter=new IpcToNioAdapter<>(metricsLsnr,log,endpoint,srvLsnr,getSpiContext().messageWriterFactory(),new GridNioCodecFilter(new GridDirectParser(TcpCommunicationSpi.this),log,true),new GridConnectionBytesVerifyFilter(log));
    adapter.serve();
  }
  finally {
    shmemWorkers.remove(this);
    endpoint.close();
  }
}
