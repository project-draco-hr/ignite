{
  for (int i=0; i < 10; i++) {
    try {
      int srvPort=port++;
      GridNioServer.Builder<?> builder=serverBuilder(srvPort,parser,lsnr);
      if (queueLimit != null)       builder.sendQueueLimit(queueLimit);
      GridNioServer<?> srvr=builder.build();
      srvr.start();
      return srvr;
    }
 catch (    IgniteCheckedException e) {
      if (i < 9 && e.hasCause(BindException.class))       log.error("Failed to start server, will try another port: " + e);
 else       throw e;
    }
  }
  fail("Failed to start server.");
  return null;
}
