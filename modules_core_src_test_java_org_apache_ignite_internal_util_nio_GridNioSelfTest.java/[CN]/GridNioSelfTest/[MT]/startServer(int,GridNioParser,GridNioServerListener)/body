{
  GridNioServer<?> srvr=GridNioServer.builder().address(U.getLocalHost()).port(port).listener(lsnr).logger(log).selectorCount(Runtime.getRuntime().availableProcessors()).gridName("nio-test-grid").tcpNoDelay(true).directBuffer(true).byteOrder(ByteOrder.nativeOrder()).socketSendBufferSize(0).socketReceiveBufferSize(0).sendQueueLimit(0).filters(new GridNioCodecFilter(parser,log,false)).build();
  srvr.start();
  return srvr;
}
