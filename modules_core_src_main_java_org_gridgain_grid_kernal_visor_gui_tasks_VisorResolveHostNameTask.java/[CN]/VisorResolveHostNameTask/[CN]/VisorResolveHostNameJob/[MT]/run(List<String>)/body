{
  Set<GridBiTuple<String,String>> res=new HashSet<>();
  try {
    for (    String addr : arg) {
      GridBiTuple<Collection<String>,Collection<String>> tmp=GridUtils.resolveLocalAddresses(InetAddress.getByName(addr));
      Iterator<String> ipIt=tmp.get1().iterator();
      Iterator<String> hostIt=tmp.get2().iterator();
      while (ipIt.hasNext())       res.add(new GridBiTuple<>(ipIt.next(),hostIt.next()));
    }
  }
 catch (  Throwable e) {
    throw new GridException("Failed to resolve host name",e);
  }
  return res;
}
