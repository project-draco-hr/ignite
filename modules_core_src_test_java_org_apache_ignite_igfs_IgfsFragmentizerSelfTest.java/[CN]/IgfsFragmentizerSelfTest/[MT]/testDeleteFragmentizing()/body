{
  IgfsImpl igfs=(IgfsImpl)grid(0).fileSystem("igfs");
  for (int i=0; i < 30; i++) {
    IgfsPath path=new IgfsPath("/someFile" + i);
    try (IgfsOutputStream out=igfs.create(path,true)){
      for (int j=0; j < 5 * IGFS_GROUP_SIZE; j++)       out.write(new byte[IGFS_BLOCK_SIZE]);
    }
     U.sleep(200);
  }
  igfs.delete(new IgfsPath("/"),true);
  igfs.awaitDeletesAsync().get();
  GridTestUtils.retryAssert(log,50,100,new CA(){
    @Override public void apply(){
      for (int i=0; i < NODE_CNT; i++) {
        IgniteEx g=grid(i);
        IgniteCache<Object,Object> cache=g.cache(DATA_CACHE_NAME);
        assertTrue("Data cache is not empty [keys=" + keySet(cache) + ", node="+ g.localNode().id()+ ']',cache.localSize() == 0);
      }
    }
  }
);
}
