{
  Collection<GridServiceDescriptor> descs=new ArrayList<>();
  for (  GridCacheEntry<GridServiceDeploymentKey,GridServiceDeployment> e : depCache.entrySetx()) {
    GridServiceDeployment dep=e.getValue();
    GridServiceDescriptorImpl desc=new GridServiceDescriptorImpl(dep);
    try {
      GridServiceAssignments assigns=assignCache.flagsOn(GridCacheFlag.GET_PRIMARY).get(new GridServiceAssignmentsKey(dep.configuration().getName()));
      if (assigns != null) {
        desc.topologySnapshot(assigns.assigns());
        descs.add(desc);
      }
    }
 catch (    GridException ex) {
      log.error("Failed to get assignments from replicated cache for service: " + dep.configuration().getName(),ex);
    }
  }
  return descs;
}
