{
  List<String> argsList=new ArrayList<>();
  for (  String arg : args) {
switch (arg) {
case "-i":
      interactive=true;
    break;
case "-v":
  verbose=true;
break;
case "-h1":
useHadoop1=true;
break;
case "-np":
noPause=true;
break;
default :
argsList.add(arg);
}
}
return reformatArguments(argsList);
}
