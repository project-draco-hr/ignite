{
  try (Grid g=G.start("examples/config/example-cache.xml")){
    if (g.cluster().forRemotes().nodes().isEmpty()) {
      X.print(">>> This test needs 1 remote node at start " + "and addition of 1 more node at the end.");
      return;
    }
    X.println(">>> Beginning data population...");
    int cnt=10000;
    Map<Integer,SampleValue> map=null;
    for (int i=0; i < cnt; i++) {
      if (i % 200 == 0) {
        if (map != null && !map.isEmpty()) {
          g.cache("replicated").putAll(map);
          X.println(">>> Put entries count: " + i);
        }
        map=new HashMap<>();
      }
      map.put(i,new SampleValue());
    }
    if (map != null && !map.isEmpty()) {
      g.cache("replicated").putAll(map);
      X.println(">>> Put entries count: " + cnt);
    }
    JOptionPane.showMessageDialog(null,"Start one more node now and press OK " + "while new node is preloading.");
  }
 }
