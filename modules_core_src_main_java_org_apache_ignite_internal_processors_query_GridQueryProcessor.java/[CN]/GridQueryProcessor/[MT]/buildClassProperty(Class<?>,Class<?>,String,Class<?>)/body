{
  ClassProperty res=buildClassProperty(true,keyCls,pathStr,resType);
  if (res == null)   res=buildClassProperty(false,valCls,pathStr,resType);
  if (res == null)   throw new IgniteCheckedException("Failed to initialize property '" + pathStr + "' for "+ "key class '"+ keyCls+ "' and value class '"+ valCls+ "'. "+ "Make sure that one of these classes contains respective getter method or field.");
  return res;
}
