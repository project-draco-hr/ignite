{
  A.notNull(path,"path");
  A.notNull(entry,"entry");
  this.path=path;
  fileId=entry.fileId();
  blockSize=entry.blockSize();
  grpBlockSize=entry.affinityKey() == null ? globalGrpSize : entry.length() == 0 ? globalGrpSize : entry.length();
  len=entry.length();
  props=entry.properties();
  accessTime=entry.accessTime();
  modificationTime=entry.modificationTime();
}
