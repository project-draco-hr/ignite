{
  KeyLock.Lock l=lock.lock(ptr);
  try {
    final long cl=left(ptr);
    if (isShared(cl)) {
      left(ptr,lazyCopy(cl,ptr,unlinked));
    }
    final long cr=right(ptr);
    if (isShared(cr)) {
      right(ptr,lazyCopy(cr,ptr,unlinked));
    }
  }
  finally {
    if (l != null)     l.unlock();
  }
}
