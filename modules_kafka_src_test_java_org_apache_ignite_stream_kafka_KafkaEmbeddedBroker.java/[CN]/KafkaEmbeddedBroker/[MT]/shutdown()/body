{
  zkReady=false;
  if (kafkaServer != null)   kafkaServer.shutdown();
  List<String> logDirs=scala.collection.JavaConversions.asJavaList(brokerConfig.logDirs());
  for (  String logDir : logDirs) {
    FileUtils.deleteDirectory(new File(logDir));
  }
  if (zkClient != null) {
    zkClient.close();
    zkClient=null;
  }
  if (zooKeeper != null) {
    try {
      zooKeeper.shutdown();
    }
 catch (    IOException e) {
    }
    zooKeeper=null;
  }
}
