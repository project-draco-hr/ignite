{
  zkReady=false;
  if (kafkaSrv != null)   kafkaSrv.shutdown();
  List<String> logDirs=scala.collection.JavaConversions.asJavaList(brokerCfg.logDirs());
  for (  String logDir : logDirs)   U.delete(new File(logDir));
  if (zkClient != null) {
    zkClient.close();
    zkClient=null;
  }
  if (zooKeeper != null) {
    try {
      zooKeeper.shutdown();
    }
 catch (    IOException e) {
    }
    zooKeeper=null;
  }
}
