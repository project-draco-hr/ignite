{
  scala.Option<PartitionStateInfo> partStateOption=kafkaSrv.apis().metadataCache().getPartitionInfo(topic,part);
  if (!partStateOption.isDefined())   return false;
  PartitionStateInfo partState=partStateOption.get();
  LeaderAndIsr LeaderAndIsr=partState.leaderIsrAndControllerEpoch().leaderAndIsr();
  return ZkUtils.getLeaderForPartition(getZkClient(),topic,part) != null && Request.isValidBrokerId(LeaderAndIsr.leader()) && LeaderAndIsr.isr().size() >= 1;
}
