{
  try {
    Object res=fut.get();
    if (res instanceof GridFuture)     ((GridFuture)res).listenAsync(this);
 else {
      GridClosure<Object,X> cb=(GridClosure<Object,X>)completionCb;
      if (cb == null)       onDone((X)res);
 else       onDone(cb.apply(res));
    }
  }
 catch (  Throwable e) {
    onDone(e);
  }
}
