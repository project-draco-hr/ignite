{
  GridHadoopTaskInfo info=run.taskInfo();
  int pendingTasks0=pendingTasks.decrementAndGet();
  if (log.isDebugEnabled())   log.debug("Hadoop task execution finished [info=" + info + ", state="+ status.state()+ ", waitTime="+ run.waitTime()+ ", execTime="+ run.executionTime()+ ", pendingTasks="+ pendingTasks0+ ", err="+ status.failCause()+ ']');
  boolean flush=pendingTasks0 == 0 && (info.type() == COMBINE || (info.type() == MAP && (!job.info().hasCombiner() || !GridHadoopJobProperty.get(job.info(),SINGLE_COMBINER_FOR_ALL_MAPPERS,false))));
  notifyTaskFinished(info,status,flush);
}
