{
  if (msg instanceof GridHadoopTaskExecutionRequest) {
    if (validateNodeMessage(desc,msg))     initializeTasks((GridHadoopTaskExecutionRequest)msg);
  }
 else   if (msg instanceof GridHadoopJobInfoUpdateRequest) {
    if (validateNodeMessage(desc,msg))     updateTasks((GridHadoopJobInfoUpdateRequest)msg);
  }
 else   if (msg instanceof GridHadoopShuffleMessage || msg instanceof GridHadoopShuffleAck) {
    if (log.isDebugEnabled())     log.debug("Received shuffle message [desc=" + desc + ", msg="+ msg+ ']');
    shuffle.onMessageReceived(desc,msg);
  }
}
