{
  Grid grid=G.grid(getTestGridName());
  grid.compute().localDeployTask(GridTaskTimeoutTestTask.class,GridTaskTimeoutTestTask.class.getClassLoader());
  GridComputeTaskFuture<?> fut=executeAsync(grid.compute().withTimeout(TIMEOUT),GridTaskTimeoutTestTask.class.getName(),null);
  Thread.sleep(TIMEOUT + 500);
  checkTimedOutEvents(fut.getTaskSession().getId());
}
