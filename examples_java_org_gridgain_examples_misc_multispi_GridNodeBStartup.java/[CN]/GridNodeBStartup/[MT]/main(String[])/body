{
  AbstractApplicationContext ctx=new ClassPathXmlApplicationContext("org/gridgain/examples/misc/multispi/nodeB.xml");
  GridConfiguration cfg=ctx.getBean("grid.cfg",GridConfiguration.class);
  try (Grid g=GridGain.start(cfg)){
    JOptionPane.showMessageDialog(null,new JComponent[]{new JLabel("Grid node for Segment B started."),new JLabel("Press OK to stop node.")},"GridGain",JOptionPane.INFORMATION_MESSAGE);
  }
 }
