{
  try {
    return ctx.affinity().localNode(key,topVer) ? dht().entryEx(key,touch) : ctx.isNear() ? near().entryEx(key,touch) : new GridDhtDetachedCacheEntry<>(ctx,key,0,null,null,0,0);
  }
 catch (  GridDhtInvalidPartitionException ignore) {
    return ctx.isNear() ? near().entryEx(key) : new GridDhtDetachedCacheEntry<>(ctx,key,0,null,null,0,0);
  }
}
