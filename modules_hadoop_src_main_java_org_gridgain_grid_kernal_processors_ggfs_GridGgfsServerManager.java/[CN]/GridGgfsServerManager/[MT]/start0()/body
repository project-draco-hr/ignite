{
  GridGgfsConfiguration ggfsCfg=ggfsCtx.configuration();
  String cfg=ggfsCfg.getIpcEndpointConfiguration();
  if (F.isEmpty(cfg))   cfg="{type:'" + (U.isWindows() ? "tcp" : "shmem") + "', port:"+ DFLT_IPC_PORT+ '}';
  if (ggfsCfg.isIpcEndpointEnabled())   bind(cfg,false);
  if (ggfsCfg.getManagementPort() >= 0)   bind("{type:'tcp', port:" + ggfsCfg.getManagementPort() + '}',true);
  if (bindWorker != null)   new GridThread(bindWorker).start();
}
