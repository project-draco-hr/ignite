{
  workersCnt.increment();
  Runnable c=new GridWorker(ctx.gridName(),"msg-worker",log){
    @Override protected void body(){
      try {
        threadProcessingMessage(true);
        processRegularMessage0(msg,nodeId);
      }
  finally {
        threadProcessingMessage(false);
        workersCnt.decrement();
        msgC.run();
      }
    }
  }
;
  try {
    pool(plc).execute(c);
  }
 catch (  RejectedExecutionException e) {
    U.error(log,"Failed to process regular message due to execution rejection. Increase the upper bound " + "on 'ExecutorService' provided by 'GridConfiguration.getPublicThreadPoolSize()'. " + "Will attempt to process message in the listener thread instead.",e);
    c.run();
  }
}
