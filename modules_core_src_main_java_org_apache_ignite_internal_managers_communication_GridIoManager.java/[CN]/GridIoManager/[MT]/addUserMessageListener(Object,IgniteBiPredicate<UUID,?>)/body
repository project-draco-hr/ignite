{
  if (p != null) {
    try {
      if (p instanceof PlatformMessageFilter)       ((PlatformMessageFilter)p).initialize(ctx);
 else       ctx.resource().injectGeneric(p);
      addMessageListener(TOPIC_COMM_USER,new GridUserMessageListener(topic,(IgniteBiPredicate<UUID,Object>)p));
    }
 catch (    IgniteCheckedException e) {
      throw new IgniteException(e);
    }
  }
}
