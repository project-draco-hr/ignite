{
  if (ctx.deploymentEnabled())   prepareObject(val,ctx.shared());
  GridCacheValueBytes vb=null;
  if (val != null) {
    vb=val instanceof byte[] ? GridCacheValueBytes.plain(val) : valBytes != null ? GridCacheValueBytes.marshaled(valBytes) : null;
  }
 else   if (valBytes != null)   vb=GridCacheValueBytes.marshaled(valBytes);
  this.valBytes.add(vb);
  vals.add(val);
}
