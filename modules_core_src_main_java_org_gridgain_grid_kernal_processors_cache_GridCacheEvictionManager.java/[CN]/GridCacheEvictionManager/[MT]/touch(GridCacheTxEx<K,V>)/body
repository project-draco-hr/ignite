{
  if (!plcEnabled && memoryMode != OFFHEAP_TIERED)   return;
  if (tx.internal() && !tx.groupLock())   return;
  if (!tx.local()) {
    if (cctx.isNear())     return;
    if (evictSync)     return;
  }
  if (!busyLock.enterBusy())   return;
  try {
    if (log.isDebugEnabled())     log.debug("Touching transaction [tx=" + CU.txString(tx) + ", localNode="+ cctx.nodeId()+ ']');
    tx.finishFuture().listenAsync(txLsnr);
  }
  finally {
    busyLock.leaveBusy();
  }
}
