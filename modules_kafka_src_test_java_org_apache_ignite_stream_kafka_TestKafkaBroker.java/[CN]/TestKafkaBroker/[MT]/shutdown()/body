{
  if (zkUtils != null)   zkUtils.close();
  if (kafkaSrv != null)   kafkaSrv.shutdown();
  if (zkServer != null) {
    try {
      zkServer.stop();
    }
 catch (    IOException e) {
    }
  }
  List<String> logDirs=scala.collection.JavaConversions.seqAsJavaList(kafkaCfg.logDirs());
  for (  String logDir : logDirs)   U.delete(new File(logDir));
}
