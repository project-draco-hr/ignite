{
  A.notNull(springCfgPath,"springCfgPath");
  URL url;
  try {
    url=new URL(springCfgPath);
  }
 catch (  MalformedURLException e) {
    url=U.resolveGridGainUrl(springCfgPath);
    if (url == null)     throw new GridException("Spring XML configuration path is invalid: " + springCfgPath + ". Note that this path should be either absolute or a relative local file system path, "+ "relative to META-INF in classpath or valid URL to GRIDGAIN_HOME.",e);
  }
  return loadConfigurations(url);
}
