{
  try {
    if (!closed) {
      if (log.isDebugEnabled())       log.debug("Closing output stream: " + streamId);
      writeStart();
      rmtClient.closeStream(streamId).get();
      markClosed(false);
      writeEnd();
      if (clientLog.isLogEnabled())       clientLog.logCloseOut(logStreamId,userTime,writeTime,total);
      if (log.isDebugEnabled())       log.debug("Closed output stream [streamId=" + streamId + ", writeTime="+ writeTime / 1000 + ", userTime=" + userTime / 1000 + ']');
    }
 else     if (connBroken)     throw new IOException("Failed to close stream, because connection was broken (data could have been lost).");
  }
 catch (  GridException e) {
    throw new IOException(e);
  }
}
