{
  try {
    DatagramPacket packet=new DatagramPacket(msg.toBytes(),GridClockMessage.PACKET_SIZE,addr,port);
    if (log.isDebugEnabled())     log.debug("Sending time sync packet [msg=" + msg + ", addr="+ addr+ ", port="+ port);
    sock.send(packet);
  }
 catch (  IOException e) {
    if (!sock.isClosed())     throw new IgniteCheckedException("Failed to send datagram message to remote node [addr=" + addr + ", port="+ port+ ", msg="+ msg+ ']',e);
  }
}
