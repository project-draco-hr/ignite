{
  if (log.isDebugEnabled())   log.debug("Message worker started [locNodeId=" + getConfiguredNodeId() + ']');
  while (!isInterrupted()) {
    TcpDiscoveryAbstractMessage msg=queue.poll(pollingTimeout,TimeUnit.MILLISECONDS);
    if (msg == null)     noMessageLoop();
 else     processMessage(msg);
  }
}
