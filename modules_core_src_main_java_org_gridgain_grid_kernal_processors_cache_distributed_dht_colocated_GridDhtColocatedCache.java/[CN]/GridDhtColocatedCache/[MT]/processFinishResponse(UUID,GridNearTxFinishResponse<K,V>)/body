{
  ctx.tm().onFinishedRemote(nodeId,res.threadId());
  GridDhtColocatedTxFinishFuture<K,V> fut=(GridDhtColocatedTxFinishFuture<K,V>)ctx.mvcc().<GridCacheTx>future(res.xid(),res.futureId());
  if (fut == null) {
    if (log.isDebugEnabled())     log.debug("Failed to find future for finish response [sender=" + nodeId + ", res="+ res+ ']');
    return;
  }
  fut.onResult(nodeId,res);
}
