{
  finishLock.readLock().lock();
  try {
    if (!finishGuard.get()) {
      try {
        queue.put(task);
        return true;
      }
 catch (      InterruptedException ignore) {
        Thread.currentThread().interrupt();
        return false;
      }
    }
 else     return false;
  }
  finally {
    finishLock.readLock().unlock();
  }
}
