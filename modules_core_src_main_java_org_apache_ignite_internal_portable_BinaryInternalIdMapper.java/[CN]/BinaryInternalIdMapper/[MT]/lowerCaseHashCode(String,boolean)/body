{
  int len=str.length();
  int h=0;
  for (int i=0; i < len; i++) {
    int c=str.charAt(i);
    c=c <= MAX_LOWER_CASE_CHAR ? LOWER_CASE_CHARS[c] : Character.toLowerCase(c);
    h=31 * h + c;
  }
  if (h != 0)   return h;
 else {
    String what=type ? "type" : "field";
    throw new BinaryObjectException("Default binary ID mapper resolved " + what + " ID to zero "+ "(either change "+ what+ "'s name or use custom ID mapper) [name="+ str+ ']');
  }
}
