{
  if (configureTimeout) {
    GridCacheAdapter<Integer,Integer> cache=((GridKernal)g).internalCache(cacheName);
    cache.context().tm().slowTxWarnTimeout(500);
  }
  Cache<Object,Object> cache1=g.cache(cacheName);
  IgniteTx tx=cache1.txStart();
  try {
    cache1.put(1,1);
    if (simulateTimeout)     Thread.sleep(800);
    tx.commit();
  }
  finally {
    tx.close();
  }
  tx=cache1.txStart();
  try {
    cache1.put(1,1);
    if (simulateTimeout)     Thread.sleep(800);
    tx.rollback();
  }
  finally {
    tx.close();
  }
}
