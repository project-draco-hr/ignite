{
  stopGrid(0);
  try {
    IgfsPath path=new IgfsPath("/someFile");
    IgniteFs ggfs=grid(1).fileSystem("ggfs");
    try (IgfsOutputStream out=ggfs.create(path,true)){
      for (int i=0; i < 10 * GGFS_GROUP_SIZE; i++)       out.write(new byte[GGFS_BLOCK_SIZE]);
    }
     awaitFileFragmenting(1,path);
  }
  finally {
    startGrid(0);
  }
}
