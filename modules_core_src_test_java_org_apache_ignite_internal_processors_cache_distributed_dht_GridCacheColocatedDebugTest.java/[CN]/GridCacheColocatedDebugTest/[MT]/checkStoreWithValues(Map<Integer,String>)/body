{
  Ignite g0=grid(0);
  Ignite g1=grid(1);
  Ignite g2=grid(2);
  g0.jcache(null).putAll(map);
  checkStore(g0,map);
  checkStore(g1,Collections.<Integer,String>emptyMap());
  checkStore(g2,Collections.<Integer,String>emptyMap());
  clearStores(3);
  try (Transaction tx=g0.transactions().txStart(OPTIMISTIC,READ_COMMITTED)){
    g0.jcache(null).putAll(map);
    tx.commit();
    checkStore(g0,map);
    checkStore(g1,Collections.<Integer,String>emptyMap());
    checkStore(g2,Collections.<Integer,String>emptyMap());
    clearStores(3);
  }
 }
