{
  evts.add(evt);
  gridNames.add(ignite.name());
  try {
    checkState(ignite.name(),evt == LifecycleEventType.AFTER_IGNITE_START || evt == LifecycleEventType.BEFORE_GRID_STOP);
  }
 catch (  Throwable e) {
    log.error("Lifecycle bean failed state check: " + this,e);
    err.compareAndSet(null,e);
  }
}
