{
  try (Grid g=GridGain.start(args.length == 0 ? "examples/config/example-default.xml" : args[0])){
    g.compute().execute(GridEventsExampleTask.class,null).get();
    List<GridEvent> evts=g.events().remoteQuery(new GridPredicate<GridEvent>(){
      @Override public boolean apply(      GridEvent e){
        return true;
      }
    }
,0).get();
    for (    GridEvent evt : evts)     System.out.println(">>> Found grid event: " + evt);
    System.out.println(">>>");
    System.out.println(">>> Finished executing Grid Events Query Example.");
    System.out.println(">>> Check local node output.");
    System.out.println(">>>");
  }
 }
