{
  if (ctx.config().isDaemon())   return;
  if (!getBoolean(GG_SKIP_CONFIGURATION_CONSISTENCY_CHECK)) {
    for (    ClusterNode n : ctx.discovery().remoteNodes())     checkGgfsOnRemoteNode(n);
  }
  for (  GridGgfsContext ggfsCtx : ggfsCache.values())   for (  GridGgfsManager mgr : ggfsCtx.managers())   mgr.onKernalStart();
}
