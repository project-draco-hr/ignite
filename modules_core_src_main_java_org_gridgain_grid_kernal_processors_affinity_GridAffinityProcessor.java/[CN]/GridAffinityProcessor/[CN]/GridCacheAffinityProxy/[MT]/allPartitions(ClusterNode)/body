{
  try {
    Set<Integer> parts=GridAffinityProcessor.this.affinityCache(cacheName,topologyVersion()).assignment.backupPartitions(n.id());
    parts.addAll(GridAffinityProcessor.this.affinityCache(cacheName,topologyVersion()).assignment.primaryPartitions(n.id()));
    return U.toIntArray(parts);
  }
 catch (  IgniteCheckedException e) {
    throw new IgniteException(e);
  }
}
