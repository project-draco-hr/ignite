{
  if (oldPath != null)   return U.nodeIdLogFileName(nodeId,oldPath);
  String tmpDir=GridSystemProperties.getString("java.io.tmpdir");
  if (tmpDir != null)   return U.nodeIdLogFileName(nodeId,new File(tmpDir,"gridgain.log").getAbsolutePath());
  System.err.println("Failed to get tmp directory for log file.");
  return null;
}
