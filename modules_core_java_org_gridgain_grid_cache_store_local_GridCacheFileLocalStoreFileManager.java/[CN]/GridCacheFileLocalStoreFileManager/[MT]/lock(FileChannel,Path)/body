{
  try {
    FileLock lock=null;
    try {
      lock=ch.tryLock();
    }
 catch (    OverlappingFileLockException ignored) {
    }
    if (lock == null)     throw new IOException("Failed to lock file (probably it is in use by another store instance): " + path);
  }
 catch (  IOException e) {
    U.close(ch,store.log);
    throw e;
  }
}
