{
  final int MAX_CHECK=5;
  for (int i=0; i < MAX_CHECK; i++) {
    try {
      assertIteratorsRemoved();
      return;
    }
 catch (    AssertionFailedError e) {
      if (i == MAX_CHECK - 1)       throw e;
      log.info("Iterators not removed, will wait more.");
      U.sleep(1000);
    }
  }
}
