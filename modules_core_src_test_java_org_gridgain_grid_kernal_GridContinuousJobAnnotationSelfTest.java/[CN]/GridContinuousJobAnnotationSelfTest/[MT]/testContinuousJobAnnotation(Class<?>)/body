{
  try {
    Grid grid=startGrid(0);
    startGrid(1);
    fail.set(true);
    grid.compute().execute(TestTask.class,jobCls);
    Exception e=err.get();
    if (e != null)     throw e;
  }
  finally {
    stopGrid(0);
    stopGrid(1);
  }
  assertEquals(2,afterSendCnt.getAndSet(0));
  assertEquals(1,beforeFailoverCnt.getAndSet(0));
}
