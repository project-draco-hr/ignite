{
  return new ExpiryPolicy(){
    @Override public Duration getExpiryForCreation(){
      return new Duration(TimeUnit.SECONDS,1);
    }
    /** 
 * {@inheritDoc} 
 */
    @Override public Duration getExpiryForAccess(){
      return new Duration(TimeUnit.SECONDS,1);
    }
    /** 
 * {@inheritDoc} 
 */
    @Override public Duration getExpiryForUpdate(){
      return new Duration(TimeUnit.SECONDS,1);
    }
  }
;
}
