{
  Path p=fileForPath(new IgfsPath("/")).toPath();
  try {
    LocalFileSystemSizeVisitor visitor=new LocalFileSystemSizeVisitor();
    Files.walkFileTree(p,visitor);
    return visitor.size();
  }
 catch (  IOException e) {
    throw new IgfsException("Failed to calculate used space size.",e);
  }
}
