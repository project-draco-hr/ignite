{
  if (cfg.getLocalHost() == null) {
    if (cfg.getDiscoverySpi() instanceof TcpDiscoverySpiAdapter) {
      cfg.setLocalHost("127.0.0.1");
      if (((TcpDiscoverySpiAdapter)cfg.getDiscoverySpi()).getJoinTimeout() == 0)       ((TcpDiscoverySpiAdapter)cfg.getDiscoverySpi()).setJoinTimeout(8000);
    }
 else     cfg.setLocalHost(getTestResources().getLocalHost());
  }
  if (cfg.getIncludeProperties() == null)   cfg.setIncludeProperties();
  return cfg;
}
