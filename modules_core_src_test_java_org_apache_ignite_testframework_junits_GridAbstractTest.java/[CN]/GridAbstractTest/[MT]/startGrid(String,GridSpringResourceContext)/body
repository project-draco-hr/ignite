{
  if (!isRemoteJvm(gridName)) {
    startingGrid.set(gridName);
    try {
      Ignite node=IgnitionEx.start(optimize(getConfiguration(gridName)),ctx);
      IgniteConfiguration cfg=node.configuration();
      log.info("Node started with the following configuration [id=" + node.cluster().localNode().id() + ", marshaller="+ cfg.getMarshaller()+ ", binaryCfg="+ cfg.getBinaryConfiguration()+ "]");
      return node;
    }
  finally {
      startingGrid.set(null);
    }
  }
 else   return startRemoteGrid(gridName,null,ctx);
}
