{
  return new IgniteClosure<Throwable,Throwable>(){
    @Override public Throwable apply(    Throwable e){
      if (e instanceof GridException || X.hasCause(e,ClusterTopologyException.class)) {
        info("Discarding exception: " + e);
        return null;
      }
 else       return e;
    }
  }
;
}
