{
  AffinityTopologyVersion topVer=cctx.mvcc().lastExplicitLockTopologyVersion(threadId);
  if (topVer == null && tx != null && tx.system()) {
    IgniteInternalTx tx0=cctx.tm().anyActiveThreadTx(Thread.currentThread().getId(),tx);
    if (tx0 != null)     topVer=tx0.topologyVersionSnapshot();
  }
  if (topVer != null && tx != null)   tx.topologyVersion(topVer);
  if (topVer == null && tx != null)   topVer=tx.topologyVersionSnapshot();
  if (topVer != null) {
    for (    GridDhtTopologyFuture fut : cctx.shared().exchange().exchangeFutures()) {
      if (fut.topologyVersion().equals(topVer)) {
        Throwable err=fut.validateCache(cctx);
        if (err != null) {
          onDone(err);
          return;
        }
        break;
      }
    }
synchronized (this) {
      if (this.topVer == null)       this.topVer=topVer;
    }
    map(keys,false,true);
    markInitialized();
    return;
  }
  mapOnTopology(false,null);
}
