{
  Thread.sleep(50);
  for (  Ignite g : alive) {
    if (g.configuration().getDiscoverySpi() instanceof TcpClientDiscoverySpi)     ((TcpClientDiscoverySpi)g.configuration().getDiscoverySpi()).waitForMessagePrecessed();
    Thread.sleep(500);
    while (g.cluster().nodes().size() != nodesCnt)     Thread.sleep(10);
  }
}
