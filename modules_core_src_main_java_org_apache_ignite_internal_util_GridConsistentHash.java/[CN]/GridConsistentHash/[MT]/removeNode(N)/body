{
  if (node == null)   return false;
  rw.writeLock().lock();
  try {
    if (!nodes.remove(node))     return false;
    for (Iterator<SortedSet<N>> it=circle.values().iterator(); it.hasNext(); ) {
      SortedSet<N> set=it.next();
      if (!set.remove(node))       continue;
      if (set.isEmpty())       it.remove();
    }
    return true;
  }
  finally {
    rw.writeLock().unlock();
  }
}
