{
  off=fieldOffset(fieldId);
  if (off >= 0) {
    byte flag=doReadByte(false);
    if (flag == NULL)     return null;
    if (flag == HANDLE)     return readHandleField();
    if (flag != CHAR_ARR)     throw new PortableException("Invalid flag value: " + flag);
    return doReadCharArray(false);
  }
 else   return null;
}
