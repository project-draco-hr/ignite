{
  IgniteConfiguration cfg=super.getConfiguration(gridName);
  ((TcpDiscoverySpi)cfg.getDiscoverySpi()).setIpFinder(ipFinder);
  Boolean clientMode=client.get();
  if (clientMode != null) {
    cfg.setClientMode(clientMode);
    client.remove();
  }
  cfg.setConsistentId(gridName);
  return cfg;
}
